@{
    ViewData["Title"] = "System Logs";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                <i class="fas fa-history me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted">View system activity and error logs</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-modern">
                <div class="card-header">
                    <h5 class="mb-0">System Logs</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Timestamp</th>
                                <th>Level</th>
                                <th>Message</th>
                                <th>User</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@DateTime.Now.AddHours(-1).ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td><span class="badge bg-info">INFO</span></td>
                                <td>System started successfully</td>
                                <td>System</td>
                            </tr>
                            <tr>
                                <td>@DateTime.Now.AddHours(-2).ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td><span class="badge bg-warning">WARNING</span></td>
                                <td>High memory usage detected</td>
                                <td>System</td>
                            </tr>
                            <tr>
                                <td>@DateTime.Now.AddHours(-3).ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td><span class="badge bg-danger">ERROR</span></td>
                                <td>Failed to send email notification</td>
                                <td>System</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>