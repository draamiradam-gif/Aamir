@{
    ViewData["Title"] = "System Settings";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">
        <i class="fas fa-cogs me-2"></i>System Settings
    </h1>

    <div class="card shadow">
        <div class="card-body">
            <form>
                <!-- General Settings -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">
                        <i class="fas fa-sliders-h me-2"></i>General Settings
                    </h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">System Name</label>
                            <input type="text" class="form-control" value="AcademicPro Management System">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Default Theme</label>
                            <select class="form-select">
                                <option value="dark" selected>Dark</option>
                                <option value="light">Light</option>
                                <option value="blue">Ocean</option>
                                <option value="green">Forest</option>
                                <option value="purple">Royal</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Security Settings -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">
                        <i class="fas fa-shield-alt me-2"></i>Security Settings
                    </h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label">Require strong passwords</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label">Enable two-factor authentication</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="text-end">
                    <button type="reset" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>