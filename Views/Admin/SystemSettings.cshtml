@{
    ViewData["Title"] = "System Settings";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="fas fa-cogs me-2"></i>System Settings
        </h1>
        <div class="btn-group">
            <button type="button" class="btn btn-primary" id="saveSettings">
                <i class="fas fa-save me-2"></i>Save Changes
            </button>
            <button type="button" class="btn btn-outline-secondary" id="resetSettings">
                <i class="fas fa-undo me-2"></i>Reset
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Settings Categories -->
        <div class="col-md-3 mb-4">
            <div class="list-group" id="settingsMenu">
                <a href="#general" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                    <i class="fas fa-sliders-h me-2"></i>General
                </a>
                <a href="#academic" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-graduation-cap me-2"></i>Academic
                </a>
                <a href="#security" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-shield-alt me-2"></i>Security
                </a>
                <a href="#email" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-envelope me-2"></i>Email
                </a>
                <a href="#backup" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-database me-2"></i>Backup
                </a>
            </div>
        </div>

        <!-- Right Column - Settings Content -->
        <div class="col-md-9">
            <div class="tab-content">
                <!-- General Settings -->
                <div class="tab-pane fade show active" id="general">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i>General System Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">System Name</label>
                                    <input type="text" class="form-control" id="systemName"
                                           value="AcademicPro Management System">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Default Theme</label>
                                    <select class="form-select" id="defaultTheme">
                                        <option value="dark">Dark</option>
                                        <option value="light">Light</option>
                                        <option value="blue">Ocean</option>
                                        <option value="green">Forest</option>
                                        <option value="purple">Royal</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Timezone</label>
                                    <select class="form-select" id="timezone">
                                        <option value="UTC">UTC</option>
                                        <option value="EST">Eastern Time (EST)</option>
                                        <option value="CST">Central Time (CST)</option>
                                        <option value="PST">Pacific Time (PST)</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date Format</label>
                                    <select class="form-select" id="dateFormat">
                                        <option value="MM/dd/yyyy">MM/DD/YYYY</option>
                                        <option value="dd/MM/yyyy">DD/MM/YYYY</option>
                                        <option value="yyyy-MM-dd">YYYY-MM-DD</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Academic Settings -->
                <div class="tab-pane fade" id="academic">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-graduation-cap me-2"></i>Academic Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Grading Scale</label>
                                <select class="form-select" id="gradingScale">
                                    <option value="percentage">Percentage (0-100%)</option>
                                    <option value="letter">Letter Grades (A-F)</option>
                                    <option value="gpa">GPA Scale (0.0-4.0)</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Minimum Passing Grade</label>
                                <input type="number" class="form-control" id="passingGrade" value="50" min="0" max="100">
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="allowLateRegistration">
                                <label class="form-check-label">Allow late course registration</label>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="autoEnrollment" checked>
                                <label class="form-check-label">Enable automatic enrollment for prerequisites</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Security Settings -->
                <div class="tab-pane fade" id="security">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Security Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Password Policy</label>
                                <select class="form-select" id="passwordPolicy">
                                    <option value="basic">Basic (6+ characters)</option>
                                    <option value="medium">Medium (8+ chars, mix letters/numbers)</option>
                                    <option value="strong">Strong (10+ chars, mix case, numbers, symbols)</option>
                                </select>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="require2FA">
                                <label class="form-check-label">Require two-factor authentication for admins</label>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="sessionTimeout" checked>
                                <label class="form-check-label">Enable automatic session timeout (30 minutes)</label>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Failed Login Attempts</label>
                                <input type="number" class="form-control" id="maxLoginAttempts" value="5" min="1" max="10">
                                <small class="text-muted">Lock account after this many failed attempts</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Email Settings -->
                <div class="tab-pane fade" id="email">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-envelope me-2"></i>Email Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">SMTP Server</label>
                                    <input type="text" class="form-control" id="smtpServer" value="smtp.gmail.com">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Port</label>
                                    <input type="number" class="form-control" id="smtpPort" value="587">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Sender Email</label>
                                    <input type="email" class="form-control" id="senderEmail" value="noreply@academicpro.edu">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Sender Name</label>
                                    <input type="text" class="form-control" id="senderName" value="AcademicPro System">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Backup Settings -->
                <div class="tab-pane fade" id="backup">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-database me-2"></i>Backup Settings</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Auto Backup Schedule</label>
                                <select class="form-select" id="backupSchedule">
                                    <option value="daily">Daily</option>
                                    <option value="weekly" selected>Weekly</option>
                                    <option value="monthly">Monthly</option>
                                    <option value="never">Never (Manual only)</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Backup Retention (days)</label>
                                <input type="number" class="form-control" id="backupRetention" value="30" min="1" max="365">
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="backupEmail" checked>
                                <label class="form-check-label">Send email notification after backup</label>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Backup Location</label>
                                <input type="text" class="form-control" id="backupLocation" value="/backups/">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Tab switching
            $('#settingsMenu a').on('click', function(e) {
                e.preventDefault();
                $(this).tab('show');
            });

            // Save settings
            $('#saveSettings').click(function() {
                const settings = {
                    general: {
                        systemName: $('#systemName').val(),
                        defaultTheme: $('#defaultTheme').val(),
                        timezone: $('#timezone').val(),
                        dateFormat: $('#dateFormat').val()
                    },
                    academic: {
                        gradingScale: $('#gradingScale').val(),
                        passingGrade: $('#passingGrade').val(),
                        allowLateRegistration: $('#allowLateRegistration').is(':checked'),
                        autoEnrollment: $('#autoEnrollment').is(':checked')
                    },
                    security: {
                        passwordPolicy: $('#passwordPolicy').val(),
                        require2FA: $('#require2FA').is(':checked'),
                        sessionTimeout: $('#sessionTimeout').is(':checked'),
                        maxLoginAttempts: $('#maxLoginAttempts').val()
                    },
                    email: {
                        smtpServer: $('#smtpServer').val(),
                        smtpPort: $('#smtpPort').val(),
                        senderEmail: $('#senderEmail').val(),
                        senderName: $('#senderName').val()
                    },
                    backup: {
                        backupSchedule: $('#backupSchedule').val(),
                        backupRetention: $('#backupRetention').val(),
                        backupEmail: $('#backupEmail').is(':checked'),
                        backupLocation: $('#backupLocation').val()
                    }
                };

                // Save to localStorage (in real app, save to server)
                localStorage.setItem('systemSettings', JSON.stringify(settings));

                showToast('Settings saved successfully!', 'success');
            });

            // Reset settings
            $('#resetSettings').click(function() {
                if (confirm('Reset all settings to defaults?')) {
                    localStorage.removeItem('systemSettings');
                    location.reload();
                }
            });

            // Load saved settings
            const savedSettings = localStorage.getItem('systemSettings');
            if (savedSettings) {
                const settings = JSON.parse(savedSettings);
                // Apply settings to form (simplified)
                if (settings.general) {
                    $('#defaultTheme').val(settings.general.defaultTheme || 'dark');
                }
            }

            // Toast function
            function showToast(message, type = 'info') {
                const toast = $(`
                    <div class="toast toast-${type}" style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
                        <div class="toast-content">${message}</div>
                    </div>
                `);
                $('body').append(toast);
                setTimeout(() => toast.remove(), 3000);
            }
        });
    </script>
}