@{
    ViewData["Title"] = "Admin Login";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-center py-3">
                    <h4 class="mb-0"><i class="fas fa-users-cog me-2"></i>Admin Portal Login</h4>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                        <p class="text-muted">Use your admin credentials to access the system</p>
                    </div>

                    <div class="d-grid gap-3">
                        <!-- This is the CORRECT way to link to Identity login -->
                        <a href="/Identity/Account/Login?ReturnUrl=/AdminManagement"
                           class="btn btn-warning btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login to Admin Portal
                        </a>

                        <a href="@Url.Action("PortalAccess", "Home")"
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Portal Selection
                        </a>
                    </div>

                    <!-- Quick test credentials -->
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-center mb-3">Test Credentials</h6>
                        <div class="small text-center">
                            <div><strong>Email:</strong> superadmin@localhost</div>
                            <div><strong>Password:</strong> SuperAdmin123!</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>