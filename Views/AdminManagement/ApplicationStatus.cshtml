@model List<AdminApplicationViewModel>
@{
    ViewData["Title"] = "My Application Status";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-clipboard-check me-2"></i>My Application Status</h1>
        <a href="@Url.Action("Apply")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Application
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card card-modern">
            <div class="card-body text-center py-5">
                <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                <h4>No Applications Found</h4>
                <p class="text-muted">You haven't submitted any admin applications yet.</p>
                <a href="@Url.Action("Apply")" class="btn btn-primary mt-3">
                    <i class="fas fa-plus me-2"></i>Apply for Admin Access
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card card-modern">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-modern">
                        <thead>
                            <tr>
                                <th>Applied Date</th>
                                <th>Requested Role</th>
                                <th>Scope</th>
                                <th>Status</th>
                                <th>Review Date</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var application in Model)
                            {
                                <tr>
                                    <td>@application.AppliedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <strong>@application.AppliedAdminTypeName</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(application.UniversityName))
                                        {
                                            <small>@application.UniversityName</small>
                                
                                            <br>
                                        }
                                        @if (!string.IsNullOrEmpty(application.FacultyName))
                                        {
                                            <small>@application.FacultyName</small>
                                
                                            <br>
                                        }
                                        @if (!string.IsNullOrEmpty(application.DepartmentName))
                                        {
                                            <small>@application.DepartmentName</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="@application.StatusBadgeClass">@application.Status</span>
                                    </td>
                                    <td>
                                        @if (application.ReviewedDate.HasValue)
                                        {
                                            @application.ReviewedDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(application.ReviewNotes))
                                        {
                                            <small>@application.ReviewNotes</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No notes</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>