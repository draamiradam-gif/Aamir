                var selectedIds = $('.row-checkbox:checked:not(:disabled)').map(function() {
                    return $(this).val();
                }).get();
                
                if (selectedIds.length === 0) {
                    showToast('warning', 'Please select at least one admin.');
                    return;
                }
                
                var actionText = action === 'delete' ? 'delete' : action;
                var actionDisplay = action === 'activate' ? 'activate' : 
                                   action === 'deactivate' ? 'deactivate' : 'delete';
                
                if (confirm(`Are you sure you want to ${actionDisplay} ${selectedIds.length} selected admin(s)?`)) {
                    $.ajax({
                        url: '@Url.Action("BulkAction", "AdminManagement")',
                        type: 'POST',
                        data: {
                            adminIds: selectedIds,
                            action: action
