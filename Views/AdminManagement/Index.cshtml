            function updateBulkButtons() {
                var hasSelectableRows = $('.row-checkbox:not(:disabled)').length > 0;
                $('#bulkActivateBtn, #bulkDeactivateBtn, #bulkDeleteBtn').prop('disabled', !hasSelectableRows);
            }
            
