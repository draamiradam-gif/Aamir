@model StudentManagementSystem.Models.AdminApplication
@{
    ViewData["Title"] = "Apply for Admin Access";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-modern">
                <div class="card-header text-center">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-user-shield me-2"></i>Admin Access Application
                    </h1>
                    <p class="text-muted mb-0">Request administrative privileges for the AcademicPro system</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Apply">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ApplicantName" class="form-label">Full Name *</label>
                                <input asp-for="ApplicantName" class="form-control" required>
                                <span asp-validation-for="ApplicantName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email Address *</label>
                                <input asp-for="Email" type="email" class="form-control" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone Number *</label>
                            <input asp-for="Phone" class="form-control" required>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppliedAdminType" class="form-label">Requested Admin Type *</label>
                            <select asp-for="AppliedAdminType" class="form-select" required>
                                <option value="">Select admin type...</option>
                                <option value="@AdminType.UniversityAdmin">University Admin</option>
                                <option value="@AdminType.FacultyAdmin">Faculty Admin</option>
                                <option value="@AdminType.DepartmentAdmin">Department Admin</option>
                                <option value="@AdminType.FinanceAdmin">Finance Admin</option>
                                <option value="@AdminType.StudentAdmin">Student Admin</option>
                                <option value="@AdminType.CustomAdmin">General Admin</option>
                            </select>
                            <small class="form-text text-muted">
                                Select the type of administrative access you're requesting
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Justification" class="form-label">Justification for Access *</label>
                            <textarea asp-for="Justification" class="form-control" rows="4" required
                                      placeholder="Please explain why you need admin access..."></textarea>
                            <span asp-validation-for="Justification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Experience" class="form-label">Relevant Experience (Optional)</label>
                            <textarea asp-for="Experience" class="form-control" rows="3"
                                      placeholder="Describe your relevant experience..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Qualifications" class="form-label">Qualifications (Optional)</label>
                            <textarea asp-for="Qualifications" class="form-control" rows="3"
                                      placeholder="List your qualifications..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Your application will be reviewed by a Super Administrator. You'll be notified via email once a decision is made.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-modern">
                                <i class="fas fa-paper-plane me-2"></i>Submit Application
                            </button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}