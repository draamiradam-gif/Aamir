@{
    ViewData["Title"] = "Application Submitted";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-modern text-center">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-4x text-success"></i>
                    </div>

                    <h1 class="h3 mb-3">Application Submitted Successfully!</h1>

                    <p class="text-muted mb-4">
                        Your admin access application has been received. A Super Administrator will review
                        your request and you'll be notified via email once a decision is made.
                    </p>

                    <div class="alert alert-info text-start">
                        <h5 class="alert-heading"><i class="fas fa-clock me-2"></i>What happens next?</h5>
                        <ul class="mb-0">
                            <li>Your application will be reviewed within 1-3 business days</li>
                            <li>You'll receive an email notification once reviewed</li>
                            <li>If approved, you'll receive instructions on accessing the admin portal</li>
                            <li>If you have questions, contact the system administrator</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-modern">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                        <a href="@Url.Action("Apply", "Applications")" class="btn btn-outline-primary ms-2">
                            <i class="fas fa-plus me-2"></i>Submit Another Application
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>