@model IEnumerable<Branch>
@{
    ViewData["Title"] = "Branches";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-code-branch me-2"></i>Academic Branches
            </h1>
            <p class="text-muted mb-0">Manage academic branches and specializations</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Branch
        </a>
    </div>
</div>

<div class="card-university card">
    <div class="card-header bg-white py-3">
        <h5 class="card-title mb-0 text-dark">
            <i class="fas fa-sitemap me-2"></i>Branch Directory
        </h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-code-branch fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Branches Found</h4>
                <p class="text-muted">Get started by creating your first branch.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus me-2"></i>Create Branch
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="branchesTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Branch</th>
                            <th>Department & College</th>
                            <th>Parent Branch</th>
                            <th class="text-center">Sub-Branches</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var branch in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas @(branch.ParentBranchId == null ? "fa-code-branch text-primary" : "fa-level-down-alt text-info") fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-semibold">@branch.Name</h6>
                                            <small class="text-muted">Code: @branch.BranchCode</small>
                                            @if (!string.IsNullOrEmpty(branch.Description))
                                            {
                                                <p class="mb-0 small text-muted">@branch.Description</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>@branch.Department?.Name</strong>
                                        <br>
                                        <small class="text-muted">@branch.Department?.College?.Name</small>
                                        <br>
                                        <small class="text-muted">@branch.Department?.College?.University?.Name</small>
                                    </div>
                                </td>
                                <td>
                                    @if (branch.ParentBranch != null)
                                    {
                                        <span class="badge bg-info">@branch.ParentBranch.Name</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Main Branch</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success fs-6">@branch.SubBranches.Count</span>
                                </td>
                                <td>
                                    <span class="badge @(branch.IsActive ? "bg-success" : "bg-secondary")">
                                        @(branch.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <!-- Branch Name as clickable link -->
                                        <a asp-action="Details" asp-route-id="@branch.Id"
                                           class="btn btn-sm btn-outline-primary text-start" title="View Branch Details">
                                            <i class="fas fa-eye me-1"></i>@branch.Name
                                        </a>
                                        <div class="d-flex justify-content-center gap-1">
                                            <a asp-action="ManageSubBranches" asp-route-id="@branch.Id"
                                               class="btn btn-sm btn-outline-success" title="Manage Sub-Branches">
                                                <i class="fas fa-sitemap"></i>
                                            </a>
                                            @if (branch.ParentBranchId == null)
                                            {
                                                <a asp-action="Create" asp-route-parentBranchId="@branch.Id"
                                                   class="btn btn-sm btn-outline-info" title="Add Sub-Branch">
                                                    <i class="fas fa-plus-circle"></i>
                                                </a>
                                            }
                                            <a asp-controller="Semesters" asp-action="Create" asp-route-branchId="@branch.Id"
                                               class="btn btn-sm btn-outline-warning" title="Add Semester">
                                                <i class="fas fa-calendar-plus"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@branch.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Duplicate" asp-route-id="@branch.Id"
                                               class="btn btn-sm btn-outline-warning" title="Duplicate">
                                                <i class="fas fa-copy"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@branch.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#branchesTable').DataTable({
                "pageLength": 25,
                "responsive": true,
                "order": [[0, 'asc']],
                "columnDefs": [
                    { "orderable": false, "targets": [5] } // Make actions column not sortable
                ]
            });
        });
    </script>
}