@model StudentManagementSystem.Models.College

@{
    ViewData["Title"] = "Create College";
}

@if (ViewBag.ParentUniversity != null)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Creating college for: <strong>@ViewBag.ParentUniversity.Name</strong>
    </div>
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-plus-circle me-2"></i>Create College
            </h1>
            <p class="text-muted mb-0">Add a new college to the university structure</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-info-circle me-2"></i>College Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">College Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter college name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CollegeCode" class="form-label fw-semibold">College Code *</label>
                            <input asp-for="CollegeCode" class="form-control" placeholder="Enter college code">
                            <span asp-validation-for="CollegeCode" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter college description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UniversityId" class="form-label fw-semibold">University *</label>
                            <select asp-for="UniversityId" class="form-select" asp-items="ViewBag.Universities">
                                <option value="">-- Select University --</option>
                            </select>
                            <span asp-validation-for="UniversityId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch mt-4">
                                <input asp-for="IsActive" class="form-check-input" checked role="switch">
                                <label asp-for="IsActive" class="form-check-label fw-semibold">Active College</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 pt-3 border-top">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i>Create College
                        </button>
                        <button type="reset" class="btn btn-outline-secondary">
                            <i class="fas fa-undo me-2"></i>Reset
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-lightbulb me-2"></i>College Information
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info border-0">
                    <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>About Colleges</h6>
                    <ul class="mb-0 small">
                        <li>Colleges are the main academic divisions within a university</li>
                        <li>Each college can have multiple departments</li>
                        <li>Examples: College of Engineering, College of Medicine</li>
                        <li>Colleges organize related academic programs and departments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}