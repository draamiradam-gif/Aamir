@model StudentManagementSystem.Models.College
@{
    ViewData["Title"] = "Delete College";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-danger mb-2">
                <i class="fas fa-trash me-2"></i>Delete College
            </h1>
            <p class="text-muted mb-0">Confirm deletion of college</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle me-2"></i>Warning!
    </h4>
    <p class="mb-0">Are you sure you want to delete this college? This action cannot be undone.</p>
</div>

<div class="card-university card">
    <div class="card-header bg-white py-3">
        <h5 class="card-title mb-0 text-dark">
            <i class="fas fa-info-circle me-2"></i>College Information
        </h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">College Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">College Code</dt>
            <dd class="col-sm-9">@Model.CollegeCode</dd>

            <dt class="col-sm-3">University</dt>
            <dd class="col-sm-9">@Model.University?.Name</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            <dt class="col-sm-3">Departments</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.Departments.Count departments</span>
            </dd>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            }
        </dl>

        @if (Model.Departments.Any())
        {
            <div class="alert alert-warning">
                <h6 class="alert-heading">
                    <i class="fas fa-exclamation-circle me-2"></i>Cannot Delete College
                </h6>
                <p class="mb-0">This college has <strong>@Model.Departments.Count</strong> associated departments. You must delete all departments before you can delete this college.</p>
            </div>
        }
    </div>
</div>

@if (!Model.Departments.Any())
{
    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Delete College
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
}
else
{
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
}