@model IEnumerable<StudentManagementSystem.Models.College>
@{
    ViewData["Title"] = "Colleges Management";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-school me-2"></i>Colleges
            </h1>
            <p class="text-muted mb-0">Manage colleges and their departments</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add College
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card-university card">
    <div class="card-header bg-white py-3">
        <h5 class="card-title mb-0 text-dark">
            <i class="fas fa-list me-2"></i>College Directory
        </h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-school fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Colleges Found</h4>
                <p class="text-muted">Get started by creating your first college.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus me-2"></i>Create College
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="collegesTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>College Information</th>
                            <th>University</th>
                            <th class="text-center">Departments</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-school text-primary fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-semibold">@item.Name</h6>
                                            <small class="text-muted">Code: @item.CollegeCode</small>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <p class="mb-0 small text-muted">@item.Description</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong>@item.University?.Name</strong>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary fs-6">@item.DepartmentCount</span>
                                </td>
                                <td>
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex flex-column gap-1">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary text-start" title="View Details">
                                            <i class="fas fa-eye me-1"></i>@item.Name
                                        </a>
                                        <div class="d-flex justify-content-center gap-1">
                                            <a asp-controller="Departments" asp-action="Create" asp-route-collegeId="@item.Id"
                                               class="btn btn-sm btn-outline-success" title="Add Department">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Duplicate" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-warning" title="Duplicate">
                                                <i class="fas fa-copy"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-controller="University" asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Universities
    </a>
    <a asp-controller="University" asp-action="StructureOverview" class="btn btn-outline-info">
        <i class="fas fa-sitemap me-2"></i>Structure Overview
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#collegesTable').DataTable({
                "pageLength": 25,
                "responsive": true,
                "order": [[0, 'asc']],
                "columnDefs": [
                    { "orderable": false, "targets": [4] } // Make actions column not sortable
                ]
            });
        });
    </script>
}