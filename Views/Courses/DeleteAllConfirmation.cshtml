@{
    ViewData["Title"] = "Confirm Delete All Courses";
    var totalCourses = ViewBag.TotalCourses;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-radiation text-danger me-2"></i>Confirm Delete All Courses
        </h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Danger Zone
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-radiation me-2"></i>Extreme Caution Required</h6>
                        <p class="mb-2">You are about to delete <strong>ALL @totalCourses courses</strong> from the system!</p>
                        <p class="mb-0">This action will permanently remove all course records and cannot be undone.</p>
                    </div>

                    <div class="alert alert-warning">
                        <h6><i class="fas fa-warning me-2"></i>Impact of This Action</h6>
                        <ul class="mb-0">
                            <li>All course data will be permanently deleted</li>
                            <li>All course prerequisites will be removed</li>
                            <li>All enrollment records will be deleted</li>
                            <li>This action cannot be reversed</li>
                        </ul>
                    </div>

                    <form asp-action="DeleteAllConfirmed" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label text-danger fw-bold" for="confirmDelete">
                                I understand that this action cannot be undone and I accept full responsibility
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="fas fa-broom me-1"></i>Delete All @totalCourses Courses
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmDelete').addEventListener('change', function() {
            document.getElementById('deleteBtn').disabled = !this.checked;
        });
    </script>
}