@model StudentManagementSystem.Models.Course
@{
    ViewData["Title"] = "Course Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-book me-2"></i>Course Details
        </h2>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Edit Course
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Course Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Course Code:</strong></td>
                                    <td>@Model.CourseCode</td>
                                </tr>
                                <tr>
                                    <td><strong>Course Name:</strong></td>
                                    <td>@Model.CourseName</td>
                                </tr>
                                <tr>
                                    <td><strong>Credits:</strong></td>
                                    <td><span class="badge bg-info">@Model.Credits</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Department:</strong></td>
                                    <td>@Model.Department</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Semester:</strong></td>
                                    <td>@Model.SemesterDisplay</td>
                                </tr>
                                <tr>
                                    <td><strong>Grade Level:</strong></td>
                                    <td>Grade @Model.GradeLevel</td>
                                </tr>
                                <tr>
                                    <td><strong>Max Students:</strong></td>
                                    <td>@Model.MaxStudents</td>
                                </tr>
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                        @if (!Model.HasAvailableSeats)
                                        {
                                            <span class="badge bg-warning ms-1">Full</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-3">
                            <strong>Description:</strong>
                            <p class="mt-1">@Model.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.PrerequisitesString))
                    {
                        <div class="mt-3">
                            <strong>Prerequisites:</strong>
                            <div class="mt-1">
                                @foreach (var prereq in Model.PrerequisitesString.Split(',').Select(p => p.Trim()).Where(p => !string.IsNullOrEmpty(p)))
                                {
                                    <span class="badge bg-secondary me-1">@prereq</span>
                                }
                            </div>
                        </div>
                    }

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <strong>Requirements:</strong>
                            <ul class="mt-1">
                                <li>Minimum GPA: @(string.Format("{0:0.00}", Model.MinGPA))</li>
                                <li>Minimum Passed Hours: @Model.MinPassedHours</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <strong>Enrollment:</strong>
                            <ul class="mt-1">
                                <li>Current Enrollment: @Model.CurrentEnrollment</li>
                                <li>Available Seats: @(Model.MaxStudents - Model.CurrentEnrollment)</li>
                                <li>Capacity: @Model.MaxStudents students</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Enroll", new { id = Model.Id })" class="btn btn-success">
                            <i class="fas fa-user-plus me-1"></i>Manage Enrollment
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Edit Course
                        </a>
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-1"></i>Delete Course
                        </button>
                    </div>
                </div>
            </div>

            <!-- Enrollment Progress -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Enrollment Progress</h6>
                </div>
                <div class="card-body">
                    @{
                        var enrollmentPercentage = Model.MaxStudents > 0 ?
                        (int)((Model.CurrentEnrollment * 100.0) / Model.MaxStudents) : 0;
                    }
                    <div class="progress mb-2" style="height: 20px;">
                        <div class="progress-bar @(enrollmentPercentage >= 90 ? "bg-danger" : enrollmentPercentage >= 70 ? "bg-warning" : "bg-success")"
                             style="width: @enrollmentPercentage%"
                             role="progressbar"
                             aria-valuenow="@enrollmentPercentage"
                             aria-valuemin="0"
                             aria-valuemax="100">
                            @enrollmentPercentage%
                        </div>
                    </div>
                    <small class="text-muted">
                        @Model.CurrentEnrollment out of @Model.MaxStudents students enrolled
                        (@(Model.MaxStudents - Model.CurrentEnrollment) seats available)
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the course <strong>@Model.CourseName</strong>?</p>
                <p class="text-danger">
                    <i class="fas fa-exclamation-circle me-1"></i>
                    This action cannot be undone. All course data will be permanently deleted.
                </p>
                @if (Model.CurrentEnrollment > 0)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-warning me-2"></i>
                        This course has @Model.CurrentEnrollment active enrollment(s). Deleting it will remove all enrollment records.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete Course</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .progress {
            background-color: #e9ecef;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Confirm before unenrolling
            $('form[asp-action="UnenrollStudent"]').on('submit', function (e) {
                if (!confirm('Are you sure you want to unenroll this student?')) {
                    e.preventDefault();
                }
            });
        });


        });
    </script>
}
