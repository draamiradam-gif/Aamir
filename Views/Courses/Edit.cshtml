@model StudentManagementSystem.Models.Course
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-edit me-2"></i>Edit Course
        </h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">Course Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CourseCode" class="form-label">Course Code *</label>
                            <input asp-for="CourseCode" class="form-control" />
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseName" class="form-label">Course Name *</label>
                            <input asp-for="CourseName" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Credits" class="form-label">Credits *</label>
                            <input asp-for="Credits" class="form-control" />
                            <span asp-validation-for="Credits" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department" class="form-label">Department *</label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SemesterId" class="form-label">Semester *</label>
                            <select asp-for="SemesterId" class="form-select" asp-items="ViewBag.Semesters">
                                <option value="">-- Select Semester --</option>
                            </select>
                            <span asp-validation-for="SemesterId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxStudents" class="form-label">Max Students</label>
                            <input asp-for="MaxStudents" class="form-control" />
                            <span asp-validation-for="MaxStudents" class="text-danger"></span>
                        </div>

                        <!-- OPTIONAL FIELDS -->
                        <div class="mb-3">
                            <label asp-for="MinGPA" class="form-label">Minimum GPA (Optional)</label>
                            <input asp-for="MinGPA" class="form-control" type="number" step="0.01" min="0" max="4" />
                            <span asp-validation-for="MinGPA" class="text-danger"></span>
                            <div class="form-text">Leave empty if no GPA requirement</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MinPassedHours" class="form-label">Minimum Passed Hours (Optional)</label>
                            <input asp-for="MinPassedHours" class="form-control" type="number" min="0" />
                            <span asp-validation-for="MinPassedHours" class="text-danger"></span>
                            <div class="form-text">Leave empty if no hours requirement</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrerequisitesString" class="form-label">Prerequisites</label>
                            <input asp-for="PrerequisitesString" class="form-control" />
                            <span asp-validation-for="PrerequisitesString" class="text-danger"></span>
                            <div class="form-text">Enter prerequisite course codes separated by commas (e.g., "CS101,MATH201")</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active Course</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Update Course
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Clear optional fields if they contain 0
            $('#MinGPA').on('blur', function() {
                if ($(this).val() === '0' || $(this).val() === '0.00') {
                    $(this).val('');
                }
            });

            $('#MinPassedHours').on('blur', function() {
                if ($(this).val() === '0') {
                    $(this).val('');
                }
            });
        });
    </script>
}