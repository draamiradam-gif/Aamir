@model StudentManagementSystem.Models.Course
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Course: @Model.CourseCode
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CourseCode" class="form-label"></label>
                                    <input asp-for="CourseCode" class="form-control" />
                                    <span asp-validation-for="CourseCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Credits" class="form-label"></label>
                                    <input asp-for="Credits" class="form-control" min="1" max="6" />
                                    <span asp-validation-for="Credits" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CourseName" class="form-label"></label>
                            <input asp-for="CourseName" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="6" 
                                      placeholder="Enter course description (max 5000 characters)"
                                      maxlength="5000"></textarea>
                            <div class="form-text">
                                <span id="descriptionCounter">0</span> / 5000 characters
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Department" class="form-label"></label>
                                    <input asp-for="Department" class="form-control" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Semester" class="form-label"></label>
                                    <select asp-for="Semester" class="form-control">
                                        @for (int i = 1; i <= 8; i++)
                                        {
                                            <option value="@i">Semester @i</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Semester" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MaxStudents" class="form-label"></label>
                                    <input asp-for="MaxStudents" class="form-control" min="1" max="1000" />
                                    <span asp-validation-for="MaxStudents" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MinGPA" class="form-label"></label>
                                    <input asp-for="MinGPA" class="form-control" step="0.1" min="0" max="4.0" />
                                    <span asp-validation-for="MinGPA" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MinPassedHours" class="form-label"></label>
                                    <input asp-for="MinPassedHours" class="form-control" min="0" />
                                    <span asp-validation-for="MinPassedHours" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Status</label>
                                    <div class="form-check mt-2">
                                        <input asp-for="IsActive" class="form-check-input" />
                                        <label asp-for="IsActive" class="form-check-label">Active Course</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- PREREQUISITES SECTION -->
                        <div class="card mb-3">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-list-ol"></i> Course Prerequisites
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">Select Prerequisites (Courses that must be completed before this course)</label>
                                    <div class="prerequisites-list" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; border-radius: 4px;">
                                        @if (ViewBag.AvailableCourses != null)
                                        {
                                            var availableCourses = ViewBag.AvailableCourses as List<StudentManagementSystem.Models.Course>;
                                            @if (availableCourses != null && availableCourses.Any())
                                            {
                                                foreach (var courseItem in availableCourses)
                                                {
                                                    <div class="form-check mb-2">
                                                        <input class="form-check-input" type="checkbox"
                                                               name="SelectedPrerequisiteIds"
                                                               value="@courseItem.Id"
                                                               id="prereq_@courseItem.Id"
                                                               @(Model.SelectedPrerequisiteIds != null && Model.SelectedPrerequisiteIds.Contains(courseItem.Id) ? "checked" : "")>
                                                        <label class="form-check-label" for="prereq_@courseItem.Id">
                                                            <strong>@courseItem.CourseCode</strong> - @courseItem.CourseName
                                                            @if (!string.IsNullOrEmpty(courseItem.Department))
                                                            {
                                                                <span class="text-muted">(@courseItem.Department - Semester @courseItem.Semester)</span>
                                                            }
                                                        </label>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-muted">No other courses available for prerequisites.</p>
                                            }
                                        }
                                        else
                                        {
                                            <p class="text-muted">Loading available courses...</p>
                                        }
                                    </div>
                                    <small class="form-text text-muted">Students must complete all selected prerequisite courses before enrolling in this course.</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Update Course
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>

    <script>
    // Character counter for description
    document.addEventListener('DOMContentLoaded', function() {
        const descriptionTextarea = document.querySelector('textarea[name="Description"]');
        const counter = document.getElementById('descriptionCounter');
        
        if (descriptionTextarea && counter) {
            // Update counter on load
            counter.textContent = descriptionTextarea.value.length;
            
            // Update counter on input
            descriptionTextarea.addEventListener('input', function() {
                counter.textContent = this.value.length;
            });
        }
     });
    </script>
}