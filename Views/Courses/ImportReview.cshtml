@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Selection functionality
            const selectAllValid = document.getElementById('selectAllValid');
            const tableSelectAll = document.getElementById('tableSelectAll');
            const courseCheckboxes = document.querySelectorAll('.course-checkbox');
            const selectedCount = document.getElementById('selectedCount');
            const tableCount = document.getElementById('tableCount');
            const showingCount = document.getElementById('showingCount');
            const importCount = document.getElementById('importCount');

            // Bulk action buttons
            const selectAllBtn = document.getElementById('selectAllBtn');
            const deselectAllBtn = document.getElementById('deselectAllBtn');
            const selectValidBtn = document.getElementById('selectValidBtn');
            const selectWithErrorsBtn = document.getElementById('selectWithErrorsBtn');
            const importSelectedBtn = document.getElementById('importSelectedBtn');
            const removeSelectedBtn = document.getElementById('removeSelectedBtn');

            // Filter elements
            const quickSearch = document.getElementById('quickSearch');
            const departmentFilter = document.getElementById('departmentFilter');
            const creditsFilter = document.getElementById('creditsFilter');
            const filterValid = document.getElementById('filterValid');
            const filterInvalid = document.getElementById('filterInvalid');
            const applyFilters = document.getElementById('applyFilters');
            const resetFilters = document.getElementById('resetFilters');

            // Table controls
            const exportTableBtn = document.getElementById('exportTableBtn');
            const refreshTableBtn = document.getElementById('refreshTableBtn');
            const prevPageBtn = document.getElementById('prevPageBtn');
            const nextPageBtn = document.getElementById('nextPageBtn');

            let currentSort = { field: 'serial', direction: 'asc' };
            let currentPage = 1;
            const pageSize = 10;
            let filteredCourses = Array.from(document.querySelectorAll('.course-row'));

            // Selection functions
            function updateSelectedCount() {
                const selected = document.querySelectorAll('.course-checkbox:checked').length;
                if (selectedCount) {
                    selectedCount.textContent = selected + ' selected';
                }
            }

            function selectAll(select) {
                courseCheckboxes.forEach(checkbox => {
                    if (checkbox.closest('tr').style.display !== 'none') {
                        checkbox.checked = select;
                    }
                });
                updateSelectedCount();
            }

            function selectByType(type) {
                courseCheckboxes.forEach(checkbox => {
                    const row = checkbox.closest('tr');
                    const isValid = row.dataset.valid === 'true';

                    if (type === 'valid' && isValid) {
                        checkbox.checked = true;
                    } else if (type === 'invalid' && !isValid) {
                        checkbox.checked = true;
                    } else {
                        checkbox.checked = false;
                    }
                });
                updateSelectedCount();
            }

            // Event listeners for selection
            if (selectAllValid) {
                selectAllValid.addEventListener('change', function () {
                    selectAll(this.checked);
                });
            }

            if (tableSelectAll) {
                tableSelectAll.addEventListener('change', function () {
                    selectAll(this.checked);
                });
            }

            courseCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectedCount);
            });

            // Bulk action event listeners
            if (selectAllBtn) {
                selectAllBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    selectAll(true);
                });
            }

            if (deselectAllBtn) {
                deselectAllBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    selectAll(false);
                });
            }

            if (selectValidBtn) {
                selectValidBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    selectByType('valid');
                });
            }

            if (selectWithErrorsBtn) {
                selectWithErrorsBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    selectByType('invalid');
                });
            }

            // Filtering functionality
            function applyTableFilters() {
                const searchTerm = quickSearch?.value.toLowerCase() || '';
                const department = departmentFilter?.value || '';
                const credits = creditsFilter?.value || '';
                const showValid = filterValid?.checked || false;
                const showInvalid = filterInvalid?.checked || false;

                let visibleCount = 0;

                filteredCourses.forEach(row => {
                    const courseCode = row.cells[2]?.textContent?.toLowerCase() || '';
                    const courseName = row.cells[3]?.textContent?.toLowerCase() || '';
                    const dept = row.cells[4]?.textContent || '';
                    const rowCredits = row.dataset.credits || '';
                    const isValid = row.dataset.valid === 'true';

                    const matchesSearch = !searchTerm ||
                        courseCode.includes(searchTerm) ||
                        courseName.includes(searchTerm);
                    const matchesDept = !department || dept === department;
                    const matchesCredits = !credits || rowCredits === credits;
                    const matchesStatus = (isValid && showValid) || (!isValid && showInvalid);

                    const shouldShow = matchesSearch && matchesDept && matchesCredits && matchesStatus;
                    row.style.display = shouldShow ? '' : 'none';

                    if (shouldShow) visibleCount++;
                });

                if (showingCount) {
                    showingCount.textContent = visibleCount;
                }
                updatePagination();
            }

            // Sorting functionality
            function sortTable(field, direction) {
                const tbody = document.querySelector('#importTable tbody');
                if (!tbody) return;

                const rows = Array.from(tbody.querySelectorAll('.course-row'));

                rows.sort((a, b) => {
                    let aValue, bValue;

                    switch (field) {
                        case 'serial':
                            aValue = parseInt(a.cells[1]?.textContent) || 0;
                            bValue = parseInt(b.cells[1]?.textContent) || 0;
                            break;
                        case 'courseCode':
                            aValue = a.cells[2]?.textContent || '';
                            bValue = b.cells[2]?.textContent || '';
                            break;
                        case 'courseName':
                            aValue = a.cells[3]?.textContent || '';
                            bValue = b.cells[3]?.textContent || '';
                            break;
                        case 'department':
                            aValue = a.cells[4]?.textContent || '';
                            bValue = b.cells[4]?.textContent || '';
                            break;
                        case 'credits':
                            aValue = parseInt(a.dataset.credits) || 0;
                            bValue = parseInt(b.dataset.credits) || 0;
                            break;
                        case 'semester':
                            aValue = parseInt(a.dataset.semester) || 0;
                            bValue = parseInt(b.dataset.semester) || 0;
                            break;
                        default:
                            return 0;
                    }

                    if (direction === 'asc') {
                        return aValue < bValue ? -1 : aValue > bValue ? 1 : 0;
                    } else {
                        return aValue > bValue ? -1 : aValue < bValue ? 1 : 0;
                    }
                });

                // Reappend sorted rows
                rows.forEach(row => tbody.appendChild(row));

                // Update sort indicators
                updateSortIndicators(field, direction);
            }

            function updateSortIndicators(field, direction) {
                document.querySelectorAll('.sort-link').forEach(link => {
                    const icon = link.querySelector('i');
                    if (link.dataset.sort === field) {
                        icon.className = direction === 'asc' ? 'fas fa-sort-up ms-1' : 'fas fa-sort-down ms-1';
                    } else {
                        icon.className = 'fas fa-sort ms-1';
                    }
                });
            }

            // Pagination
            function updatePagination() {
                const visibleRows = filteredCourses.filter(row => row.style.display !== 'none');
                const totalPages = Math.ceil(visibleRows.length / pageSize);

                if (prevPageBtn) prevPageBtn.disabled = currentPage === 1;
                if (nextPageBtn) nextPageBtn.disabled = currentPage === totalPages;

                // Show/hide rows based on current page
                visibleRows.forEach((row, index) => {
                    const startIndex = (currentPage - 1) * pageSize;
                    const endIndex = startIndex + pageSize;
                    row.style.display = (index >= startIndex && index < endIndex) ? '' : 'none';
                });

                if (showingCount) {
                    showingCount.textContent = Math.min(visibleRows.length, currentPage * pageSize);
                }
            }

            // Event listeners for filters and sorting
            if (applyFilters) {
                applyFilters.addEventListener('click', applyTableFilters);
            }

            if (resetFilters) {
                resetFilters.addEventListener('click', function () {
                    if (quickSearch) quickSearch.value = '';
                    if (departmentFilter) departmentFilter.value = '';
                    if (creditsFilter) creditsFilter.value = '';
                    if (filterValid) filterValid.checked = true;
                    if (filterInvalid) filterInvalid.checked = false;
                    applyTableFilters();
                });
            }

            document.querySelectorAll('.sort-link').forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const field = this.dataset.sort;
                    const direction = currentSort.field === field && currentSort.direction === 'asc' ? 'desc' : 'asc';

                    currentSort = { field, direction };
                    sortTable(field, direction);
                });
            });

            // Pagination event listeners
            if (prevPageBtn) {
                prevPageBtn.addEventListener('click', function () {
                    if (currentPage > 1) {
                        currentPage--;
                        updatePagination();
                    }
                });
            }

            if (nextPageBtn) {
                nextPageBtn.addEventListener('click', function () {
                    const visibleRows = filteredCourses.filter(row => row.style.display !== 'none');
                    const totalPages = Math.ceil(visibleRows.length / pageSize);

                    if (currentPage < totalPages) {
                        currentPage++;
                        updatePagination();
                    }
                });
            }

            // Initialize
            updateSelectedCount();
            applyTableFilters();

            // View course details
            document.querySelectorAll('.view-course').forEach(btn => {
                btn.addEventListener('click', function () {
                    const row = this.closest('tr');
                    const courseCode = row.cells[2]?.textContent || '';
                    const courseName = row.cells[3]?.textContent || '';

                    const modalBody = document.getElementById('courseModalBody');
                    if (modalBody) {
                        modalBody.innerHTML = `
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Course Code:</strong> ${courseCode}
                                </div>
                                <div class="col-md-6">
                                    <strong>Course Name:</strong> ${courseName}
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <strong>Department:</strong> ${row.cells[4]?.textContent || ''}
                                </div>
                                <div class="col-md-6">
                                    <strong>Credits:</strong> ${row.cells[5]?.textContent || ''}
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <strong>Semester:</strong> ${row.cells[6]?.textContent || ''}
                                </div>
                            </div>
                        `;
                    }

                    const modalElement = document.getElementById('courseModal');
                    if (modalElement) {
                        const modal = new bootstrap.Modal(modalElement);
                        modal.show();
                    }
                });
            });

            // View error details
            document.querySelectorAll('.view-error').forEach(btn => {
                btn.addEventListener('click', function () {
                    const error = this.dataset.error || 'Unknown error';
                    alert('Error: ' + error);
                });
            });

            // Export functionality
            if (exportTableBtn) {
                exportTableBtn.addEventListener('click', function () {
                    // Implement export logic here
                    alert('Export functionality would be implemented here');
                });
            }

            // Refresh table
            if (refreshTableBtn) {
                refreshTableBtn.addEventListener('click', function () {
                    location.reload();
                });
            }
        });
    </script>
