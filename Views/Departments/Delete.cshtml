@model StudentManagementSystem.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Department</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this department?</h4>

                    <dl class="row mt-3">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Code</dt>
                        <dd class="col-sm-9">@Model.DepartmentCode</dd>

                        <dt class="col-sm-3">College</dt>
                        <dd class="col-sm-9">@Model.College?.Name</dd>

                        <dt class="col-sm-3">University</dt>
                        <dd class="col-sm-9">@Model.College?.University?.Name</dd>

                        <dt class="col-sm-3">Start Year</dt>
                        <dd class="col-sm-9">Year @Model.StartYear</dd>
                    </dl>

                    @if (Model.Branches.Any() || Model.Students.Any() || Model.Courses.Any())
                    {
                        <div class="alert alert-warning">
                            <strong>Warning!</strong> This department has:
                            <ul>
                                @if (Model.Branches.Any())
                                {
                                    <li>@Model.Branches.Count branches</li>
                                }
                                @if (Model.Students.Any())
                                {
                                    <li>@Model.Students.Count students</li>
                                }
                                @if (Model.Courses.Any())
                                {
                                    <li>@Model.Courses.Count courses</li>
                                }
                            </ul>
                            You must delete all associated items before deleting this department.
                        </div>
                    }

                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger"
                                    @(Model.Branches.Any() || Model.Students.Any() || Model.Courses.Any() ? "disabled" : "")>
                                Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>