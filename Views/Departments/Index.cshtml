@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-building me-2"></i>Academic Departments
            </h1>
            <p class="text-muted mb-0">Manage departments, branches, and academic programs</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Department
        </a>
    </div>
</div>

<div class="card-university card">
    <div class="card-header bg-white py-3">
        <h5 class="card-title mb-0 text-dark">
            <i class="fas fa-list me-2"></i>Department Directory
        </h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-building fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Departments Found</h4>
                <p class="text-muted">Get started by creating your first department.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus me-2"></i>Create Department
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="departmentsTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Department</th>
                            <th>College & University</th>
                            <th class="text-center">Branches</th>
                            <th class="text-center">Courses</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var department in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-building text-primary fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-semibold">@department.Name</h6>
                                            <small class="text-muted">Code: @department.DepartmentCode</small>
                                            @if (!string.IsNullOrEmpty(department.Description))
                                            {
                                                <p class="mb-0 small text-muted">@department.Description</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>@department.College?.Name</strong>
                                        <br>
                                        <small class="text-muted">@department.College?.University?.Name</small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary fs-6">@department.Branches.Count</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info fs-6">@department.Courses.Count</span>
                                </td>
                                <td>
                                    <span class="badge @(department.IsActive ? "bg-success" : "bg-secondary")">
                                        @(department.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <!-- Department Name as clickable link -->
                                        <a asp-action="Details" asp-route-id="@department.Id"
                                           class="btn btn-sm btn-outline-primary text-start" title="View Department Details">
                                            <i class="fas fa-eye me-1"></i>@department.Name
                                        </a>
                                        <div class="d-flex justify-content-center gap-1">
                                            <a asp-controller="Branches" asp-action="Create" asp-route-departmentId="@department.Id"
                                               class="btn btn-sm btn-outline-success" title="Add Branch">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@department.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="ManageBranches" asp-route-id="@department.Id"
                                               class="btn btn-sm btn-outline-info" title="Manage Branches">
                                                <i class="fas fa-code-branch"></i>
                                            </a>
                                            <a asp-action="Duplicate" asp-route-id="@department.Id"
                                               class="btn btn-sm btn-outline-warning" title="Duplicate">
                                                <i class="fas fa-copy"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@department.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#departmentsTable').DataTable({
                "pageLength": 25,
                "responsive": true,
                "order": [[0, 'asc']],
                "columnDefs": [
                    { "orderable": false, "targets": [5] } // Make actions column not sortable
                ]
            });
        });
    </script>
}