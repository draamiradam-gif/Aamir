            async function processEnrollmentsWithProgress(request, totalOperations) {
                return new Promise((resolve, reject) => {
                    let processed = 0;
                    let simulatedSuccess = 0;
                    let simulatedErrors = 0;

                    // Show initial progress
                    updateProgress(0, totalOperations, 0, 0);
                    addProgressMessage(`Starting bulk enrollment for ${request.studentIds.length} students and ${request.courseIds.length} courses...`);
                    
                    // Start simulated progress updates
                    clearProgressInterval();
                    progressInterval = setInterval(() => {
                        if (processed >= totalOperations || processingCancelled) {
                            clearProgressInterval();
                            return;
                        }
                        
                        // Increment progress
                        const increment = Math.min(10, totalOperations - processed);
                        processed += increment;
                        simulatedSuccess = Math.round(processed * 0.9);
                        simulatedErrors = Math.round(processed * 0.1);
                        
                        updateProgress(processed, totalOperations, simulatedSuccess, simulatedErrors);
                        
                    }, 300);

                    // Call the server endpoint
                    $.ajax({
                        url: '@Url.Action("ProcessBulkEnrollment", "Enrollment")',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(request),
                        success: function(result) {
                            console.log('Server response:', result);
                            clearProgressInterval();
                            
                            // Update final progress
                            updateProgress(totalOperations, totalOperations, 
                                result.successfullyEnrolled || 0, 
                                result.failedEnrollments || 0);
                            
                            addProgressMessage(`Server processing completed: ${result.successfullyEnrolled || 0} successful, ${result.failedEnrollments || 0} failed`, 
                                result.success ? 'success' : 'error');
                            
                            resolve(result);
                        },
                        error: function(xhr, status, error) {
                            console.error('AJAX error:', xhr.responseText, status, error);
                            clearProgressInterval();
                            
                            // Update final progress as error
                            updateProgress(totalOperations, totalOperations, 0, totalOperations);
                            
                            let errorMsg = error;
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMsg = xhr.responseJSON.message;
                            } else if (xhr.responseText) {
                                errorMsg = xhr.responseText.substring(0, 200);
                            }
                            
                            addProgressMessage(`Server error: ${errorMsg}`, 'error');
                            reject(new Error(errorMsg));
                        }
                    });
                });
            }

