            function initializeSorting(tableId) {
                $(`${tableId} th[data-sort]`).off('click').on('click', function() {
                    const column = $(this).data('sort');
                    const isAscending = !$(this).hasClass('sorted-asc');
                    sortTable(tableId, column, isAscending);
                });
            }

            function sortTable(tableId, column, ascending) {
                const table = $(tableId);
                const tbody = table.find('tbody');
                const rows = tbody.find('tr').get();

                rows.sort(function(a, b) {
                    const aVal = $(a).find('td').eq(getColumnIndex(tableId, column)).text().toLowerCase();
                    const bVal = $(b).find('td').eq(getColumnIndex(tableId, column)).text().toLowerCase();

                    // Handle numeric sorting
                    if (column === 'gpa' || column === 'credits' || column === 'passedHours' || column === 'availableSeats') {
                        const aNum = parseFloat(aVal) || 0;
                        const bNum = parseFloat(bVal) || 0;
                        return ascending ? aNum - bNum : bNum - aNum;
                    }

                    // Text sorting
                    return ascending ? aVal.localeCompare(bVal) : bVal.localeCompare(aVal);
                });

                $.each(rows, function(index, row) {
                    tbody.append(row);
                });

                // Update sort indicators
                $(`${tableId} th[data-sort]`).removeClass('sorted-asc sorted-desc');
                $(`${tableId} th[data-sort="${column}"]`).addClass(ascending ? 'sorted-asc' : 'sorted-desc');
            }

            function getColumnIndex(tableId, column) {
                const headers = {
                    '#studentsTable': { 'studentId': 1, 'name': 2, 'department': 3, 'gpa': 4, 'passedHours': 5 },
                    '#coursesTable': { 'courseCode': 1, 'courseName': 2, 'credits': 3, 'department': 4, 'availableSeats': 5 }
                };
                return headers[tableId][column] || 0;
            }

