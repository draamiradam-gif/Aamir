        }
    }
</style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // ========================
            // GLOBAL VARIABLES
            // ========================
            let selectedStudentIds = [];
            let selectedCourseIds = [];
            let eligibilityResults = {};
            let currentSemesterId = null;
            let isProcessing = false;
            let processingCancelled = false;
            let progressInterval = null;

            // ========================
            // INITIALIZATION CHECK
            // ========================
            console.log('Bulk Enrollment page initialized');
            console.log('Modal exists:', $('#progressModal').length > 0);
            console.log('Progress details exists:', $('#progressDetails').length > 0);

            // ========================
            // INITIALIZATION
            // ========================
            loadSemesters();
            loadStudents();
            loadCourses();
            initializeEventHandlers();
            initializeButtonState();

            // ========================
            // HELPER FUNCTIONS
            // ========================
            function showAlert(type, title, message, autoHide = true) {
                const alertClass = type === 'success' ? 'alert-success' :
                                  type === 'warning' ? 'alert-warning' :
                                  'alert-danger';

                const icon = type === 'success' ? 'fa-check-circle' :
                             type === 'warning' ? 'fa-exclamation-triangle' :
                             'fa-times-circle';

                const alertHtml = `
                    <div class="alert ${alertClass} alert-dismissible fade show" role="alert" id="tempAlert">
                        <strong><i class="fas ${icon} me-2"></i>${title}</strong>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;

                // Remove any existing temporary alert
                $('#tempAlert').remove();

                // Insert alert at the top of the container
                $('.container-fluid').prepend(alertHtml);

                // Auto-hide after 5 seconds if enabled
                if (autoHide) {
                    setTimeout(() => {
                        $('#tempAlert').alert('close');
                    }, 5000);
                }
            }

            function updateProgress(processed, total, success, errors) {
                try {
                    const percentage = total > 0 ? Math.round((processed / total) * 100) : 0;
                    
                    $('#progressBar').css('width', percentage + '%');
                    $('#progressPercentage').text(percentage + '%');
                    $('#processedCount').text(processed);
                    $('#successCount').text(success);
                    $('#errorCount').text(errors);
                    
                    if (percentage < 100) {
                        $('#progressText').text(`Processing ${processed} of ${total} enrollments...`);
                    } else {
                        $('#progressText').text('Processing completed!');
                    }
                } catch (e) {
                    console.error('Error updating progress:', e);
                }
            }

            function addProgressMessage(message, type = 'info') {
                try {
                    const timestamp = new Date().toLocaleTimeString();
                    const icon = type === 'success' ? 'fa-check text-success' :
                                 type === 'error' ? 'fa-times text-danger' :
                                 'fa-info text-info';
                    
                    const messageHtml = `
                        <div class="d-flex align-items-start mb-2">
                            <i class="fas ${icon} me-2 mt-1"></i>
                            <div class="flex-grow-1">
                                <div class="small">${message}</div>
                                <div class="text-muted" style="font-size: 0.7rem;">${timestamp}</div>
                            </div>
                        </div>
                    `;
                    
                    const progressDetails = $('#progressDetails');
                    if (progressDetails.length > 0) {
                        progressDetails.prepend(messageHtml);
                        
                        // Auto-scroll to top - SAFE CHECK
                        const container = progressDetails[0];
                        if (container && typeof container.scrollTop === 'number') {
                            setTimeout(() => {
                                container.scrollTop = 0;
                            }, 10);
                        }
                    }
                } catch (e) {
                    console.error('Error adding progress message:', e);
                }
            }

            function clearProgressInterval() {
                if (progressInterval) {
                    clearInterval(progressInterval);
                    progressInterval = null;
                }
            }

            // ========================
            // DATA LOADING FUNCTIONS
            // ========================
            function loadSemesters() {
                $.get('@Url.Action("GetActiveSemesters", "Enrollment")')
                    .done(function(semesters) {
                        const select = $('#semesterSelect');
                        select.empty().append('<option value="">Select Semester (Required for Enrollment)</option>');

                        semesters.forEach(semester => {
                            select.append(`<option value="${semester.id}">${semester.name}</option>`);
                        });
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Failed to load semesters:', error);
                        showAlert('error', 'Error', 'Failed to load semesters. Please refresh the page.');
                    });
            }

            function loadStudents() {
                $('#studentsTableBody').html(`
                    <tr>
                        <td colspan="7" class="text-center">
                            <i class="fas fa-spinner fa-spin me-2"></i>Loading students...
                        </td>
                    </tr>
                `);

                $.get('@Url.Action("GetActiveStudents", "Enrollment")')
                    .done(function(students) {
                        const tbody = $('#studentsTableBody');
                        tbody.empty();

                        if (students.length === 0) {
                            tbody.html(`
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        No active students found.
                                    </td>
                                </tr>
                            `);
                        } else {
                            students.forEach(student => {
                                const isChecked = selectedStudentIds.includes(student.id);
                                const row = `
                                    <tr>
                                        <td style="width: 50px;">
                                            <input type="checkbox" class="form-check-input student-checkbox"
                                                   value="${student.id}" data-student-id="${student.id}"
                                                   ${isChecked ? 'checked' : ''}>
                                        </td>
                                        <td style="width: 120px;">${student.studentId}</td>
                                        <td style="width: 200px;">${student.name}</td>
                                        <td style="width: 150px;">${student.department || 'N/A'}</td>
                                        <td style="width: 80px;">${student.gpa}</td>
                                        <td style="width: 120px;">${student.passedHours}</td>
                                        <td style="width: 100px;">
                                            <span class="badge bg-success">Active</span>
                                        </td>
                                    </tr>
                                `;
                                tbody.append(row);
                            });
                        }

                        updateSelectAllStudentsState();
                        updateStudentSelection();
                        initializeSorting('#studentsTable');
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Failed to load students:', error);
                        $('#studentsTableBody').html(`
                            <tr>
                                <td colspan="7" class="text-center text-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Failed to load students
                                </td>
                            </tr>
                        `);
                    });
            }

            function loadCourses(semesterId = null) {
                const url = semesterId ?
                    `@Url.Action("GetCoursesForSemester", "Enrollment")?semesterId=${semesterId}` :
                    `@Url.Action("GetActiveCourses", "Enrollment")`;

                $('#coursesTableBody').html(`
                    <tr>
                        <td colspan="8" class="text-center">
                            <i class="fas fa-spinner fa-spin me-2"></i>Loading courses...
                        </td>
                    </tr>
                `);

                $.get(url)
                    .done(function(courses) {
                        const tbody = $('#coursesTableBody');
                        tbody.empty();

                        if (courses.length === 0) {
                            let message = 'No courses found.';
                            if (semesterId) {
                                message = 'No courses found for the selected semester.';
                            }
                            tbody.html(`
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        ${message}
                                    </td>
                                </tr>
                            `);
                        } else {
                            courses.forEach(course => {
                                const isChecked = selectedCourseIds.includes(course.id);
                                const availableSeats = course.maxStudents - course.currentEnrollment;
                                const utilization = course.maxStudents > 0 ?
                                    (course.currentEnrollment * 100 / course.maxStudents) : 0;

                                const row = `
                                    <tr>
                                        <td style="width: 50px;">
                                            <input type="checkbox" class="form-check-input course-checkbox"
                                                   value="${course.id}" data-course-id="${course.id}"
                                                   ${isChecked ? 'checked' : ''}>
                                        </td>
                                        <td style="width: 120px;">${course.courseCode}</td>
                                        <td style="width: 250px;">${course.courseName}</td>
                                        <td style="width: 80px;">${course.credits}</td>
                                        <td style="width: 150px;">${course.department}</td>
                                        <td style="width: 100px;">
                                            <span class="badge ${availableSeats > 0 ? 'bg-success' : 'bg-danger'}">
                                                ${availableSeats}
                                            </span>
                                        </td>
                                        <td style="width: 200px;">
                                            ${course.prerequisites || 'None'}
                                        </td>
                                        <td style="width: 100px;">
                                            ${utilization >= 90 ? '<span class="badge bg-danger">Full</span>' :
                                              utilization >= 70 ? '<span class="badge bg-warning">High</span>' :
                                              '<span class="badge bg-success">Available</span>'}
                                        </td>
                                    </tr>
                                `;
                                tbody.append(row);
                            });
                        }

                        updateSelectAllCoursesState();
                        updateCourseSelection();
                        initializeSorting('#coursesTable');
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Failed to load courses:', error);
                        $('#coursesTableBody').html(`
                            <tr>
                                <td colspan="8" class="text-center text-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Failed to load courses
                                </td>
                            </tr>
                        `);
                    });
            }

            // ========================
            // SELECTION MANAGEMENT
            // ========================
            function updateSelectAllStudentsState() {
                const totalStudents = $('.student-checkbox').length;
                const checkedStudents = $('.student-checkbox:checked').length;
                const allChecked = totalStudents > 0 && checkedStudents === totalStudents;
                $('#selectAllStudents').prop('checked', allChecked);
                $('#selectAllStudentsCheckbox').prop('checked', allChecked);
            }

            function updateSelectAllCoursesState() {
                const totalCourses = $('.course-checkbox').length;
                const checkedCourses = $('.course-checkbox:checked').length;
                const allChecked = totalCourses > 0 && checkedCourses === totalCourses;
                $('#selectAllCourses').prop('checked', allChecked);
                $('#selectAllCoursesCheckbox').prop('checked', allChecked);
            }

            function updateStudentSelection() {
