            function startBulkEnrollment() {
                const semesterId = $('#semesterSelect').val();
                const enrollmentType = $('#enrollmentType').val();

                const request = {
                    semesterId: parseInt(semesterId),
                    studentIds: selectedStudentIds,
                    courseIds: selectedCourseIds,
                    type: parseInt(enrollmentType),
                    requestedBy: 'Bulk Enrollment UI'
                };

                // Show progress modal
                const progressModal = new bootstrap.Modal(document.getElementById('progressModal'));
                progressModal.show();

                // Start bulk enrollment
                processBulkEnrollment(request, 0);
            }

            // ADD THIS MISSING FUNCTION
            function processBulkEnrollment(request, processedCount) {
                const totalOperations = request.studentIds.length * request.courseIds.length;
                const progress = Math.round((processedCount / totalOperations) * 100);

                // Update progress bar
                $('#progressBar').css('width', `${progress}%`).text(`${progress}%`);

                // Update progress details
                if (processedCount > 0) {
                    $('#progressDetails').prepend(`<div>Processing enrollment ${processedCount} of ${totalOperations}</div>`);
                }

                if (processedCount >= totalOperations) {
                    // Call the actual API endpoint
                    $.ajax({
                        url: '@Url.Action("ProcessBulkEnrollment", "Enrollment")',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(request),
                        success: function(result) {
                            if (result.success) {
                                $('#progressDetails').prepend(`
                                    <div class="alert alert-success">
                                        <strong>Bulk Enrollment Completed Successfully!</strong><br>
                                        • Total Students: ${result.totalStudents}<br>
                                        • Successfully Enrolled: ${result.successfullyEnrolled}<br>
                                        • Failed Enrollments: ${result.failedEnrollments}<br>
                                        <small class="text-muted">${result.message}</small>
                                    </div>
                                `);
                            } else {
                                $('#progressDetails').prepend(`
                                    <div class="alert alert-danger">
                                        <strong>Bulk Enrollment Failed</strong><br>
                                        ${result.message}
                                    </div>
                                `);
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error('API Error:', xhr.responseJSON);
                            $('#progressDetails').prepend(`
                                <div class="alert alert-danger">
                                    <strong>API Error</strong><br>
                                    Status: ${xhr.status} - ${xhr.statusText}<br>
                                    Message: ${xhr.responseJSON?.message || error}<br>
                                    <small>Check console for details</small>
                                </div>
                            `);
                        },
                        complete: function() {
                            // Enable close button
                            $('.modal-footer .btn').prop('disabled', false);
                        }
                    });
                    return;
                }

                // Simulate processing - continue with next iteration
                setTimeout(() => {
                    processBulkEnrollment(request, processedCount + 1);
                }, 30); // Faster simulation
            }

