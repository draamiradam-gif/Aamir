@model StudentManagementSystem.Models.BulkEnrollmentRequest
@{
    ViewData["Title"] = "Bulk Enrollment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-users me-2"></i>Bulk Enrollment
        </h2>
        <div class="btn-group">
            <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Bulk Enrollment Configuration</h5>
                </div>
                <div class="card-body">
                    <form id="bulkEnrollmentForm">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Semester <small class="text-muted">(required for enrollment)</small></label>
                                    <select class="form-select" id="semesterSelect" name="SemesterId">
                                        <option value="">Select Semester (Optional for Preview)</option>
                                        <!-- Will be populated by JavaScript -->
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Enrollment Type</label>
                                    <select class="form-select" id="enrollmentType" name="Type">
                                        <option value="0">Regular</option>
                                        <option value="1">Audit</option>
                                        <option value="2">Cross Registration</option>
                                        <option value="3">Independent Study</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Student Selection -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Student Selection</h6>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="input-group input-group-sm" style="width: 250px;">
                                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                                <input type="text" id="studentSearch" class="form-control" placeholder="Search students...">
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectAllStudents">
                                                <label class="form-check-label" for="selectAllStudents">
                                                    Select All
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive" style="max-height: 400px; overflow: auto;">
                                            <table class="table table-sm table-hover mb-0" id="studentsTable">
                                                <thead class="table-light sticky-top">
                                                    <tr>
                                                        <th style="width: 50px; min-width: 50px;">
                                                            <input type="checkbox" class="form-check-input m-0" id="selectAllStudentsCheckbox">
                                                        </th>
                                                        <th style="width: 120px; min-width: 120px;" data-sort="studentId">Student ID <i class="fas fa-sort"></i></th>
                                                        <th style="width: 200px; min-width: 200px;" data-sort="name">Name <i class="fas fa-sort"></i></th>
                                                        <th style="width: 150px; min-width: 150px;" data-sort="department">Department <i class="fas fa-sort"></i></th>
                                                        <th style="width: 80px; min-width: 80px;" data-sort="gpa">GPA <i class="fas fa-sort"></i></th>
                                                        <th style="width: 120px; min-width: 120px;" data-sort="passedHours">Passed Hours <i class="fas fa-sort"></i></th>
                                                        <th style="width: 100px; min-width: 100px;">Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="studentsTableBody">
                                                    <tr>
                                                        <td colspan="7" class="text-center text-muted">
                                                            <i class="fas fa-spinner fa-spin me-2"></i>Loading students...
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="p-3 border-top">
                                            <span id="selectedStudentsCount" class="badge bg-primary">0</span> students selected
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Course Selection -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Course Selection</h6>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="input-group input-group-sm" style="width: 250px;">
                                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                                <input type="text" id="courseSearch" class="form-control" placeholder="Search courses...">
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectAllCourses">
                                                <label class="form-check-label" for="selectAllCourses">
                                                    Select All
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive" style="max-height: 400px; overflow: auto;">
                                            <table class="table table-sm table-hover mb-0" id="coursesTable">
                                                <thead class="table-light sticky-top">
                                                    <tr>
                                                        <th style="width: 50px; min-width: 50px;">
                                                            <input type="checkbox" class="form-check-input m-0" id="selectAllCoursesCheckbox">
                                                        </th>
                                                        <th style="width: 120px; min-width: 120px;" data-sort="courseCode">Course Code <i class="fas fa-sort"></i></th>
                                                        <th style="width: 250px; min-width: 250px;" data-sort="courseName">Course Name <i class="fas fa-sort"></i></th>
                                                        <th style="width: 80px; min-width: 80px;" data-sort="credits">Credits <i class="fas fa-sort"></i></th>
                                                        <th style="width: 150px; min-width: 150px;" data-sort="department">Department <i class="fas fa-sort"></i></th>
                                                        <th style="width: 100px; min-width: 100px;" data-sort="availableSeats">Available <i class="fas fa-sort"></i></th>
                                                        <th style="width: 200px; min-width: 200px;">Prerequisites</th>
                                                        <th style="width: 100px; min-width: 100px;">Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="coursesTableBody">
                                                    <tr>
                                                        <td colspan="8" class="text-center text-muted">
                                                            <i class="fas fa-spinner fa-spin me-2"></i>Loading courses...
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="p-3 border-top">
                                            <span id="selectedCoursesCount" class="badge bg-primary">0</span> courses selected
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Enrollment Preview -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Enrollment Preview</h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="enrollmentPreview" class="text-muted">
                                            Select students and courses to see enrollment preview...
                                        </div>
                                        <div id="conflictWarnings" class="mt-2" style="display: none;">
                                            <!-- Conflict warnings will appear here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-info" id="checkEligibilityBtn">
                                        <i class="fas fa-search me-1"></i> Check Eligibility
                                    </button>
                                    <button type="submit" class="btn btn-success" id="startEnrollmentBtn" disabled>
                                        <i class="fas fa-play me-1"></i> Start Bulk Enrollment
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Progress Modal -->
<div class="modal fade" id="progressModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Bulk Enrollment Progress</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%" id="progressBar">
                        0%
                    </div>
                </div>
                <div id="progressDetails" style="max-height: 300px; overflow-y: auto;">
                    <!-- Progress details will appear here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Table container */
    .table-responsive {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        overflow: auto;
    }

    /* Table styling */
    .table {
        margin-bottom: 0;
        table-layout: fixed;
        width: 100%;
    }

        .table th {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            font-weight: 600;
            padding: 0.75rem 0.5rem;
            position: sticky;
            top: 0;
        }

        .table td {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            padding: 0.5rem;
            vertical-align: middle;
            border-bottom: 1px solid #dee2e6;
        }

        /* Ensure columns respect min-width */
        .table th,
        .table td {
            min-width: inherit !important;
        }

    /* Hover effects */
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.04);
    }

    /* Sortable headers */
    th[data-sort] {
        cursor: pointer;
        user-select: none;
        transition: background-color 0.2s;
    }

        th[data-sort]:hover {
            background-color: #e9ecef;
        }

        th[data-sort] i {
            margin-left: 0.25rem;
            opacity: 0.5;
            font-size: 0.8em;
        }

        th[data-sort]:hover i {
            opacity: 1;
        }

    /* Scrollbar styling */
    .table-responsive::-webkit-scrollbar {
        height: 8px;
        width: 8px;
    }

    .table-responsive::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 4px;
    }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

    /* Checkbox alignment */
    .form-check-input {
        margin: 0;
    }

    /* Badge styling */
    .badge {
        font-size: 0.7em;
        font-weight: 500;
    }
</style>
@section Scripts {
    <script>
        $(document).ready(function() {
            let selectedStudentIds = [];
            let selectedCourseIds = [];
            let eligibilityResults = {};
            let currentSemesterId = null;

            // Initialize
            loadSemesters();
            loadStudents();
            loadCourses();

           // Semester change event
           $('#semesterSelect').on('change', function() {
                const newSemesterId = $(this).val();

                if (newSemesterId) {
                    currentSemesterId = newSemesterId;
                    // Only load courses for the selected semester
                    loadCourses(newSemesterId);

                    // Show message about course filtering
                    $('#enrollmentPreview').html(`
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Showing courses for selected semester. Courses will be filtered to match the semester.
                        </div>
                    `);
                } else {
                    currentSemesterId = null;
                    // Load all courses when no semester selected
                    loadCourses();

                    $('#enrollmentPreview').html(`
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Showing all available courses. Select a semester to filter courses.
                        </div>
                    `);
                }

                updateEnrollmentPreview();
            });

            // Student selection
            $('#selectAllStudents').on('change', function() {
                const isChecked = $(this).prop('checked');
                $('#selectAllStudentsCheckbox').prop('checked', isChecked);
                $('.student-checkbox').prop('checked', isChecked);
                updateStudentSelection();
            });

            $('#selectAllStudentsCheckbox').on('change', function() {
                const isChecked = $(this).prop('checked');
                $('#selectAllStudents').prop('checked', isChecked);
                $('.student-checkbox').prop('checked', isChecked);
                updateStudentSelection();
            });

            // Course selection
            $('#selectAllCourses').on('change', function() {
                const isChecked = $(this).prop('checked');
                $('#selectAllCoursesCheckbox').prop('checked', isChecked);
                $('.course-checkbox').prop('checked', isChecked);
                updateCourseSelection();
            });

            $('#selectAllCoursesCheckbox').on('change', function() {
                const isChecked = $(this).prop('checked');
                $('#selectAllCourses').prop('checked', isChecked);
                $('.course-checkbox').prop('checked', isChecked);
                updateCourseSelection();
            });

            // Check eligibility
            $('#checkEligibilityBtn').on('click', function() {
                checkEligibility();
            });

            // Form submission
            $('#bulkEnrollmentForm').on('submit', function(e) {
                e.preventDefault();
                startBulkEnrollment();
            });

            function loadSemesters() {
                $.get('@Url.Action("GetActiveSemesters", "Enrollment")')
                    .done(function(semesters) {
                        const select = $('#semesterSelect');
                        select.empty().append('<option value="">Select Semester (Required for Enrollment)</option>');
                        semesters.forEach(semester => {
                            select.append(`<option value="${semester.id}">${semester.name}</option>`);
                        });
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Failed to load semesters:', error);
                        $('#semesterSelect').html('<option value="">Error loading semesters</option>');
                    });
            }

            function loadStudents() {
                // Show loading indicator
                $('#studentsTableBody').html(`
                    <tr>
                        <td colspan="7" class="text-center">
                            <i class="fas fa-spinner fa-spin me-2"></i>Loading students...
                        </td>
                    </tr>
                `);

                $.get('@Url.Action("GetActiveStudents", "Enrollment")')
                    .done(function(students) {
                        const tbody = $('#studentsTableBody');
                        tbody.empty();

                        if (students.length === 0) {
                            tbody.html(`
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        No active students found in the system.
                                    </td>
                                </tr>
                            `);
                        } else {
                            students.forEach(student => {
                                const isChecked = selectedStudentIds.includes(student.id);
                                const row = `
                                    <tr>
                                        <td style="width: 50px;">
                                            <input type="checkbox" class="form-check-input student-checkbox"
                                                   value="${student.id}" data-student-id="${student.id}"
                                                   ${isChecked ? 'checked' : ''}>
                                        </td>
                                        <td style="width: 120px;" title="${student.studentId}">${student.studentId}</td>
                                        <td style="width: 200px;" title="${student.name}">${student.name}</td>
                                        <td style="width: 150px;" title="${student.department || 'N/A'}">${student.department || 'N/A'}</td>
                                        <td style="width: 80px;">${student.gpa}</td>
                                        <td style="width: 120px;">${student.passedHours}</td>
                                        <td style="width: 100px;">
                                            <span class="badge bg-success">Active</span>
                                        </td>
                                    </tr>
                                `;
                                tbody.append(row);
                            });
                        }

                        updateSelectAllStudentsState();
                        updateStudentSelection();
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Failed to load students:', error);
                        $('#studentsTableBody').html(`
                            <tr>
                                <td colspan="7" class="text-center text-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Failed to load students: ${xhr.responseJSON?.message || error}
                                </td>
                            </tr>
                        `);
                    });
            }

            function loadCourses(semesterId = null) {
                const url = semesterId ?
                    `@Url.Action("GetCoursesForSemester", "Enrollment")?semesterId=${semesterId}` :
                    `@Url.Action("GetActiveCourses", "Enrollment")`;

                // Show loading indicator
                $('#coursesTableBody').html(`
                    <tr>
                        <td colspan="8" class="text-center">
                            <i class="fas fa-spinner fa-spin me-2"></i>Loading courses...
                        </td>
                    </tr>
                `);

                $.get(url)
                    .done(function(courses) {
                        const tbody = $('#coursesTableBody');
                        tbody.empty();

                        if (courses.length === 0) {
                            let message = 'No courses found.';
                            if (semesterId) {
                                message = `No courses found for the selected semester. Try selecting a different semester or leave semester unselected to see all courses.`;
                            }
                            tbody.html(`
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        ${message}
                                    </td>
                                </tr>
                            `);
                        } else {
                            courses.forEach(course => {
                                const isChecked = selectedCourseIds.includes(course.id);
                                const availableSeats = course.maxStudents - course.currentEnrollment;
                                const utilization = course.maxStudents > 0 ?
                                    (course.currentEnrollment * 100 / course.maxStudents) : 0;

                                const row = `
                                    <tr>
                                        <td style="width: 50px;">
                                            <input type="checkbox" class="form-check-input course-checkbox"
                                                   value="${course.id}" data-course-id="${course.id}"
                                                   ${isChecked ? 'checked' : ''}>
                                        </td>
                                        <td style="width: 120px;" title="${course.courseCode}">${course.courseCode}</td>
                                        <td style="width: 250px;" title="${course.courseName}">${course.courseName}</td>
                                        <td style="width: 80px;">${course.credits}</td>
                                        <td style="width: 150px;" title="${course.department}">${course.department}</td>
                                        <td style="width: 100px;">
                                            <span class="badge ${availableSeats > 0 ? 'bg-success' : 'bg-danger'}">
                                                ${availableSeats}
                                            </span>
                                        </td>
                                        <td style="width: 200px;" title="${course.prerequisites || 'None'}">
                                            ${course.prerequisites || 'None'}
                                        </td>
                                        <td style="width: 100px;">
                                            ${utilization >= 90 ? '<span class="badge bg-danger">Full</span>' :
                                              utilization >= 70 ? '<span class="badge bg-warning">High</span>' :
                                              '<span class="badge bg-success">Available</span>'}
                                        </td>
                                    </tr>
                                `;
                                tbody.append(row);
                            });
                        }

                        updateSelectAllCoursesState();
                        updateCourseSelection();
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Failed to load courses:', error);
                        $('#coursesTableBody').html(`
                            <tr>
                                <td colspan="8" class="text-center text-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Failed to load courses: ${xhr.responseJSON?.message || error}
                                </td>
                            </tr>
                        `);
                    });
            }

            function updateSelectAllStudentsState() {
                const totalStudents = $('.student-checkbox').length;
                const checkedStudents = $('.student-checkbox:checked').length;
                const allChecked = totalStudents > 0 && checkedStudents === totalStudents;
                $('#selectAllStudents').prop('checked', allChecked);
                $('#selectAllStudentsCheckbox').prop('checked', allChecked);
            }

            function updateSelectAllCoursesState() {
                const totalCourses = $('.course-checkbox').length;
                const checkedCourses = $('.course-checkbox:checked').length;
                const allChecked = totalCourses > 0 && checkedCourses === totalCourses;
                $('#selectAllCourses').prop('checked', allChecked);
                $('#selectAllCoursesCheckbox').prop('checked', allChecked);
            }

            function updateStudentSelection() {
                selectedStudentIds = $('.student-checkbox:checked').map(function() {
                    return $(this).data('student-id');
                }).get();

                $('#selectedStudentsCount').text(selectedStudentIds.length);
                updateSelectAllStudentsState();
                updateEnrollmentPreview();
            }

            function updateCourseSelection() {
                selectedCourseIds = $('.course-checkbox:checked').map(function() {
                    return $(this).data('course-id');
                }).get();

                $('#selectedCoursesCount').text(selectedCourseIds.length);
                updateSelectAllCoursesState();
                updateEnrollmentPreview();
            }

            function updateEnrollmentPreview() {
                const studentCount = selectedStudentIds.length;
                const courseCount = selectedCourseIds.length;
                const semesterId = $('#semesterSelect').val();

                // TEMPORARY: Enable button even without semester for testing
                if (studentCount > 0 && courseCount > 0) {
                    const totalEnrollments = studentCount * courseCount;
                    let semesterInfo = '';

                    if (semesterId) {
                        semesterInfo = `<br>• Semester: ${$('#semesterSelect option:selected').text()}`;
                    } else {
                        semesterInfo = `<br>• <span class="text-warning">No semester selected</span>`;
                    }

                    $('#enrollmentPreview').html(`
                        <div class="alert ${semesterId ? 'alert-info' : 'alert-warning'}">
                            <strong>Ready to process:</strong><br>
                            • ${studentCount} students<br>
                            • ${courseCount} courses<br>
                            • ${totalEnrollments} potential enrollments
                            ${semesterInfo}
                        </div>
                    `);

                    // TEMPORARY: Enable button even without semester
                    $('#startEnrollmentBtn').prop('disabled', false);
                } else {
                    let message = 'Select students and courses to see enrollment preview...';
                    if (studentCount === 0 && courseCount === 0) {
                        message = 'Please select at least one student and one course.';
                    } else if (studentCount === 0) {
                        message = 'Please select at least one student.';
                    } else if (courseCount === 0) {
                        message = 'Please select at least one course.';
                    }

                    $('#enrollmentPreview').html(`<div class="text-muted">${message}</div>`);
                    $('#startEnrollmentBtn').prop('disabled', true);
                }
            }

            function checkEligibility() {
                const semesterId = $('#semesterSelect').val();
                if (!semesterId) {
                    showAlert('error', 'Semester Required', 'Please select a semester first to check eligibility.', true);
                    return;
                }

                if (selectedStudentIds.length === 0 || selectedCourseIds.length === 0) {
                    showAlert('error', 'Selection Required', 'Please select at least one student and one course.', true);
                    return;
                }

                $('#checkEligibilityBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i> Checking...');

                const request = {
                    semesterId: parseInt(semesterId),
                    studentIds: selectedStudentIds,
                    courseIds: selectedCourseIds
                };

                // FIX: Add proper content type header
                $.ajax({
                    url: '@Url.Action("CheckBulkEligibility", "Enrollment")',
                    type: 'POST',
                    contentType: 'application/json', // This is crucial
                    data: JSON.stringify(request),
                    success: function(result) {
                        eligibilityResults = result;
                        displayEligibilityResults(result);
                    },
                    error: function(xhr, status, error) {
                        console.error('Eligibility check failed:', error, xhr.responseText);
                        showAlert('error', 'Check Failed', 'Error checking eligibility. Status: ' + xhr.status, true);
                    },
                    complete: function() {
                        $('#checkEligibilityBtn').prop('disabled', false).html('<i class="fas fa-search me-1"></i> Check Eligibility');
                    }
                });
            }

            function displayEligibilityResults(results) {
                let html = '<strong>Eligibility Check Results:</strong><br>';

                if (results.ineligibleStudents && results.ineligibleStudents.length > 0) {
                    html += '<div class="alert alert-warning mt-2">';
                    html += '<strong>Ineligible Students:</strong><br>';
                    results.ineligibleStudents.forEach(student => {
                        html += `• ${student.studentName}: ${student.reason}<br>`;
                    });
                    html += '</div>';
                }

                if (results.conflicts && results.conflicts.length > 0) {
                    html += '<div class="alert alert-danger mt-2">';
                    html += '<strong>Enrollment Conflicts:</strong><br>';
                    results.conflicts.forEach(conflict => {
                        html += `• ${conflict.description}<br>`;
                    });
                    html += '</div>';
                }

                if (results.estimatedSuccess > 0) {
                    html += `<div class="alert alert-success mt-2">
                        <strong>Estimated Success:</strong> ${results.estimatedSuccess} enrollments expected
                    </div>`;
                }

