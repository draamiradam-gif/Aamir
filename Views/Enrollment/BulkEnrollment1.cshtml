@model StudentManagementSystem.Models.BulkEnrollmentRequest
@{
    ViewData["Title"] = "Bulk Enrollment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-users me-2"></i>Bulk Enrollment
        </h2>
        <div class="btn-group">
            <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Bulk Enrollment Configuration</h5>
                </div>
                <div class="card-body">
                    <form id="bulkEnrollmentForm">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Semester <small class="text-muted">(required for enrollment)</small></label>
                                    <select class="form-select" id="semesterSelect" name="SemesterId">
                                        <option value="">Select Semester (Required for Enrollment)</option>
                                        <!-- Will be populated by JavaScript -->
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Enrollment Type</label>
                                    <select class="form-select" id="enrollmentType" name="Type">
                                        <option value="0">Regular</option>
                                        <option value="1">Audit</option>
                                        <option value="2">Cross Registration</option>
                                        <option value="3">Independent Study</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Student Selection -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Student Selection</h6>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="input-group input-group-sm" style="width: 250px;">
                                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                                <input type="text" id="studentSearch" class="form-control" placeholder="Search students...">
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectAllStudents">
                                                <label class="form-check-label" for="selectAllStudents">
                                                    Select All
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive" style="max-height: 400px; overflow: auto;">
                                            <table class="table table-sm table-hover mb-0" id="studentsTable">
                                                <thead class="table-light sticky-top">
                                                    <tr>
                                                        <th style="width: 50px; min-width: 50px;">
                                                            <input type="checkbox" class="form-check-input m-0" id="selectAllStudentsCheckbox">
                                                        </th>
                                                        <th style="width: 120px; min-width: 120px;" data-sort="studentId">Student ID <i class="fas fa-sort"></i></th>
                                                        <th style="width: 200px; min-width: 200px;" data-sort="name">Name <i class="fas fa-sort"></i></th>
                                                        <th style="width: 150px; min-width: 150px;" data-sort="department">Department <i class="fas fa-sort"></i></th>
                                                        <th style="width: 80px; min-width: 80px;" data-sort="gpa">GPA <i class="fas fa-sort"></i></th>
                                                        <th style="width: 120px; min-width: 120px;" data-sort="passedHours">Passed Hours <i class="fas fa-sort"></i></th>
                                                        <th style="width: 100px; min-width: 100px;">Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="studentsTableBody">
                                                    <tr>
                                                        <td colspan="7" class="text-center text-muted">
                                                            <i class="fas fa-spinner fa-spin me-2"></i>Loading students...
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="p-3 border-top">
                                            <span id="selectedStudentsCount" class="badge bg-primary">0</span> students selected
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Course Selection -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Course Selection</h6>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="input-group input-group-sm" style="width: 250px;">
                                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                                <input type="text" id="courseSearch" class="form-control" placeholder="Search courses...">
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectAllCourses">
                                                <label class="form-check-label" for="selectAllCourses">
                                                    Select All
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive" style="max-height: 400px; overflow: auto;">
                                            <table class="table table-sm table-hover mb-0" id="coursesTable">
                                                <thead class="table-light sticky-top">
                                                    <tr>
                                                        <th style="width: 50px; min-width: 50px;">
                                                            <input type="checkbox" class="form-check-input m-0" id="selectAllCoursesCheckbox">
                                                        </th>
                                                        <th style="width: 120px; min-width: 120px;" data-sort="courseCode">Course Code <i class="fas fa-sort"></i></th>
                                                        <th style="width: 250px; min-width: 250px;" data-sort="courseName">Course Name <i class="fas fa-sort"></i></th>
                                                        <th style="width: 80px; min-width: 80px;" data-sort="credits">Credits <i class="fas fa-sort"></i></th>
                                                        <th style="width: 150px; min-width: 150px;" data-sort="department">Department <i class="fas fa-sort"></i></th>
                                                        <th style="width: 100px; min-width: 100px;" data-sort="availableSeats">Available <i class="fas fa-sort"></i></th>
                                                        <th style="width: 200px; min-width: 200px;">Prerequisites</th>
                                                        <th style="width: 100px; min-width: 100px;">Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="coursesTableBody">
                                                    <tr>
                                                        <td colspan="8" class="text-center text-muted">
                                                            <i class="fas fa-spinner fa-spin me-2"></i>Loading courses...
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="p-3 border-top">
                                            <span id="selectedCoursesCount" class="badge bg-primary">0</span> courses selected
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Enrollment Preview -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Enrollment Preview</h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="enrollmentPreview" class="text-muted">
                                            Select students and courses to see enrollment preview...
                                        </div>
                                        <div id="conflictWarnings" class="mt-2" style="display: none;">
                                            <!-- Conflict warnings will appear here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-info" id="checkEligibilityBtn">
                                        <i class="fas fa-search me-1"></i> Check Eligibility
                                    </button>
                                    <button type="submit" class="btn btn-success" id="startEnrollmentBtn" disabled>
                                        <i class="fas fa-play me-1"></i> Start Bulk Enrollment
                                    </button>
                                    <button type="button" class="btn btn-warning" onclick="testModal()">
                                        <i class="fas fa-vial me-1"></i> Test Modal
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

