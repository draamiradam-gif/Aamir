@model List<StudentManagementSystem.Models.CourseEnrollment>
@{
    ViewData["Title"] = "My Enrollments";
    var semester = ViewBag.Semester as StudentManagementSystem.Models.Semester;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-list me-2"></i>My Enrollments
            @if (semester != null)
            {
                <span class="h4 text-muted">- @semester.Name</span>
            }
        </h2>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Available", new { semesterId = semester?.Id })" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Enroll in More Courses
            </a>

            @if (semester != null && Model.Any(e => e.IsActive))
            {
                <!-- Drop Selected Form -->
                <form method="post" asp-action="DropSelected" id="dropSelectedForm" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-times me-1"></i> Drop Selected
                    </button>
                </form>

                <!-- Drop All Form -->
                <form method="post"
                      asp-action="DropAll"
                      onsubmit="return confirm('Are you sure you want to drop all active courses for this semester?');"
                      class="d-inline">

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="semesterId" value="@semester.Id" />

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Drop All Courses
                    </button>
                </form>
            }
        </div>
    </div>

    @if (semester == null)
    {
        <div class="alert alert-warning">
            <h5>No Active Semester</h5>
            <p>Please contact administration to set up an active semester.</p>
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No Enrollments</h5>
            <p>You are not enrolled in any courses for this semester.</p>
            <a href="@Url.Action("Available", new { semesterId = semester.Id })" class="btn btn-primary">
                Browse Available Courses
            </a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Current Enrollments (@Model.Count courses)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="enrollmentsTable" class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" title="Select All" />
                                </th>
                                <th>Course Code</th>
                                <th>Course Name</th>
                                <th>Credits</th>
                                <th>Department</th>
                                <th>Enrollment Date</th>
                                <th>Status</th>
                                <th>Grade</th>
                                <th width="120">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model)
                            {
                                <tr>
                                    <td>
                                        @if (enrollment.IsActive)
                                        {
                                            <input type="checkbox" name="enrollmentIds" value="@enrollment.Id" form="dropSelectedForm" />
                                        }
                                    </td>
                                    <td class="fw-bold">@enrollment.Course?.CourseCode</td>
                                    <td>@enrollment.Course?.CourseName</td>
                                    <td>
                                        <span class="badge bg-info">@enrollment.Course?.Credits</span>
                                    </td>
                                    <td>@enrollment.Course?.Department</td>
                                    <td>@enrollment.EnrollmentDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @(enrollment.IsActive ? "bg-success" : "bg-secondary")">
                                            @enrollment.EnrollmentStatus
                                        </span>
                                    </td>
                                    <td>
                                        @if (enrollment.Grade.HasValue)
                                        {
                                            <span class="fw-bold @(enrollment.IsPassing ? "text-success" : "text-danger")">
                                                @enrollment.Grade.Value.ToString("0.0") (@enrollment.GradeLetter)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (enrollment.IsActive && enrollment.CanBeDropped)
                                        {
                                            <form method="post" asp-action="Withdraw" class="d-inline">
                                                <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to withdraw from this course?')">
                                                    <i class="fas fa-times"></i> Drop
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Enrollment Summary -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Sum(e => e.Course?.Credits ?? 0)</h4>
                        <p class="mb-0">Total Credits</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Count(e => e.IsActive)</h4>
                        <p class="mb-0">Active Courses</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Count(e => e.IsCompleted)</h4>
                        <p class="mb-0">Completed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h4>@Model.Count(e => e.IsFailed)</h4>
                        <p class="mb-0">Failed</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#enrollmentsTable').DataTable({
                pageLength: 25,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [0, 8] } // disable sorting on checkboxes and actions
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search courses...",
                    lengthMenu: "_MENU_ records per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ courses",
                    infoEmpty: "No courses found",
                    infoFiltered: "(filtered from _MAX_ total)"
                }
            });

            // Select all checkboxes
            $('#selectAll').on('change', function () {
                var checked = $(this).is(':checked');
                $('input[name="enrollmentIds"]').prop('checked', checked);
            });
        });

        // Drop All confirmation with SweetAlert
        function confirmDropAll(event, form) {
            event.preventDefault();
            Swal.fire({
                title: 'Drop All Courses?',
                text: 'Are you sure you want to drop all eligible courses for this semester?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, drop all',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
            return false;
        }
    </script>
}
