@{
    ViewData["Title"] = "Grading Analytics";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Grading Analytics & Reports</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h6>Average GPA</h6>
                    <h3>3.45</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h6>Pass Rate</h6>
                    <h3>87.2%</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h6>Courses Graded</h6>
                    <h3>42</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h6>Pending Grades</h6>
                    <h3>8</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Add charts and detailed analytics here -->
</div>