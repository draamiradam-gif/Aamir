@model StudentManagementSystem.Controllers.ImportExportViewModel
@{
    ViewData["Title"] = "Import/Export Grades";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Import/Export Grades</h1>
            <partial name="_AlertMessages" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-file-import"></i> Import Grades</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="ImportGrades" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Select Course</label>
                            <select name="courseId" class="form-select" required>
                                <option value="">-- Select Course --</option>
                                @foreach (var course in Model.Courses)
                                {
                                    <option value="@course.Id">@course.CourseCode - @course.CourseName</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Select Semester</label>
                            <select name="semesterId" class="form-select" required>
                                <option value="">-- Select Semester --</option>
                                @foreach (var semester in Model.Semesters)
                                {
                                    <option value="@semester.Id">@semester.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Excel File</label>
                            <input type="file" class="form-control" name="file" accept=".xlsx,.xls" required />
                            <div class="form-text">
                                Supported formats: .xlsx, .xls. File should contain StudentID, Component, and Marks columns.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-upload"></i> Import Grades
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-file-export"></i> Export Grades</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="ExportGrades">
                        <div class="mb-3">
                            <label class="form-label">Select Course</label>
                            <select name="courseId" class="form-select" required>
                                <option value="">-- Select Course --</option>
                                @foreach (var course in Model.Courses)
                                {
                                    <option value="@course.Id">@course.CourseCode - @course.CourseName</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Select Semester</label>
                            <select name="semesterId" class="form-select" required>
                                <option value="">-- Select Semester --</option>
                                @foreach (var semester in Model.Semesters)
                                {
                                    <option value="@semester.Id">@semester.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Export Format</label>
                            <select class="form-select" disabled>
                                <option>Excel (.xlsx)</option>
                            </select>
                            <div class="form-text">
                                Currently only Excel format is supported.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-download"></i> Export Grades
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Template Downloads -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Download Templates</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card template-card">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-excel fa-3x text-success mb-3"></i>
                                    <h6>Excel Import Template</h6>
                                    <p class="text-muted">Standard template for grade imports</p>
                                    <button class="btn btn-outline-success btn-sm" onclick="downloadTemplate('excel')">
                                        Download Template
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card template-card">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-csv fa-3x text-info mb-3"></i>
                                    <h6>CSV Import Template</h6>
                                    <p class="text-muted">Simple CSV format for grade imports</p>
                                    <button class="btn btn-outline-info btn-sm" onclick="downloadTemplate('csv')">
                                        Download Template
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card template-card">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-pdf fa-3x text-danger mb-3"></i>
                                    <h6>Report Template</h6>
                                    <p class="text-muted">PDF report template</p>
                                    <button class="btn btn-outline-danger btn-sm" onclick="downloadTemplate('pdf')">
                                        Download Template
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadTemplate(type) {
            alert(`${type.toUpperCase()} template download feature coming soon!`);
        }
    </script>

    <style>
        .template-card {
            transition: transform 0.2s;
            cursor: pointer;
        }

        .template-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>
}