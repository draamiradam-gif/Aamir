@model List<GradingTemplate>
@{
    ViewData["Title"] = "Grading Templates";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Grading Templates</h1>
            <partial name="_AlertMessages" />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Available Templates</h5>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createTemplateModal">
                        <i class="fas fa-plus"></i> Create Template
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Template Name</th>
                                        <th>Description</th>
                                        <th>Components</th>
                                        <th>Total Weight</th>
                                        <th>Default</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var template in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@template.TemplateName</strong>
                                                @if (template.IsDefault)
                                                {
                                                    <span class="badge bg-primary ms-1">Default</span>
                                                }
                                            </td>
                                            <td>@template.Description</td>
                                            <td>@template.Components.Count</td>
                                            <td>@template.TotalWeight.ToString("F1")%</td>
                                            <td>
                                                @if (template.IsDefault)
                                                {
                                                    <i class="fas fa-check text-success"></i>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("TemplateDetails", new { id = template.Id })"
                                                       class="btn btn-outline-info">View</a>
                                                    <button class="btn btn-outline-warning"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#editTemplateModal"
                                                            data-id="@template.Id"
                                                            data-name="@template.TemplateName"
                                                            data-description="@template.Description"
                                                            data-isdefault="@template.IsDefault">
                                                        Edit
                                                    </button>
                                                    <form method="post" asp-action="DeleteTemplate" class="d-inline">
                                                        <input type="hidden" name="id" value="@template.Id" />
                                                        <button type="submit" class="btn btn-outline-danger"
                                                                onclick="return confirm('Are you sure you want to delete this template?')">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>No grading templates available. Create your first template to get started.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("ManageComponents")" class="btn btn-outline-primary">
                            Manage Components
                        </a>
                        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6>Template Statistics</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4>@Model.Count</h4>
                            <small class="text-muted">Total Templates</small>
                        </div>
                        <div class="col-6">
                            <h4>@Model.Count(t => t.IsDefault)</h4>
                            <small class="text-muted">Default Templates</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Template Modal -->
<div class="modal fade" id="createTemplateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Grading Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="CreateTemplate">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Template Name</label>
                                <input type="text" class="form-control" name="TemplateName" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Default Template</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" name="IsDefault" value="true" />
                                    <label class="form-check-label">Set as default template</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" rows="3"></textarea>
                    </div>

                    <h6>Template Components</h6>
                    <div id="components-container">
                        <div class="component-row row mb-2">
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="Components[0].Name" placeholder="Component Name" required />
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" name="Components[0].ComponentType" required>
                                    <option value="">-- Type --</option>
                                    @foreach (var type in Enum.GetValues(typeof(GradingComponentType)))
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <input type="number" class="form-control" name="Components[0].WeightPercentage"
                                       placeholder="Weight %" min="0" max="100" step="0.1" required />
                            </div>
                            <div class="col-md-2">
                                <input type="number" class="form-control" name="Components[0].MaximumMarks"
                                       value="100" min="1" max="1000" required />
                            </div>
                            <div class="col-md-1">
                                <button type="button" class="btn btn-danger btn-sm remove-component" disabled>
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button type="button" id="add-component" class="btn btn-outline-primary btn-sm mt-2">
                        <i class="fas fa-plus"></i> Add Component
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Template</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let componentCount = 1;

        document.getElementById('add-component').addEventListener('click', function() {
            const container = document.getElementById('components-container');
            const newRow = document.createElement('div');
            newRow.className = 'component-row row mb-2';
            newRow.innerHTML = `
                <div class="col-md-4">
                    <input type="text" class="form-control" name="Components[${componentCount}].Name" placeholder="Component Name" required />
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="Components[${componentCount}].ComponentType" required>
                        <option value="">-- Type --</option>
                        @foreach (var type in Enum.GetValues(typeof(GradingComponentType)))
                        {
                                <option value="@type">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" class="form-control" name="Components[${componentCount}].WeightPercentage"
                           placeholder="Weight %" min="0" max="100" step="0.1" required />
                </div>
                <div class="col-md-2">
                    <input type="number" class="form-control" name="Components[${componentCount}].MaximumMarks"
                           value="100" min="1" max="1000" required />
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-danger btn-sm remove-component">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            container.appendChild(newRow);
            componentCount++;

            // Enable remove buttons for all rows except the first
            document.querySelectorAll('.remove-component').forEach(btn => {
                btn.disabled = false;
            });
        });

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-component')) {
                e.target.closest('.component-row').remove();
            }
        });
    </script>
}