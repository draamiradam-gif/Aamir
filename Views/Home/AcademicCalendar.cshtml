@{
    ViewData["Title"] = "Academic Calendar";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-calendar me-2"></i>Academic Calendar
    </h1>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">Academic Year @DateTime.Now.Year-@(DateTime.Now.Year + 1)</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Fall Semester</td>
                        <td>September 1, @DateTime.Now.Year</td>
                        <td>December 20, @DateTime.Now.Year</td>
                        <td>Regular classes</td>
                    </tr>
                    <tr>
                        <td>Midterm Exams</td>
                        <td>October 15, @DateTime.Now.Year</td>
                        <td>October 26, @DateTime.Now.Year</td>
                        <td>Midterm examination period</td>
                    </tr>
                    <tr>
                        <td>Final Exams</td>
                        <td>December 10, @DateTime.Now.Year</td>
                        <td>December 20, @DateTime.Now.Year</td>
                        <td>Final examination period</td>
                    </tr>
                    <tr>
                        <td>Spring Semester</td>
                        <td>January 15, @(DateTime.Now.Year + 1)</td>
                        <td>May 10, @(DateTime.Now.Year + 1)</td>
                        <td>Regular classes</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>