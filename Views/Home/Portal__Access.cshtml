@{
    ViewData["Title"] = "Portal Access";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">Portal Access</h1>
            <p class="lead text-muted">Choose your portal to continue</p>
        </div>

        <div class="row g-4">
            <!-- Student Portal Card -->
            <div class="col-md-6">
                <div class="card-modern h-100 text-center">
                    <div class="card-body p-4">
                        <div class="portal-icon mb-4">
                            <i class="fas fa-user-graduate fa-4x text-primary"></i>
                        </div>
                        <h3 class="card-title h4">Student Portal</h3>
                        <p class="card-text text-muted mb-4">
                            Access your student dashboard, register for courses, view grades, and manage your academic profile.
                        </p>
                        <div class="portal-features mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Course Registration</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Grade Viewing</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Academic Profile</small>
                            </div>
                        </div>
                        <a href="@Url.Action("StudentPortalEntry", "Home")" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Enter Student Portal
                        </a>
                    </div>
                </div>
            </div>

            <!-- Admin Portal Card -->
            <div class="col-md-6">
                <div class="card-modern h-100 text-center">
                    <div class="card-body p-4">
                        <div class="portal-icon mb-4">
                            <i class="fas fa-users-cog fa-4x text-warning"></i>
                        </div>
                        <h3 class="card-title h4">Admin Portal</h3>
                        <p class="card-text text-muted mb-4">
                            Manage students, courses, grades, and system configuration. Administrative access required.
                        </p>
                        <div class="portal-features mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Student Management</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Course Administration</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>System Configuration</small>
                            </div>
                        </div>
                        <a href="@Url.Action("AdminLogin", "Home")" class="btn btn-warning btn-lg w-100">
                            <i class="fas fa-lock me-2"></i>Enter Admin Portal
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Info -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card-modern">
                    <div class="card-body text-center">
                        <h4 class="mb-3">Need Help?</h4>
                        <p class="text-muted mb-3">
                            If you're experiencing issues accessing your portal, please contact the IT support team.
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="mailto:support@academicpro.edu" class="btn btn-outline-primary">
                                <i class="fas fa-envelope me-2"></i>Email Support
                            </a>
                            <a href="tel:+1234567890" class="btn btn-outline-primary">
                                <i class="fas fa-phone me-2"></i>Call Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .portal-icon {
        transition: transform 0.3s ease;
    }

    .card-modern:hover .portal-icon {
        transform: scale(1.1);
    }

    .portal-features {
        text-align: left;
    }
</style>