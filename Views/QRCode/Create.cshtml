@model StudentManagementSystem.Models.QRCodeSession

@{
    ViewData["Title"] = "Create QR Attendance Session";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Create QR Attendance Session</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CourseId" class="control-label">Course</label>
                        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses">
                            <option value="">-- Select Course --</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SessionTitle" class="control-label">Session Title</label>
                        <input asp-for="SessionTitle" class="form-control" placeholder="e.g., Lecture 1, Lab Session, etc." />
                        <span asp-validation-for="SessionTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Additional session details..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DurationMinutes" class="control-label">Duration (Minutes)</label>
                                <input asp-for="DurationMinutes" class="form-control" value="15" min="1" max="120" />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                <small class="form-text text-muted">How long the QR code will be valid (1-120 minutes)</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MaxScans" class="control-label">Maximum Scans (Optional)</label>
                                <input asp-for="MaxScans" class="form-control" placeholder="Leave empty for unlimited" />
                                <span asp-validation-for="MaxScans" class="text-danger"></span>
                                <small class="form-text text-muted">Maximum number of students who can scan</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="EnableDynamicQR" class="form-check-input" id="EnableDynamicQR" />
                        <label asp-for="EnableDynamicQR" class="form-check-label">
                            Enable dynamic QR code (changes periodically for security)
                        </label>
                    </div>

                    <div class="form-group" id="TokenIntervalGroup" style="display: none;">
                        <label asp-for="TokenUpdateIntervalSeconds" class="control-label">QR Refresh Interval (seconds)</label>
                        <input asp-for="TokenUpdateIntervalSeconds" class="form-control" value="10" min="5" max="60" />
                        <span asp-validation-for="TokenUpdateIntervalSeconds" class="text-danger"></span>
                        <small class="form-text text-muted">How often the QR code automatically refreshes (5-60 seconds)</small>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="AllowMultipleScans" />
                        <label class="form-check-label" asp-for="AllowMultipleScans">
                            Allow students to scan multiple times
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-qrcode"></i> Generate QR Code
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
                @* <!-- Add this debug section -->
                <div class="mt-3 p-3 border rounded">
                    <h6><i class="fas fa-bug"></i> Debug Info</h6>
                    <button type="button" class="btn btn-sm btn-outline-info" onclick="checkForm()">
                        Check Form State
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="submitManually()">
                        Submit Manually
                    </button>
                    <div id="debugOutput" class="mt-2 small text-muted"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Session Tips</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb"></i> Best Practices</h6>
                    <ul class="mb-0">
                        <li>Use descriptive session titles</li>
                        <li>Set appropriate duration (15-30 minutes recommended)</li>
                        <li>Display QR code clearly for students</li>
                        <li>Monitor active sessions in real-time</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> *@

@section Scripts {
    <script>
        // Show/hide interval input based on dynamic QR checkbox
        document.getElementById('EnableDynamicQR').addEventListener('change', function() {
            document.getElementById('TokenIntervalGroup').style.display = this.checked ? 'block' : 'none';
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('TokenIntervalGroup').style.display =
                document.getElementById('EnableDynamicQR').checked ? 'block' : 'none';
        });
    </script>
    <script>
        function debugLog(message) {
            console.log(message);
            const output = document.getElementById('debugOutput');
            if (output) {
                output.innerHTML += '<div>' + message + '</div>';
            }
        }

        function checkForm() {
            debugLog("=== FORM CHECK ===");

            // Check Course dropdown
            const courseSelect = document.getElementById('CourseId');
            debugLog("Course dropdown exists: " + (courseSelect !== null));
            debugLog("Selected CourseId: " + (courseSelect ? courseSelect.value : 'N/A'));
            debugLog("Course options: " + (courseSelect ? courseSelect.options.length : 0));

            // Check Session Title
            const titleInput = document.getElementById('SessionTitle');
            debugLog("Title input exists: " + (titleInput !== null));
            debugLog("Title value: " + (titleInput ? titleInput.value : 'N/A'));

            // Check form
            const form = document.querySelector('form');
            debugLog("Form exists: " + (form !== null));
            debugLog("Form action: " + (form ? form.action : 'N/A'));
            debugLog("Form method: " + (form ? form.method : 'N/A'));

            // Check __RequestVerificationToken
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            debugLog("Anti-forgery token exists: " + (token !== null));
        }

        function submitManually() {
            debugLog("Attempting manual submission...");
            const form = document.querySelector('form');

            if (!form) {
                debugLog("ERROR: Form not found!");
                return;
            }

            // Create FormData
            const formData = new FormData(form);

            // Log form data
            debugLog("Form Data:");
            for (let [key, value] of formData.entries()) {
                debugLog("  " + key + ": " + value);
            }

            // Submit via fetch to see what happens
            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                debugLog("Response status: " + response.status);
                debugLog("Response URL: " + response.url);
                return response.text();
            })
            .then(text => {
                debugLog("Response received (first 500 chars):");
                debugLog(text.substring(0, 500));
            })
            .catch(error => {
                debugLog("Fetch error: " + error.message);
            });
        }

        // Add event listeners for debugging
        document.addEventListener('DOMContentLoaded', function() {
            debugLog("Page loaded");

            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    debugLog("Form submit event triggered!");
                    console.log("Submit event details:", e);
                });
            }

            // Also add input change listeners
            const inputs = document.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('change', function() {
                    debugLog(this.name + " changed to: " + this.value);
                });
            });
        });
    </script>
}