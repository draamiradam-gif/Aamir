@model QRCodeSession

@{
    ViewData["Title"] = "QR Code - " + Model.SessionTitle;
    Layout = null; // No layout for full screen

    // Calculate values
    var scanUrl = Url.Action("Scan", "QRCode", new { token = Model.Token }, Context.Request.Scheme) ?? "";
    var encodedUrl = Uri.EscapeDataString(scanUrl);
    var expiresAt = Model.CreatedAt.AddMinutes(Model.DurationMinutes);
    var timeLeft = expiresAt - DateTime.Now;
    var minutesLeft = timeLeft.TotalMinutes > 0 ? (int)timeLeft.TotalMinutes : 0;
    var secondsLeft = timeLeft.TotalSeconds > 0 ? (int)timeLeft.TotalSeconds % 60 : 0;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .qr-container {
            text-align: center;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            max-width: 500px;
            width: 100%;
            animation: fadeIn 0.5s ease-in;
        }

        .qr-image {
            border: 15px solid white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin: 20px auto;
            transition: transform 0.3s ease;
        }

            .qr-image:hover {
                transform: scale(1.02);
            }

        .session-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            margin: 20px 0;
        }

        .timer {
            font-size: 1.2em;
            font-weight: bold;
            color: #dc3545;
            background: #fff;
            padding: 10px 20px;
            border-radius: 25px;
            display: inline-block;
            margin: 10px 0;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
        }

        .btn-group-custom {
            display: flex;
            gap: 10px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .btn-custom {
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            }

        /* Simple fade-in animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Status indicators */
        .status-active {
            color: #28a745;
            font-weight: bold;
        }

        .status-expired {
            color: #dc3545;
            font-weight: bold;
        }

        @@media (max-width: 576px) {
            .qr-container {
                padding: 1rem;
                margin: 10px;
            }

            .qr-image {
                max-width: 250px;
            }

            .btn-group-custom {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="qr-container">
        <h2 class="mb-3">@Model.SessionTitle</h2>

        <div class="session-info">
            <p class="mb-1"><strong>Course:</strong> @Model.Course?.CourseCode - @Model.Course?.CourseName</p>
            <p class="mb-1"><strong>Duration:</strong> @Model.DurationMinutes minutes</p>
            <p class="mb-0"><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
        </div>

        <!-- Status and Timer -->
        <div class="mb-3">
            @if (DateTime.Now < expiresAt)
            {
                <span class="status-active">
                    <i class="fas fa-check-circle"></i> ACTIVE
                </span>
                <div class="timer" id="countdown-timer">
                    <i class="fas fa-clock"></i>
                    Expires in: <span id="time-left">@minutesLeft:@secondsLeft.ToString("00")</span>
                </div>
            }
            else
            {
                <span class="status-expired">
                    <i class="fas fa-exclamation-triangle"></i> EXPIRED
                </span>
                <div class="timer">
                    Session ended
                </div>
            }
        </div>

        <!-- QR Code Image -->
        <img src="https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=@encodedUrl&margin=10&format=png"
             alt="QR Code for @Model.SessionTitle"
             class="qr-image img-fluid"
             style="max-width: 300px;">

        <p class="text-muted mt-3">
            <i class="fas fa-camera"></i> Scan this QR code to mark attendance
        </p>

        <!-- Action Buttons -->
        <div class="btn-group-custom">
            <button onclick="window.print()" class="btn btn-primary btn-custom">
                <i class="fas fa-print"></i> Print
            </button>
            <button onclick="copyToClipboard('@scanUrl')" class="btn btn-info btn-custom">
                <i class="fas fa-copy"></i> Copy Link
            </button>
            <button onclick="window.close()" class="btn btn-secondary btn-custom">
                <i class="fas fa-times"></i> Close
            </button>
        </div>

        <!-- Scan URL (hidden but accessible) -->
        <div class="mt-3 small text-muted">
            <small>Scan URL: <span id="scan-url">@scanUrl</span></small>
        </div>
    </div>

    <script>
        // Countdown timer
        function updateTimer() {
            const expiresAt = new Date('@expiresAt.ToString("yyyy-MM-ddTHH:mm:ss")');
            const now = new Date();
            const timeLeft = expiresAt - now;

            if (timeLeft > 0) {
                const minutes = Math.floor(timeLeft / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                document.getElementById('time-left').textContent =
                    `${minutes}:${seconds.toString().padStart(2, '0')}`;
            } else {
                document.getElementById('countdown-timer').innerHTML =
                    '<i class="fas fa-exclamation-triangle"></i> Session expired';
                document.getElementById('countdown-timer').className = 'timer status-expired';
                clearInterval(timerInterval);
            }
        }

        // Copy to clipboard function
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success feedback
                const originalText = button.target.innerHTML;
                button.target.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.target.classList.remove('btn-info');
                button.target.classList.add('btn-success');

                setTimeout(() => {
                    button.target.innerHTML = originalText;
                    button.target.classList.remove('btn-success');
                    button.target.classList.add('btn-info');
                }, 2000);
            }).catch(function(err) {
                console.error('Failed to copy: ', err);
                alert('Failed to copy link to clipboard');
            });
        }

        // Auto-refresh timer every second
        let timerInterval;
        if ('@DateTime.Now < expiresAt' === 'True') {
            timerInterval = setInterval(updateTimer, 1000);
            updateTimer(); // Initial call
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                window.close();
            } else if (event.key === 'p' && (event.ctrlKey || event.metaKey)) {
                event.preventDefault();
                window.print();
            } else if (event.key === 'c' && (event.ctrlKey || event.metaKey)) {
                event.preventDefault();
                copyToClipboard('@scanUrl');
            }
        });

        // Auto-focus for better UX
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.qr-container').focus();
        });
    </script>
</body>
</html>