@model List<QRCodeSession>

@{
    ViewData["Title"] = "QR Attendance Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-qrcode"></i> QR Attendance System
                </h3>
            </div>
            <div class="card-body">
                <!-- Quick Action Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-success text-white h-100">
                            <div class="card-body">
                                <i class="fas fa-plus-circle fa-3x mb-3"></i>
                                <h5>Create Session</h5>
                                <p class="mb-0">Generate new QR codes for attendance</p>
                                <a asp-action="Create" class="btn btn-light btn-sm mt-2">Get Started</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-info text-white h-100">
                            <div class="card-body">
                                <i class="fas fa-list fa-3x mb-3"></i>
                                <h5>Active Sessions</h5>
                                <p class="mb-0">Manage current QR sessions</p>
                                <a asp-action="ActiveSessions" class="btn btn-light btn-sm mt-2">View All</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-warning text-white h-100">
                            <div class="card-body">
                                <i class="fas fa-camera fa-3x mb-3"></i>
                                <h5>Scan QR</h5>
                                <p class="mb-0">Student scanning interface</p>
                                <a asp-action="Scan" class="btn btn-light btn-sm mt-2">Start Scanning</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-secondary text-white h-100">
                            <div class="card-body">
                                <i class="fas fa-chart-bar fa-3x mb-3"></i>
                                <h5>Reports & Analytics</h5>
                                <p class="mb-0">View attendance statistics and exports</p>
                                <a asp-action="Reports" class="btn btn-light btn-sm mt-2">View Reports</a>
                            </div>
                        </div>
                    </div>

                </div>

                @if (Model.Any())
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4>
                                    <i class="fas fa-play-circle text-success"></i> 
                                    Active Sessions (@Model.Count)
                                </h4>
                                <div class="btn-group">
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> New Session
                                    </a>
                                    <a asp-action="ActiveSessions" class="btn btn-outline-primary">
                                        <i class="fas fa-list"></i> Manage All
                                    </a>
                                </div>
                            </div>
                            
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Session Title</th>
                                            <th>Course</th>
                                            <th>Duration</th>
                                            <th>Scans</th>
                                            <th>Status</th>
                                            <th>Time Left</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var session in Model)
                                        {
                                            var expiresAt = session.CreatedAt.AddMinutes(session.DurationMinutes);
                                            var timeLeft = expiresAt - DateTime.Now;
                                            var timeLeftText = timeLeft.TotalMinutes > 0 ? 
                                                $"{(int)timeLeft.TotalMinutes}m {(int)timeLeft.Seconds}s" : "Expired";
                                            
                                            <tr>
                                                <td>
                                                    <strong>@session.SessionTitle</strong>
                                                    @if (!string.IsNullOrEmpty(session.Description))
                                                    {
                                                        <br />
                                                        <small class="text-muted">@session.Description</small>
                                                    }
                                                </td>
                                                <td>@session.Course?.CourseCode</td>
                                                <td>@session.DurationMinutes minutes</td>
                                                <td>
                                                    <span class="badge @(session.Attendances.Count > 0 ? "bg-success" : "bg-secondary")">
                                                        @session.Attendances.Count
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (timeLeft.TotalMinutes > 0)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Expired</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="@(timeLeft.TotalMinutes > 0 ? "text-success" : "text-danger")">
                                                        @timeLeftText
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-action="SessionCreated" asp-route-id="@session.Id"
                                                           class="btn btn-outline-primary" title="View QR">
                                                            <i class="fas fa-qrcode"></i>
                                                        </a>
                                                        <a asp-action="Dashboard" asp-route-id="@session.Id"
                                                           class="btn btn-outline-info" title="Dashboard">
                                                            <i class="fas fa-chart-line"></i>
                                                        </a>
                                                        <a asp-action="ExportAttendance" asp-route-sessionId="@session.Id"
                                                           class="btn btn-outline-warning" title="Export">
                                                            <i class="fas fa-download"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-qrcode fa-5x text-muted mb-4"></i>
                        <h3>Welcome to QR Attendance System</h3>
                        <p class="text-muted lead mb-4">
                            Create your first QR session to start tracking attendance in real-time.
                        </p>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5>Getting Started</h5>
                                        <ol class="text-start">
                                            <li>Click "Create QR Session"</li>
                                            <li>Select a course and configure session settings</li>
                                            <li>Display the generated QR code for students to scan</li>
                                            <li>Monitor attendance in real-time on the dashboard</li>
                                        </ol>
                                        <a asp-action="Create" class="btn btn-primary btn-lg">
                                            <i class="fas fa-rocket"></i> Create Your First Session
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh the page every 60 seconds to update time left
        setInterval(() => {
            location.reload();
        }, 60000);

        // Add tooltips
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}