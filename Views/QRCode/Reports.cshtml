@model List<QRCodeSession>

@{
    ViewData["Title"] = "Attendance Reports & Analytics";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-chart-bar"></i> Attendance Reports & Analytics
                </h3>
            </div>
            <div class="card-body">
                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-success text-white">
                            <div class="card-body">
                                <h3>@ViewBag.TotalSessions</h3>
                                <p>Total Sessions</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-info text-white">
                            <div class="card-body">
                                <h3>@ViewBag.TotalAttendances</h3>
                                <p>Total Scans</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-warning text-white">
                            <div class="card-body">
                                <h3>@ViewBag.ActiveSessions</h3>
                                <p>Active Sessions</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card text-center bg-secondary text-white">
                            <div class="card-body">
                                <h3>@(Model.Count)</h3>
                                <p>Recent Sessions</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="btn-group">
                            <a asp-action="BulkExport" class="btn btn-success">
                                <i class="fas fa-file-excel"></i> Bulk Export
                            </a>
                            <a asp-action="ExportAllSessions" class="btn btn-primary">
                                <i class="fas fa-download"></i> Export All to Excel
                            </a>
                            <form asp-action="ExportAllSessions" method="get" class="d-inline">
                                <input type="hidden" name="startDate" value="@DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")" />
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-calendar-week"></i> Last 7 Days
                                </button>
                            </form>
                            <form asp-action="ExportAllSessions" method="get" class="d-inline">
                                <input type="hidden" name="startDate" value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" />
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-calendar-alt"></i> Last 30 Days
                                </button>
                            </form>
                            <a asp-action="ImportAttendance" class="btn btn-secondary">
                                <i class="fas fa-upload"></i> Import Data
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Recent Sessions Table -->
                <div class="row">
                    <div class="col-md-12">
                        <h4>Recent Sessions</h4>
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Session Title</th>
                                            <th>Course</th>
                                            <th>Created</th>
                                            <th>Duration</th>
                                            <th>Scans</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var session in Model)
                                        {
                                            var expiresAt = session.CreatedAt.AddMinutes(session.DurationMinutes);
                                            var isExpired = expiresAt < DateTime.Now;
                                            <tr>
                                                <td>@session.SessionTitle</td>
                                                <td>@session.Course?.CourseCode</td>
                                                <td>@session.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                                <td>@session.DurationMinutes minutes</td>
                                                <td>
                                                    <span class="badge @(session.Attendances.Count > 0 ? "bg-success" : "bg-secondary")">
                                                        @session.Attendances.Count
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (isExpired)
                                                    {
                                                        <span class="badge bg-danger">Expired</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-action="Dashboard" asp-route-id="@session.Id"
                                                           class="btn btn-outline-info" title="View Dashboard">
                                                            <i class="fas fa-chart-line"></i>
                                                        </a>

                                                        <!-- Excel Export -->
                                                        <form asp-action="ExportSessionExcel" method="post" class="d-inline">
                                                            <input type="hidden" name="sessionId" value="@session.Id" />
                                                            <button type="submit" class="btn btn-outline-success" title="Export Excel">
                                                                <i class="fas fa-file-excel"></i>
                                                            </button>
                                                        </form>

                                                        <!-- PDF Export -->
                                                        <form asp-action="ExportSessionPdf" method="post" class="d-inline">
                                                            <input type="hidden" name="sessionId" value="@session.Id" />
                                                            <button type="submit" class="btn btn-outline-danger" title="Export PDF">
                                                                <i class="fas fa-file-pdf"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> No sessions found.
                                <a asp-action="Create">Create your first session</a> to see reports.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>