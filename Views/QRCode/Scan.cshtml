@{
    ViewData["Title"] = "Scan QR Code";
    var token = ViewBag.Token as string;
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .scan-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            padding: 30px;
            max-width: 450px;
            width: 100%;
            text-align: center;
        }

        .header-section {
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f8f9fa;
        }

        .status-indicator {
            padding: 12px 20px;
            border-radius: 25px;
            font-weight: 600;
            margin: 15px 0;
            transition: all 0.3s ease;
        }

        .status-valid {
            background: #d4edda;
            color: #155724;
            border: 2px solid #c3e6cb;
        }

        .status-invalid {
            background: #f8d7da;
            color: #721c24;
            border: 2px solid #f5c6cb;
        }

        .status-loading {
            background: #fff3cd;
            color: #856404;
            border: 2px solid #ffeaa7;
        }

        .form-section {
            margin: 25px 0;
        }

        .form-control {
            padding: 15px;
            border-radius: 12px;
            border: 2px solid #e9ecef;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .btn-scan {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-scan:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
            }

            .btn-scan:disabled {
                background: #6c757d;
                transform: none;
                box-shadow: none;
            }

        .result-section {
            margin-top: 20px;
            min-height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 15px 20px;
            width: 100%;
        }

        .pulse {
            animation: pulseAnimation 2s infinite;
        }

        /* RESPONSIVE DESIGN */
        @@media (max-width: 576px) {
            .scan-container {
                padding: 20px;
                margin: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="scan-container">
        <!-- HEADER SECTION -->
        <div class="header-section">
            <h2 class="mb-3"><i class="fas fa-qrcode"></i> Scan QR Code</h2>
            <p class="text-muted">Enter your student ID to mark attendance</p>
        </div>

        @if (!string.IsNullOrEmpty(token))
        {
            <!-- SESSION STATUS -->
            <div id="sessionStatus" class="status-indicator status-loading">
                <i class="fas fa-sync-alt fa-spin"></i> Validating session...
            </div>

            <!-- SCAN FORM -->
            <div class="form-section">
                <form id="scanForm">
                    <div class="mb-3">
                        <label for="studentId" class="form-label text-start w-100">
                            <i class="fas fa-id-card"></i> Student ID
                        </label>
                        <input type="number"
                               class="form-control"
                               id="studentId"
                               placeholder="Enter your student ID"
                               required
                               min="1">
                        <div class="form-text text-start">
                            Enter your numeric student ID (e.g., 12345)
                        </div>
                    </div>

                    <button type="submit" class="btn-scan" id="submitBtn">
                        <i class="fas fa-check-circle"></i> Mark Attendance
                    </button>
                </form>
            </div>

            <!-- RESULT DISPLAY -->
            <div class="result-section">
                <div id="result" style="display: none;"></div>
            </div>

            <!-- DEBUG INFO -->
            <div class="mt-3 small text-muted">
                <small>Token: <code>@token</code></small><br>
                <small>URL: <span id="debugUrl">@Context.Request.Path@Context.Request.QueryString</span></small>
            </div>
        }
        else
        {
            <!-- NO TOKEN MESSAGE -->
            <div class="status-indicator status-invalid">
                <i class="fas fa-exclamation-triangle"></i> Invalid QR Code
            </div>
            <p class="text-muted mt-3">
                This QR code is invalid or has expired. Please scan a valid QR code.
            </p>
            <a href="/" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Return to Home
            </a>
        }
    </div>

    <script>
        // Add CSS animations via JavaScript
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes slideUpAnimation {
                from { opacity: 0; transform: translateY(30px); }
                to { opacity: 1; transform: translateY(0); }
            }
            @@keyframes pulseAnimation {
                0% { opacity: 1; }
                50% { opacity: 0.7; }
                100% { opacity: 1; }
            }
            .scan-container {
                animation: slideUpAnimation 0.6s ease-out;
            }
            .pulse {
                animation: pulseAnimation 2s infinite;
            }
        `;
        document.head.appendChild(style);

        const token = '@token';

        // Validate session on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Scan page loaded with token:', token);

            if (token && token !== '') {
                // Add pulse animation to status element
                const statusElement = document.getElementById('sessionStatus');
                if (statusElement) {
                    statusElement.classList.add('pulse');
                }

                validateSession(token);

                // Add event listener to form
                const scanForm = document.getElementById('scanForm');
                if (scanForm) {
                    scanForm.addEventListener('submit', handleFormSubmit);
                }

                // Auto-focus on student ID field
                const studentIdField = document.getElementById('studentId');
                if (studentIdField) {
                    studentIdField.focus();
                }
            } else {
                console.error('No token provided in URL');
            }
        });

        // Validate session function - SIMPLIFIED
                // Validate session function - FIXED RESPONSE HANDLING
        async function validateSession(sessionToken) {
            const statusElement = document.getElementById('sessionStatus');
            if (!statusElement) return;

            try {
                console.log('Validating session with token:', sessionToken);

                const response = await fetch('/QRCode/ValidateSession?token=' + encodeURIComponent(sessionToken));

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('Validation response:', data);

                // ✅ FIXED: Properly check the response structure
                if (data.isValid === true) {
                    statusElement.innerHTML = '<i class="fas fa-check-circle"></i> Session Valid - Ready to Scan';
                    statusElement.className = 'status-indicator status-valid';
                    statusElement.classList.remove('pulse');
                } else {
                    statusElement.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Session Invalid or Expired';
                    statusElement.className = 'status-indicator status-invalid';
                    statusElement.classList.remove('pulse');

                    // Disable submit button if it exists
                    const submitBtn = document.getElementById('submitBtn');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                    }
                }
            } catch (error) {
                console.error('Validation error:', error);
                statusElement.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Error - Failed to validate session';
                statusElement.className = 'status-indicator status-invalid';
                statusElement.classList.remove('pulse');
            }
        }

        // Handle form submission - SIMPLIFIED
        async function handleFormSubmit(e) {
            e.preventDefault();

            const studentId = document.getElementById('studentId')?.value;
            const submitBtn = document.getElementById('submitBtn');
            const resultDiv = document.getElementById('result');

            if (!studentId || studentId < 1) {
                showResult('Please enter a valid student ID', 'danger');
                return;
            }

            // Disable button and show loading
            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            }

            try {
                console.log('Submitting attendance for student:', studentId);

                const response = await fetch('/QRCode/Scan', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        token: token,
                        studentId: parseInt(studentId),
                        deviceInfo: navigator.userAgent
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('Scan response:', data);

                if (data.success) {
                    showResult(data.message, 'success');
                    // Clear form
                    const studentIdField = document.getElementById('studentId');
                    if (studentIdField) {
                        studentIdField.value = '';
                    }
                } else {
                    showResult(data.message, 'danger');
                }
            } catch (error) {
                console.error('Scan error:', error);
                showResult('Network error. Please try again.', 'danger');
            } finally {
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Mark Attendance';
                }
            }
        }

        // Show result message
        function showResult(message, type) {
            const resultDiv = document.getElementById('result');
            if (!resultDiv) return;

            const alertClass = type === 'success' ? 'alert-success' :
                             type === 'danger' ? 'alert-danger' : 'alert-info';
            const icon = type === 'success' ? 'fa-check-circle' :
                       type === 'danger' ? 'fa-exclamation-triangle' : 'fa-info-circle';

            resultDiv.innerHTML = `<div class="alert ${alertClass}"><i class="fas ${icon}"></i> ${message}</div>`;
            resultDiv.style.display = 'block';

            if (type === 'success') {
                setTimeout(() => {
                    resultDiv.style.display = 'none';
                }, 5000);
            }
        }

        // Keyboard shortcut
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Enter') {
                const studentIdField = document.getElementById('studentId');
                const scanForm = document.getElementById('scanForm');
                if (studentIdField && studentIdField.value && scanForm) {
                    event.preventDefault();
                    scanForm.requestSubmit();
                }
            }
        });
    </script>
</body>
</html>