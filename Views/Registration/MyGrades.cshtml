@model List<StudentManagementSystem.Models.FinalGrade>
@{
    ViewData["Title"] = "My Grades";
    Layout = "_StudentLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-chart-bar me-2"></i>My Grades
    </h1>
    <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="fas fa-filter me-2"></i>Filter by Semester
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="MyGrades" asp-route-studentId="@ViewContext.RouteData.Values["studentId"]">All Semesters</a></li>
            @foreach (var semester in ViewBag.Semesters)
            {
                <li>
                    <a class="dropdown-item" asp-action="MyGrades" asp-route-studentId="@ViewContext.RouteData.Values["studentId"]"
                       asp-route-semesterId="@semester.Id">
                        @semester.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

<!-- Semester GPA Card -->
@if (ViewBag.SelectedSemesterId != null && ViewBag.SemesterGPA != null)
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h3 class="card-title">@(((decimal)ViewBag.SemesterGPA).ToString("F2"))</h3>
                    <p class="card-text">Semester GPA</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.Count</h3>
                    <p class="card-text">Courses Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.Sum(g => g.Course?.Credits ?? 0)</h3>
                    <p class="card-text">Total Credits</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Grades Table -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-table me-2"></i>Grade History
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Semester</th>
                            <th>Course</th>
                            <th>Course Name</th>
                            <th>Credits</th>
                            <th>Final Grade</th>
                            <th>Grade Points</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grade in Model)
                        {
                            <tr>
                                <td>@grade.Semester?.Name</td>
                                <td>
                                    <strong>@grade.Course?.CourseCode</strong>
                                </td>
                                <td>@grade.Course?.CourseName</td>
                                <td>@grade.Course?.Credits</td>
                                <td>
                                    <span class="badge @GetGradeBadgeClass(grade.FinalGradeLetter)">
                                        @grade.FinalGradeLetter
                                    </span>
                                </td>
                                <td>
                                    <strong>@(grade.FinalGradePoints?.ToString("F2") ?? "N/A")</strong>
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(grade.GradeStatus)">
                                        @grade.GradeStatus
                                    </span>
                                </td>
                                <td>
                                    <small>@grade.CalculationDate.ToString("MMM dd, yyyy")</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- GPA Summary -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="card-title mb-0">Cumulative GPA</h6>
                        </div>
                        <div class="card-body text-center">
                            <h2 class="text-primary">@ViewBag.Student.GPA.ToString("F2")</h2>
                            <p class="text-muted mb-0">Based on @ViewBag.Student.PassedHours completed credits</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="card-title mb-0">Grade Distribution</h6>
                        </div>
                        <div class="card-body">
                            @{
                                var gradeDistribution = Model
                                .Where(g => g.GradeStatus == GradeStatus.Completed && !string.IsNullOrEmpty(g.FinalGradeLetter))
                                .GroupBy(g => g.FinalGradeLetter)
                                .OrderBy(g => g.Key)
                                .ToDictionary(g => g.Key, g => g.Count());
                            }
                            @foreach (var dist in gradeDistribution)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge @GetGradeBadgeClass(dist.Key)">@dist.Key</span>
                                    <span>@dist.Value courses</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No grades available</h5>
                <p class="text-muted">Your grade history will appear here once grades are posted.</p>
            </div>
        }
    </div>
</div>

@functions {
    private string GetGradeBadgeClass(string grade)
    {
        if (string.IsNullOrEmpty(grade)) return "bg-secondary";

        return grade.ToUpper() switch
        {
            "A" or "A+" => "bg-success",
            "A-" => "bg-success",
            "B+" => "bg-primary",
            "B" => "bg-primary",
            "B-" => "bg-primary",
            "C+" => "bg-info",
            "C" => "bg-info",
            "C-" => "bg-info",
            "D+" => "bg-warning",
            "D" => "bg-warning",
            "F" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetStatusBadgeClass(GradeStatus status)
    {
        return status switch
        {
            GradeStatus.Completed => "bg-success",
            GradeStatus.InProgress => "bg-warning",
            GradeStatus.Withdrawn => "bg-secondary",
            GradeStatus.Failed => "bg-danger",
            _ => "bg-secondary"
        };
    }
}