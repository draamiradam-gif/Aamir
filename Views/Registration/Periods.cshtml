@model StudentManagementSystem.ViewModels.PeriodsManagementViewModel
@{
    ViewData["Title"] = "Registration Periods Management";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-calendar-alt me-2"></i>Registration Periods
    </h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPeriodModal">
        <i class="fas fa-plus me-2"></i>Add New Period
    </button>
</div>

<!-- Periods Table -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>Registration Periods
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Periods.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Period Name</th>
                            <th>Semester</th>
                            <th>Dates</th>
                            <th>Registration Type</th>
                            <th>Limits</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var period in Model.Periods)
                        {
                            <tr>
                                <td>
                                    <strong>@period.PeriodName</strong>
                                    <div class="mt-1">
                                        @if (period.IsOpen)
                                        {
                                            <span class="badge bg-success">Currently Open</span>
                                        }
                                        else if (DateTime.Now < period.StartDate)
                                        {
                                            <span class="badge bg-info">Upcoming</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Closed</span>
                                        }
                                    </div>
                                </td>
                                <td>@period.Semester?.Name</td>
                                <td>
                                    <small>
                                        <strong>Start:</strong> @period.StartDate.ToString("MMM dd, yyyy")<br>
                                        <strong>End:</strong> @period.EndDate.ToString("MMM dd, yyyy")
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@period.RegistrationType</span>
                                </td>
                                <td>
                                    @if (period.MaxCoursesPerStudent.HasValue)
                                    {
                                        <small>Max Courses: @period.MaxCoursesPerStudent.Value</small>
                            
                                        <br>
                                    }
                                    @if (period.MaxCreditHours.HasValue)
                                    {
                                        <small>Max Credits: @period.MaxCreditHours.Value</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(period.IsActive ? "bg-success" : "bg-secondary")">
                                        @(period.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#editPeriodModal"
                                                data-period-id="@period.Id"
                                                data-period-name="@period.PeriodName"
                                                data-start-date="@period.StartDate.ToString("yyyy-MM-dd")"
                                                data-end-date="@period.EndDate.ToString("yyyy-MM-dd")"
                                                data-semester-id="@period.SemesterId"
                                                data-registration-type="@period.RegistrationType"
                                                data-max-courses="@period.MaxCoursesPerStudent"
                                                data-max-credits="@period.MaxCreditHours"
                                                data-is-active="@period.IsActive">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <form asp-action="TogglePeriod" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@period.Id" />
                                            <button type="submit" class="btn btn-outline-@(period.IsActive ? "warning" : "success") btn-sm">
                                                <i class="fas fa-@(period.IsActive ? "pause" : "play")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No registration periods configured</h5>
                <p class="text-muted">Add your first registration period to get started.</p>
            </div>
        }
    </div>
</div>

<!-- Add Period Modal -->
<div class="modal fade" id="addPeriodModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Registration Period</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SavePeriod" method="post">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="PeriodName">Period Name *</label>
                        <input type="text" class="form-control" name="PeriodName" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="StartDate">Start Date *</label>
                                <input type="date" class="form-control" name="StartDate" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="EndDate">End Date *</label>
                                <input type="date" class="form-control" name="EndDate" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="SemesterId">Semester *</label>
                                <select class="form-control" name="SemesterId" required>
                                    <option value="">Select Semester</option>
                                    @foreach (var semester in Model.Semesters)
                                    {
                                        <option value="@semester.Id">@semester.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="RegistrationType">Registration Type *</label>
                                <select class="form-control" name="RegistrationType" required>
                                    @foreach (RegistrationType type in Enum.GetValues(typeof(RegistrationType)))
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MaxCoursesPerStudent">Max Courses Per Student</label>
                                <input type="number" class="form-control" name="MaxCoursesPerStudent" min="0" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MaxCreditHours">Max Credit Hours</label>
                                <input type="number" class="form-control" name="MaxCreditHours" min="0" />
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="IsActive" value="true" checked />
                        <label class="form-check-label">Active Period</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Period</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Period Modal -->
<div class="modal fade" id="editPeriodModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Registration Period</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SavePeriod" method="post">
                <input type="hidden" name="Id" id="editPeriodId" />
                <div class="modal-body" id="editPeriodForm">
                    <!-- Form will be populated by JavaScript -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Period</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Edit modal setup
        const editPeriodModal = document.getElementById('editPeriodModal');
        if (editPeriodModal) {
            editPeriodModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;

                // Get form from modal content
                const modalContent = document.getElementById('editPeriodForm');
                if (!modalContent) return;

                // Generate form HTML with the data
                const formHtml = `
                    <div class="form-group mb-3">
                        <label for="PeriodName">Period Name *</label>
                        <input type="text" class="form-control" name="PeriodName"
                               value="${button.getAttribute('data-period-name') || ''}" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="StartDate">Start Date *</label>
                                <input type="date" class="form-control" name="StartDate"
                                       value="${button.getAttribute('data-start-date') || ''}" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="EndDate">End Date *</label>
                                <input type="date" class="form-control" name="EndDate"
                                       value="${button.getAttribute('data-end-date') || ''}" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="SemesterId">Semester *</label>
                                <select class="form-control" name="SemesterId" required>
                                    <option value="">Select Semester</option>
                                    @foreach (var semester in Model.Semesters)
                                    {
                                            <option value="@semester.Id">@semester.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="RegistrationType">Registration Type *</label>
                                <select class="form-control" name="RegistrationType" required>
                                    @foreach (RegistrationType type in Enum.GetValues(typeof(RegistrationType)))
                                    {
                                            <option value="@type">@type</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MaxCoursesPerStudent">Max Courses Per Student</label>
                                <input type="number" class="form-control" name="MaxCoursesPerStudent"
                                       value="${button.getAttribute('data-max-courses') || ''}" min="0" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MaxCreditHours">Max Credit Hours</label>
                                <input type="number" class="form-control" name="MaxCreditHours"
                                       value="${button.getAttribute('data-max-credits') || ''}" min="0" />
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="IsActive" value="true"
                               ${button.getAttribute('data-is-active') === 'True' ? 'checked' : ''} />
                        <label class="form-check-label">Active Period</label>
                    </div>
                `;

                // Set the period ID
                document.getElementById('editPeriodId').value = button.getAttribute('data-period-id') || '';

                // Update form content
                modalContent.innerHTML = formHtml;

                // Set select values
                const semesterSelect = modalContent.querySelector('select[name="SemesterId"]');
                const typeSelect = modalContent.querySelector('select[name="RegistrationType"]');

                if (semesterSelect) {
                    semesterSelect.value = button.getAttribute('data-semester-id') || '';
                }
                if (typeSelect) {
                    typeSelect.value = button.getAttribute('data-registration-type') || 'Regular';
                }
            });
        }

        // Date validation
        document.addEventListener('DOMContentLoaded', function() {
            const startDateInput = document.querySelector('input[name="StartDate"]');
            const endDateInput = document.querySelector('input[name="EndDate"]');

            if (startDateInput && endDateInput) {
                startDateInput.addEventListener('change', function() {
                    if (this.value) {
                        endDateInput.min = this.value;
                    }
                });
            }
        });

        // Define global functions
        window.showPendingRegistrations = function() {
            window.location.href = '@Url.Action("Management", "Registration")?filter=pending';
        };

        window.showRegistrationStats = function() {
            window.location.href = '@Url.Action("Analytics", "Registration")';
        };
    </script>
}