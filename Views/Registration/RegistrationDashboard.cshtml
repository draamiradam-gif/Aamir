@model dynamic
@{
    ViewData["Title"] = "Registration Dashboard";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-tachometer-alt me-2"></i>Registration Dashboard
    </h1>
    <button class="btn btn-primary" onclick="refreshDashboard()">
        <i class="fas fa-sync-alt me-2"></i>Refresh
    </button>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <h3>@Model.TotalRegistrations</h3>
                <p>Total Registrations</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <h3>@Model.PendingRegistrations</h3>
                <p>Pending</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h3>@Model.ApprovedRegistrations</h3>
                <p>Approved</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <h3>@Model.CurrentSemesterRegistrations</h3>
                <p>This Semester</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-danger">
            <div class="card-body text-center">
                <h3>@Model.ActiveRules</h3>
                <p>Active Rules</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-secondary">
            <div class="card-body text-center">
                <h3>@Model.BlockingRules</h3>
                <p>Blocking Rules</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-dark">
            <div class="card-body text-center">
                <h3>@(Model.ActivePeriods?.Count ?? 0)</h3>
                <p>Active Periods</p>
            </div>
        </div>
    </div>
</div>

<!-- Active Registration Periods -->
@if (Model.ActivePeriods != null && Model.ActivePeriods.Count > 0)
{
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-calendar-check me-2"></i>Active Registration Periods
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var period in Model.ActivePeriods)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h6>@period.PeriodName</h6>
                                <small class="text-muted">
                                    @period.StartDate.ToString("MMM dd") - @period.EndDate.ToString("MMM dd, yyyy")
                                </small>
                                <div class="mt-2">
                                    <span class="badge bg-success">Open</span>
                                    <span class="badge bg-info ms-1">@period.RegistrationType</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Recent Activity -->
@if (Model.RecentRegistrations != null && Model.RecentRegistrations.Count > 0)
{
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-history me-2"></i>Recent Registration Activity
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reg in Model.RecentRegistrations)
                        {
                            <tr>
                                <td>
                                    <strong>@reg.Student?.Name</strong><br>
                                    <small class="text-muted">@reg.Student?.StudentId</small>
                                </td>
                                <td>
                                    <strong>@reg.Course?.CourseCode</strong><br>
                                    <small class="text-muted">@reg.Course?.CourseName</small>
                                </td>
                                <td>
                                    <small>@reg.RegistrationDate.ToString("MMM dd, HH:mm")</small>
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(reg.Status)">
                                        @reg.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("GetRegistrationDetails", "Registration", new { id = reg.Id })"
                                       class="btn btn-sm btn-outline-info" data-bs-toggle="modal"
                                       data-bs-target="#detailsModal">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-md-2">
                        <a asp-action="Management" class="btn btn-outline-primary w-100">
                            <i class="fas fa-cogs me-2"></i>Manage
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="Rules" class="btn btn-outline-warning w-100">
                            <i class="fas fa-ruler-combined me-2"></i>Rules
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="Periods" class="btn btn-outline-info w-100">
                            <i class="fas fa-calendar-alt me-2"></i>Periods
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="Analytics" class="btn btn-outline-success w-100">
                            <i class="fas fa-chart-bar me-2"></i>Analytics
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="StudentHistorySelection" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-history me-2"></i>History
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="StudentPortalEntry" class="btn btn-outline-danger w-100">
                            <i class="fas fa-graduation-cap me-2"></i>Student Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshDashboard() {
            location.reload();
        }
    </script>
}

@functions {
    private string GetStatusBadgeClass(RegistrationStatus status)
    {
        return status switch
        {
            RegistrationStatus.Approved => "bg-success",
            RegistrationStatus.Pending => "bg-warning",
            RegistrationStatus.Rejected => "bg-danger",
            RegistrationStatus.Waitlisted => "bg-info",
            RegistrationStatus.Dropped => "bg-secondary",
            RegistrationStatus.Completed => "bg-primary",
            _ => "bg-secondary"
        };
    }
}