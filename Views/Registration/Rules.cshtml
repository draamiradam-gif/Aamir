@functions {
    private string GetRuleTypeBadge(RuleType type)
    {
        return type switch
        {
            RuleType.Prerequisite => "bg-primary",
            RuleType.CreditLimit => "bg-warning",
            RuleType.GPARequirement => "bg-success",
            RuleType.Departmental => "bg-info",
            RuleType.GradeLevel => "bg-secondary",
            RuleType.TimeConflict => "bg-danger",
            RuleType.MaximumCourses => "bg-purple",
            _ => "bg-dark"
        };
    }
    
    private string GetEnforcementBadge(EnforcementLevel level)
    {
        return level switch
        {
            EnforcementLevel.Block => "bg-danger",
            EnforcementLevel.Warning => "bg-warning",
            EnforcementLevel.Recommendation => "bg-info",
            _ => "bg-secondary"
        };
    }
