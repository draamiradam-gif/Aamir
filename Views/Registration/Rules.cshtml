@model StudentManagementSystem.ViewModels.RulesManagementViewModel
@{
    ViewData["Title"] = "Registration Rules Management";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-ruler-combined me-2"></i>Registration Rules
    </h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRuleModal">
        <i class="fas fa-plus me-2"></i>Add New Rule
    </button>
</div>

<!-- Rules Table -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>Registration Rules
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Rules.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Rule Name</th>
                            <th>Type</th>
                            <th>Department</th>
                            <th>Requirements</th>
                            <th>Enforcement</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rule in Model.Rules)
                        {
                            <tr>
                                <td>
                                    <strong>@rule.RuleName</strong>
                                    @if (!string.IsNullOrEmpty(rule.Description))
                                    {
                                        <br>
                                        <small class="text-muted">@rule.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@rule.RuleType</span>
                                </td>
                                <td>
                                    @rule.Department?.Name ?? "All Departments"
                                </td>
                                <td>
                                    @GetRuleRequirements(rule)
                                </td>
                                <td>
                                    <span class="badge @GetEnforcementBadgeClass(rule.EnforcementLevel)">
                                        @rule.EnforcementLevel
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(rule.IsActive ? "bg-success" : "bg-secondary")">
                                        @(rule.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#editRuleModal"
                                                data-rule-id="@rule.Id"
                                                data-rule-name="@rule.RuleName"
                                                data-description="@rule.Description"
                                                data-rule-type="@rule.RuleType"
                                                data-department-id="@rule.DepartmentId"
                                                data-minimum-gpa="@rule.MinimumGPA"
                                                data-minimum-passed-hours="@rule.MinimumPassedHours"
                                                data-maximum-credit-hours="@rule.MaximumCreditHours"
                                                data-minimum-credit-hours="@rule.MinimumCreditHours"
                                                data-grade-level="@rule.GradeLevel"
                                                data-enforcement-level="@rule.EnforcementLevel"
                                                data-is-active="@rule.IsActive">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <form asp-action="ToggleRule" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@rule.Id" />
                                            <button type="submit" class="btn btn-outline-@(rule.IsActive ? "warning" : "success") btn-sm">
                                                <i class="fas fa-@(rule.IsActive ? "pause" : "play")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-ruler-combined fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No rules configured</h5>
                <p class="text-muted">Add your first registration rule to get started.</p>
            </div>
        }
    </div>
</div>

<!-- Add Rule Modal -->
<div class="modal fade" id="addRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Registration Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SaveRule" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="RuleName">Rule Name *</label>
                                <input type="text" class="form-control" name="RuleName" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="RuleType">Rule Type *</label>
                                <select class="form-control" name="RuleType" required>
                                    <option value="">Select Rule Type</option>
                                    @foreach (RuleType type in Enum.GetValues(typeof(RuleType)))
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Description">Description</label>
                        <textarea class="form-control" name="Description" rows="2"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="DepartmentId">Department</label>
                                <select class="form-control" name="DepartmentId">
                                    <option value="">All Departments</option>
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.Id">@dept.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="EnforcementLevel">Enforcement Level *</label>
                                <select class="form-control" name="EnforcementLevel" required>
                                    @foreach (EnforcementLevel level in Enum.GetValues(typeof(EnforcementLevel)))
                                    {
                                        <option value="@level">@level</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="MinimumGPA">Minimum GPA</label>
                                <input type="number" class="form-control" name="MinimumGPA" step="0.01" min="0" max="4.0" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="MinimumPassedHours">Minimum Passed Hours</label>
                                <input type="number" class="form-control" name="MinimumPassedHours" min="0" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="GradeLevel">Grade Level</label>
                                <input type="number" class="form-control" name="GradeLevel" min="1" max="4" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MinimumCreditHours">Minimum Credit Hours</label>
                                <input type="number" class="form-control" name="MinimumCreditHours" min="0" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MaximumCreditHours">Maximum Credit Hours</label>
                                <input type="number" class="form-control" name="MaximumCreditHours" min="0" />
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="IsActive" value="true" checked />
                        <label class="form-check-label">Active Rule</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Rule</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Rule Modal -->
<div class="modal fade" id="editRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Registration Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SaveRule" method="post">
                <input type="hidden" name="Id" id="editRuleId" />
                <div class="modal-body" id="editRuleForm">
                    <!-- Form will be populated by JavaScript -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Rule</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Edit modal setup
        const editRuleModal = document.getElementById('editRuleModal');
        editRuleModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;

            const formHtml = `
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="RuleName">Rule Name *</label>
                            <input type="text" class="form-control" name="RuleName" value="${button.getAttribute('data-rule-name')}" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="RuleType">Rule Type *</label>
                            <select class="form-control" name="RuleType" required>
                                <option value="">Select Rule Type</option>
                                @foreach (RuleType type in Enum.GetValues(typeof(RuleType)))
                                {
                                        <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="Description">Description</label>
                    <textarea class="form-control" name="Description" rows="2">${button.getAttribute('data-description') || ''}</textarea>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="DepartmentId">Department</label>
                            <select class="form-control" name="DepartmentId">
                                <option value="">All Departments</option>
                                @foreach (var dept in Model.Departments)
                                {
                                        <option value="@dept.Id">@dept.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="EnforcementLevel">Enforcement Level *</label>
                            <select class="form-control" name="EnforcementLevel" required>
                                @foreach (EnforcementLevel level in Enum.GetValues(typeof(EnforcementLevel)))
                                {
                                        <option value="@level">@level</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="MinimumGPA">Minimum GPA</label>
                            <input type="number" class="form-control" name="MinimumGPA" value="${button.getAttribute('data-minimum-gpa') || ''}" step="0.01" min="0" max="4.0" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="MinimumPassedHours">Minimum Passed Hours</label>
                            <input type="number" class="form-control" name="MinimumPassedHours" value="${button.getAttribute('data-minimum-passed-hours') || ''}" min="0" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="GradeLevel">Grade Level</label>
                            <input type="number" class="form-control" name="GradeLevel" value="${button.getAttribute('data-grade-level') || ''}" min="1" max="4" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="MinimumCreditHours">Minimum Credit Hours</label>
                            <input type="number" class="form-control" name="MinimumCreditHours" value="${button.getAttribute('data-minimum-credit-hours') || ''}" min="0" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="MaximumCreditHours">Maximum Credit Hours</label>
                            <input type="number" class="form-control" name="MaximumCreditHours" value="${button.getAttribute('data-maximum-credit-hours') || ''}" min="0" />
                        </div>
                    </div>
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" ${button.getAttribute('data-is-active') === 'True' ? 'checked' : ''} />
                    <label class="form-check-label">Active Rule</label>
                </div>
            `;

            document.getElementById('editRuleId').value = button.getAttribute('data-rule-id');
            document.getElementById('editRuleForm').innerHTML = formHtml;

            // Set select values
            document.querySelector('#editRuleForm select[name="RuleType"]').value = button.getAttribute('data-rule-type');
            document.querySelector('#editRuleForm select[name="DepartmentId"]').value = button.getAttribute('data-department-id') || '';
            document.querySelector('#editRuleForm select[name="EnforcementLevel"]').value = button.getAttribute('data-enforcement-level');
        });
    </script>
}

@functions {
    private string GetRuleRequirements(RegistrationRule rule)
    {
        var requirements = new List<string>();

        if (rule.MinimumGPA.HasValue)
            requirements.Add($"GPA ≥ {rule.MinimumGPA.Value}");

        if (rule.MinimumPassedHours.HasValue)
            requirements.Add($"Hours ≥ {rule.MinimumPassedHours.Value}");

        if (rule.MaximumCreditHours.HasValue)
            requirements.Add($"Max Credits: {rule.MaximumCreditHours.Value}");

        if (rule.MinimumCreditHours.HasValue)
            requirements.Add($"Min Credits: {rule.MinimumCreditHours.Value}");

        if (rule.GradeLevel.HasValue)
            requirements.Add($"Level: {rule.GradeLevel.Value}");

        return string.Join(", ", requirements);
    }

    private string GetEnforcementBadgeClass(EnforcementLevel level)
    {
        return level switch
        {
            EnforcementLevel.Block => "bg-danger",
            EnforcementLevel.Warning => "bg-warning",
            EnforcementLevel.Recommendation => "bg-info",
            _ => "bg-secondary"
        };
    }
}