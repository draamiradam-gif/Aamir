@model StudentManagementSystem.ViewModels.RulesManagementViewModel
@{
    ViewData["Title"] = "Registration Rules Management";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-ruler-combined me-2"></i>Registration Rules
    </h1>
    <div class="d-flex gap-2">
        <!-- Add New Rule Button -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRuleModal">
            <i class="fas fa-plus me-2"></i>Add New Rule
        </button>
        
        <!-- Import from Courses Button -->
        <form asp-action="ImportRulesFromCourses" method="post">
            <button type="submit" class="btn btn-info">
                <i class="fas fa-sync-alt me-2"></i>Import from Courses
            </button>
        </form>
        
        <!-- Quick Actions Dropdown -->
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-cog me-2"></i>Actions
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" href="#" id="validateRulesBtn">
                        <i class="fas fa-check-circle me-2"></i>Validate All Rules
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" id="exportRulesBtn">
                        <i class="fas fa-download me-2"></i>Export Rules
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" id="toggleAllRulesBtn">
                        <i class="fas fa-power-off me-2"></i>Toggle All Rules
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Enhanced Rules Table -->
<div class="card">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="fas fa-list me-2"></i>Registration Rules
            <span class="badge bg-primary ms-2">@Model.Rules.Count rules</span>
        </h5>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="showInactiveRules" checked>
            <label class="form-check-label" for="showInactiveRules">Show Inactive</label>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Rules.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="rulesTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Rule Name</th>
                            <th>Type</th>
                            <th>Department</th>
                            <th>Requirements</th>
                            <th>Source</th>
                            <th>Enforcement</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rule in Model.Rules)
                        {
                            <tr class="rule-row @(rule.IsActive ? "" : "table-secondary")" 
                                data-rule-id="@rule.Id" 
                                data-is-active="@rule.IsActive.ToString().ToLower()">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <strong>@rule.RuleName</strong>
                                        @if (rule.CourseId.HasValue)
                                        {
                                            <span class="badge bg-info ms-2" title="Imported from course">Course</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(rule.Description))
                                    {
                                        <small class="text-muted d-block">@rule.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetRuleTypeBadge(rule.RuleType)">
                                        @rule.RuleType
                                    </span>
                                </td>
                                <td>
                                    @(rule.Department?.Name ?? "All Departments")
                                </td>
                                <td>
                                    <div class="small">
                                        @if (rule.MinimumGPA.HasValue)
                                        {
                                            <div class="mb-1">
                                                <i class="fas fa-chart-line me-1"></i>
                                                <span>GPA ≥ @rule.MinimumGPA.Value.ToString("F2")</span>
                                            </div>
                                        }
                                        @if (rule.MinimumPassedHours.HasValue)
                                        {
                                            <div class="mb-1">
                                                <i class="fas fa-clock me-1"></i>
                                                <span>Hours ≥ @rule.MinimumPassedHours.Value</span>
                                            </div>
                                        }
                                        @if (rule.MaximumCreditHours.HasValue)
                                        {
                                            <div class="mb-1">
                                                <i class="fas fa-balance-scale me-1"></i>
                                                <span>Max Credits: @rule.MaximumCreditHours.Value</span>
                                            </div>
                                        }
                                        @if (rule.MinimumCreditHours.HasValue)
                                        {
                                            <div class="mb-1">
                                                <i class="fas fa-balance-scale-left me-1"></i>
                                                <span>Min Credits: @rule.MinimumCreditHours.Value</span>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (rule.Course != null)
                                    {
                                        <small>
                                            <i class="fas fa-book me-1"></i>
                                            @rule.Course.CourseCode
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Manual</span>
                                    }
                                </td>

                                <td>
                                    <span class="badge @GetEnforcementBadge(rule.EnforcementLevel)">
                                        @rule.EnforcementLevel
                                    </span>
                                </td>
                                <td>
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input rule-toggle" 
                                               type="checkbox" 
                                               data-rule-id="@rule.Id"
                                               @(rule.IsActive ? "checked" : "")>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary btn-sm edit-rule-btn"
                                                data-rule-id="@rule.Id"
                                                data-rule-name="@rule.RuleName"
                                                data-description="@rule.Description"
                                                data-rule-type="@rule.RuleType"
                                                data-department-id="@rule.DepartmentId"
                                                data-minimum-gpa="@rule.MinimumGPA"
                                                data-minimum-passed-hours="@rule.MinimumPassedHours"
                                                data-maximum-credit-hours="@rule.MaximumCreditHours"
                                                data-minimum-credit-hours="@rule.MinimumCreditHours"
                                                data-grade-level="@rule.GradeLevel"
                                                data-enforcement-level="@rule.EnforcementLevel"
                                                data-is-course-based="@rule.CourseId.HasValue"
                                                data-course-id="@rule.CourseId">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        
                                        <button type="button" class="btn btn-outline-info btn-sm duplicate-rule-btn"
                                                data-rule-id="@rule.Id">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                        
                                        <button type="button" class="btn btn-outline-danger btn-sm delete-rule-btn"
                                                data-rule-id="@rule.Id"
                                                data-rule-name="@rule.RuleName">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-ruler-combined fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No rules configured</h5>
                <p class="text-muted mb-4">Add your first registration rule or import from courses</p>
                <div class="d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRuleModal">
                        <i class="fas fa-plus me-2"></i>Add First Rule
                    </button>
                    <button type="button" class="btn btn-info" id="importFromCoursesEmptyBtn">
                        <i class="fas fa-sync me-2"></i>Import from Courses
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add Rule Modal (Fixed) -->
<div class="modal fade" id="addRuleModal" tabindex="-1" aria-labelledby="addRuleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addRuleModalLabel">
                    <i class="fas fa-plus me-2"></i>Add New Registration Rule
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addRuleForm" asp-action="SaveRule" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="RuleName" class="form-label">Rule Name *</label>
                                <input type="text" class="form-control" id="RuleName" name="RuleName" required 
                                       placeholder="Enter rule name (e.g., 'Minimum GPA Requirement')">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="RuleType" class="form-label">Rule Type *</label>
                                <select class="form-control" id="RuleType" name="RuleType" required>
                                    <option value="">Select Rule Type</option>
                                    <option value="Prerequisite">Prerequisite</option>
                                    <option value="CreditLimit">Credit Limit</option>
                                    <option value="GPARequirement">GPA Requirement</option>
                                    <option value="Departmental">Departmental</option>
                                    <option value="GradeLevel">Grade Level</option>
                                    <option value="TimeConflict">Time Conflict</option>
                                    <option value="MaximumCourses">Maximum Courses</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="2"
                                  placeholder="Describe what this rule does..."></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="DepartmentId" class="form-label">Department (Optional)</label>
                                <select class="form-control" id="DepartmentId" name="DepartmentId">
                                    <option value="">All Departments</option>
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.Id">@dept.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="EnforcementLevel" class="form-label">Enforcement Level *</label>
                                <select class="form-control" id="EnforcementLevel" name="EnforcementLevel" required>
                                    <option value="Warning">Warning</option>
                                    <option value="Block">Block</option>
                                    <option value="Recommendation">Recommendation</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="MinimumGPA" class="form-label">Minimum GPA</label>
                                <input type="number" class="form-control" id="MinimumGPA" name="MinimumGPA" 
                                       step="0.01" min="0" max="4.0" placeholder="e.g., 2.0">
                                <small class="text-muted">Leave empty if not required</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="MinimumPassedHours" class="form-label">Minimum Passed Hours</label>
                                <input type="number" class="form-control" id="MinimumPassedHours" name="MinimumPassedHours" 
                                       min="0" placeholder="e.g., 30">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="GradeLevel" class="form-label">Minimum Grade Level</label>
                                <input type="number" class="form-control" id="GradeLevel" name="GradeLevel" 
                                       min="1" max="4" placeholder="e.g., 2">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MinimumCreditHours" class="form-label">Minimum Credit Hours</label>
                                <input type="number" class="form-control" id="MinimumCreditHours" name="MinimumCreditHours" 
                                       min="0" placeholder="e.g., 12">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="MaximumCreditHours" class="form-label">Maximum Credit Hours</label>
                                <input type="number" class="form-control" id="MaximumCreditHours" name="MaximumCreditHours" 
                                       min="0" placeholder="e.g., 18">
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" checked>
                        <label class="form-check-label" for="IsActive">Active Rule</label>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Tip:</strong> You can also import rules from existing courses by clicking "Import from Courses"
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Rule</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Import from Courses Modal -->
<div class="modal fade" id="importFromCoursesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-sync me-2"></i>Import Rules from Courses
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This will create rules based on course prerequisites and requirements. Existing rules will not be modified.
                </div>
                
                <div class="mb-4">
                    <h6>Select Course Criteria:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="importGPA" checked>
                                <label class="form-check-label" for="importGPA">
                                    Import GPA requirements
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="importPrerequisites" checked>
                                <label class="form-check-label" for="importPrerequisites">
                                    Import prerequisite requirements
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="importPassedHours" checked>
                                <label class="form-check-label" for="importPassedHours">
                                    Import passed hours requirements
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="importCreditLimits">
                                <label class="form-check-label" for="importCreditLimits">
                                    Import credit limits
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="importPreview" class="border rounded p-3 mb-3" style="max-height: 300px; overflow-y: auto;">
                    <p class="text-muted text-center">Select criteria above to preview rules</p>
                </div>
                
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="autoActivate" checked>
                    <label class="form-check-label" for="autoActivate">
                        Automatically activate imported rules
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="startImportBtn">
                    <i class="fas fa-sync me-2"></i>Start Import
                </button>
            </div>

            <!-- Bulk Actions Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Bulk Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <form asp-action="BulkActivateRules" method="post">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-check me-2"></i>Activate All
                                </button>
                            </form>
                        </div>
                        <div class="col-md-3">
                            <form asp-action="BulkDeactivateRules" method="post">
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="fas fa-pause me-2"></i>Deactivate All
                                </button>
                            </form>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-info w-100" data-bs-toggle="modal" data-bs-target="#exportRulesModal">
                                <i class="fas fa-download me-2"></i>Export Rules
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#importRulesModal">
                                <i class="fas fa-upload me-2"></i>Import Rules
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Rule Modal -->
            <div class="modal fade" id="editRuleModal" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title">
                                <i class="fas fa-edit me-2"></i>Edit Registration Rule
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <form id="saveRuleForm" method="post">
                            <input type="hidden" name="Id" id="editRuleId" value="0" />
                            <div class="modal-body">
                                <!-- Copy the form from addRuleModal but with id="editRuleId" -->
                                <!-- Make sure all fields have proper IDs and names -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="RuleName" class="form-label">Rule Name *</label>
                                            <input type="text" class="form-control" id="RuleName" name="RuleName" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="RuleType" class="form-label">Rule Type *</label>
                                            <select class="form-control" id="RuleType" name="RuleType" required>
                                                <!-- Options here -->
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <!-- Add all other form fields -->
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Export Rules Modal -->
            <div class="modal fade" id="exportRulesModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-info text-white">
                            <h5 class="modal-title">Export Rules</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Select export format:</p>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("ExportRules", "Registration", new { format = "excel" })"
                                   class="btn btn-success">
                                    <i class="fas fa-file-excel me-2"></i>Export to Excel
                                </a>
                                <a href="@Url.Action("ExportRules", "Registration", new { format = "csv" })"
                                   class="btn btn-primary">
                                    <i class="fas fa-file-csv me-2"></i>Export to CSV
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Import Rules Modal -->
            <div class="modal fade" id="importRulesModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title">Import Rules</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <form asp-action="ImportRules" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="rulesFile" class="form-label">Select Rules File</label>
                                    <input type="file" class="form-control" name="rulesFile" accept=".xlsx,.xls,.csv" required>
                                    <small class="text-muted">Supported formats: Excel (.xlsx, .xls) or CSV (.csv)</small>
                                </div>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    File should contain columns: RuleName, Description, RuleType, DepartmentId, MinimumGPA, etc.
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Import</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#rulesTable').DataTable({
                pageLength: 25,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [7] } // Disable sorting on Actions column
                ]
            });
            
            // Show/hide inactive rules
            $('#showInactiveRules').change(function() {
                const show = $(this).is(':checked');
                $('.rule-row').each(function() {
                    const isActive = $(this).data('is-active') === 'true';
                    if (!isActive && !show) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                });
            });
            
            // Import from Courses button
            $('#importFromCoursesBtn, #importFromCoursesEmptyBtn').click(function() {
                $('#importFromCoursesModal').modal('show');
                loadImportPreview();
            });
            
            // Toggle rule status
            $('.rule-toggle').change(function() {
                const ruleId = $(this).data('rule-id');
                const isActive = $(this).is(':checked');
                
                $.post('@Url.Action("ToggleRule", "Registration")', { id: ruleId })
                    .done(function() {
                        showToast('Rule ' + (isActive ? 'activated' : 'deactivated'), 'success');
                        // Update row appearance
                        const row = $('[data-rule-id="' + ruleId + '"]');
                        row.toggleClass('table-secondary', !isActive);
                        row.data('is-active', isActive.toString().toLowerCase());
                    })
                    .fail(function() {
                        showToast('Failed to update rule status', 'error');
                        $(this).prop('checked', !isActive); // Revert checkbox
                    });
            });
            
            // Delete rule confirmation
            $('.delete-rule-btn').click(function() {
                const ruleId = $(this).data('rule-id');
                const ruleName = $(this).data('rule-name');
                
                if (confirm(`Are you sure you want to delete rule "${ruleName}"?`)) {
                    $.post('@Url.Action("DeleteRule", "Registration")', { id: ruleId })
                        .done(function() {
                            showToast('Rule deleted successfully', 'success');
                            location.reload();
                        })
                        .fail(function() {
                            showToast('Failed to delete rule', 'error');
                        });
                }
            });
            
            // Edit rule button
            $('.edit-rule-btn').click(function() {
                const ruleId = $(this).data('rule-id');
                // Load edit form via AJAX
                loadEditForm(ruleId);
            });
            
            // Duplicate rule
            $('.duplicate-rule-btn').click(function() {
                const ruleId = $(this).data('rule-id');
                duplicateRule(ruleId);
            });
            
            // Validate all rules
            $('#validateRulesBtn').click(function() {
                validateAllRules();
            });
            
            // Export rules
            $('#exportRulesBtn').click(function() {
                exportRules();
            });
            
            // Toggle all rules
            $('#toggleAllRulesBtn').click(function() {
                toggleAllRules();
            });
        });
