@{
    ViewData["Title"] = "Select Student for Registration History";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-history me-2"></i>Select Student for Registration History
        </h5>
    </div>
    <div class="card-body">
        @if (ViewBag.Students != null && ((List<dynamic>)ViewBag.Students).Count > 0)
        {
            <div class="row">
                @foreach (var student in (List<dynamic>)ViewBag.Students)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6>@student.Name</h6>
                                <p class="text-muted small mb-2">ID: @student.StudentId</p>
                                <a asp-action="StudentHistory" asp-route-studentId="@student.Id"
                                   class="btn btn-sm btn-outline-primary w-100">
                                    <i class="fas fa-eye me-1"></i>View History
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No students found</h5>
            </div>
        }
    </div>
</div>