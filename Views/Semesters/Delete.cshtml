@model Semester
@{
    ViewData["Title"] = "Delete Semester";

    // Get the course count from ViewBag or default to false
    var hasCourses = ViewBag.HasCourses != null ? (bool)ViewBag.HasCourses : false;
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-danger mb-2">
                <i class="fas fa-trash me-2"></i>Delete Semester
            </h1>
            <p class="text-muted mb-0">Are you sure you want to delete this semester?</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <strong>Warning:</strong> This action cannot be undone. Deleting a semester will remove it permanently.
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-info-circle me-2"></i>Semester Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Type:</dt>
                    <dd class="col-sm-8">@Model.SemesterType</dd>

                    <dt class="col-sm-4">Academic Year:</dt>
                    <dd class="col-sm-8">@Model.AcademicYear</dd>

                    <dt class="col-sm-4">Full Path:</dt>
                    <dd class="col-sm-8">@Model.FullPath</dd>

                    <dt class="col-sm-4">Start Date:</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">End Date:</dt>
                    <dd class="col-sm-8">@Model.EndDate.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsCurrent)
                        {
                            <span class="badge bg-success">Current Semester</span>
                        }
                        @if (Model.IsRegistrationOpen)
                        {
                            <span class="badge bg-info">Registration Open</span>
                        }
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                </dl>

                @if (hasCourses)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Cannot delete:</strong> This semester has associated courses. Delete the courses first.
                    </div>
                }
            </div>
        </div>

        @if (!hasCourses)
        {
            <div class="card-university card mt-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="fas fa-shield-alt me-2"></i>Confirmation Required
                    </h5>
                </div>
                <div class="card-body">
                    <p>Please confirm that you want to delete the semester <strong>@Model.Name</strong>.</p>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete Semester
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Warning
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h6 class="alert-heading">
                        <i class="fas fa-radiation me-2"></i>Irreversible Action
                    </h6>
                    <ul class="mb-0 small">
                        <li>This action cannot be undone</li>
                        <li>All semester data will be permanently lost</li>
                        <li>Associated course schedules will be affected</li>
                        <li>Student registrations may be impacted</li>
                    </ul>
                </div>

                @if (hasCourses)
                {
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-ban me-2"></i>Delete Restrictions
                        </h6>
                        <p class="mb-0 small">This semester cannot be deleted because it contains courses. You must first:</p>
                        <ul class="mb-0 small mt-1">
                            <li>Delete or move all associated courses</li>
                            <li>Remove all student enrollments</li>
                            <li>Clear all course schedules</li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="fas fa-check-circle me-2"></i>Ready for Deletion
                        </h6>
                        <p class="mb-0 small">This semester has no associated courses and can be safely deleted.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card-university card mt-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-cog me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-2"></i>Edit Semester
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>View Details
                    </a>
                    <a asp-action="Duplicate" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-copy me-2"></i>Duplicate Semester
                    </a>
                    @if (!hasCourses)
                    {
                        <a asp-controller="Courses" asp-action="Create" asp-route-semesterId="@Model.Id" class="btn btn-outline-success">
                            <i class="fas fa-plus me-2"></i>Add Courses
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Add confirmation for delete button
            $('form').submit(function (e) {
                var semesterName = '@Model.Name';
                if (!confirm('Are you absolutely sure you want to delete the semester "' + semesterName + '"? This action cannot be undone.')) {
                    e.preventDefault();
                    return false;
                }
            });

            // Add visual feedback for dangerous action
            $('.btn-danger').hover(
                function () {
                    $(this).addClass('btn-danger-dark');
                },
                function () {
                    $(this).removeClass('btn-danger-dark');
                }
            );
        });
    </script>

    <style>
        .btn-danger-dark {
            background-color: #dc3545;
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.5);
        }
    </style>
}