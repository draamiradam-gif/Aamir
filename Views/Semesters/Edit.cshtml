@model StudentManagementSystem.Models.Semester
@{
    ViewData["Title"] = "Edit Semester";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-edit me-2"></i>Edit Semester
        </h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">Semester Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Semester Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SemesterType" class="form-label">Semester Type</label>
                            <select asp-for="SemesterType" class="form-select">
                                <option value="Spring">Spring</option>
                                <option value="Fall">Fall</option>
                                <option value="Summer">Summer</option>
                            </select>
                            <span asp-validation-for="SemesterType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AcademicYear" class="form-label">Academic Year</label>
                            <input asp-for="AcademicYear" class="form-control" />
                            <span asp-validation-for="AcademicYear" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">Start Date</label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">End Date</label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <!-- ADD MISSING REGISTRATION START DATE -->
                        <div class="mb-3">
                            <label asp-for="RegistrationStartDate" class="form-label">Registration Start Date</label>
                            <input asp-for="RegistrationStartDate" type="date" class="form-control" />
                            <span asp-validation-for="RegistrationStartDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegistrationEndDate" class="form-label">Registration End Date</label>
                            <input asp-for="RegistrationEndDate" type="date" class="form-control" />
                            <span asp-validation-for="RegistrationEndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="DepartmentId" class="form-label">Department</label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="BranchId" class="form-label">Branch</label>
                            <select asp-for="BranchId" class="form-select" asp-items="ViewBag.BranchId">
                                <option value="">-- Select Branch --</option>
                            </select>
                            <span asp-validation-for="BranchId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="SubBranchId" class="form-label">Sub-Branch</label>
                            <select asp-for="SubBranchId" class="form-select" asp-items="ViewBag.SubBranchId">
                                <option value="">-- Select Sub-Branch --</option>
                            </select>
                            <span asp-validation-for="SubBranchId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active Semester</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsCurrent" class="form-check-input" />
                            <label asp-for="IsCurrent" class="form-check-label">Current Semester</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsRegistrationOpen" class="form-check-input" />
                            <label asp-for="IsRegistrationOpen" class="form-check-label">Registration Open</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Update Semester
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced date validation
            const startDateInput = document.getElementById('StartDate');
            const endDateInput = document.getElementById('EndDate');
            const regStartInput = document.getElementById('RegistrationStartDate');
            const regEndInput = document.getElementById('RegistrationEndDate');

            // Set minimum dates
            if (startDateInput) {
                const today = new Date().toISOString().split('T')[0];
                //startDateInput.min = today;

                startDateInput.addEventListener('change', function() {
                    if (endDateInput) endDateInput.min = this.value;
                    if (regStartInput) regStartInput.min = this.value;
                    if (regEndInput) regEndInput.min = this.value;
                });
            }

            if (regStartInput && regEndInput) {
                regStartInput.addEventListener('change', function() {
                    regEndInput.min = this.value;
                });
            }
        });
    </script>
}