@model Semester
@{
    ViewData["Title"] = "Edit Semester";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-edit me-2"></i>Edit Semester
            </h1>
            <p class="text-muted mb-0">Update semester information</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-info-circle me-2"></i>Semester Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Semester Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Fall 2024">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SemesterType" class="form-label fw-semibold">Semester Type *</label>
                            <select asp-for="SemesterType" class="form-select">
                                <option value="Fall">Fall</option>
                                <option value="Spring">Spring</option>
                                <option value="Summer">Summer</option>
                            </select>
                            <span asp-validation-for="SemesterType" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AcademicYear" class="form-label fw-semibold">Academic Year *</label>
                            <input asp-for="AcademicYear" class="form-control" type="number" min="2000" max="2100">
                            <span asp-validation-for="AcademicYear" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Parent Selection -->
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Current assignment: <strong>@Model.FullPath</strong>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Important:</strong> Select only ONE parent (Department, Branch, OR Sub-Branch)
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-semibold">Department</label>
                            <select asp-for="DepartmentId" class="form-select" id="departmentSelect">
                                <option value="">-- Select Department --</option>
                                @foreach (var item in (ViewBag.DepartmentId as SelectList)!)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BranchId" class="form-label fw-semibold">Branch</label>
                            <select asp-for="BranchId" class="form-select" id="branchSelect">
                                <option value="">-- Select Branch --</option>
                                @foreach (var item in (ViewBag.BranchId as SelectList)!)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="BranchId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SubBranchId" class="form-label fw-semibold">Sub-Branch</label>
                            <select asp-for="SubBranchId" class="form-select" id="subBranchSelect">
                                <option value="">-- Select Sub-Branch --</option>
                                @foreach (var item in (ViewBag.SubBranchId as SelectList)!)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="SubBranchId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label fw-semibold">Start Date *</label>
                            <input asp-for="StartDate" class="form-control" type="date">
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label fw-semibold">End Date *</label>
                            <input asp-for="EndDate" class="form-control" type="date">
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistrationStartDate" class="form-label fw-semibold">Registration Start *</label>
                            <input asp-for="RegistrationStartDate" class="form-control" type="date">
                            <span asp-validation-for="RegistrationStartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistrationEndDate" class="form-label fw-semibold">Registration End *</label>
                            <input asp-for="RegistrationEndDate" class="form-control" type="date">
                            <span asp-validation-for="RegistrationEndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" role="switch">
                                <label asp-for="IsActive" class="form-check-label fw-semibold">Active Semester</label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsCurrent" class="form-check-input" role="switch">
                                <label asp-for="IsCurrent" class="form-check-label fw-semibold">Current Semester</label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsRegistrationOpen" class="form-check-input" role="switch">
                                <label asp-for="IsRegistrationOpen" class="form-check-label fw-semibold">Registration Open</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 pt-3 border-top">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i>Update Semester
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Current Semester Info -->
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-info-circle me-2"></i>Current Information
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Semester Type:</strong>
                    <span class="badge bg-primary">@Model.SemesterType</span>
                </div>
                <div class="mb-3">
                    <strong>Academic Year:</strong>
                    <span>@Model.AcademicYear</span>
                </div>
                <div class="mb-3">
                    <strong>Status:</strong>
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
                <div class="mb-3">
                    <strong>Current Semester:</strong>
                    <span class="badge @(Model.IsCurrent ? "bg-warning" : "bg-secondary")">
                        @(Model.IsCurrent ? "Yes" : "No")
                    </span>
                </div>
                <div>
                    <strong>Registration:</strong>
                    <span class="badge @(Model.IsRegistrationOpen ? "bg-success" : "bg-secondary")">
                        @(Model.IsRegistrationOpen ? "Open" : "Closed")
                    </span>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card-university card mt-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-cog me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>View Details
                    </a>
                    <a asp-action="Duplicate" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-copy me-2"></i>Duplicate
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Ensure only one parent can be selected
            $('#departmentSelect, #branchSelect, #subBranchSelect').change(function () {
                var selectedValue = $(this).val();
                if (selectedValue) {
                    $('#departmentSelect, #branchSelect, #subBranchSelect').not(this).val('');
                }
            });

            // Set current values for dropdowns - FIXED
            @if (Model.DepartmentId.HasValue)
            {
                    <text>
                    $('#departmentSelect').val('@Model.DepartmentId.Value');
                    </text>
            }
            @if (Model.BranchId.HasValue)
            {
                    <text>
                    $('#branchSelect').val('@Model.BranchId.Value');
                    </text>
            }
            @if (Model.SubBranchId.HasValue)
            {
                    <text>
                    $('#subBranchSelect').val('@Model.SubBranchId.Value');
                    </text>
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}