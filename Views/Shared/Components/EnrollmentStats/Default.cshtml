@model StudentManagementSystem.Models.EnrollmentReport

<div class="card">
    <div class="card-header">
        <h6 class="mb-0">
            <i class="fas fa-graduation-cap me-1"></i>Enrollment Overview
        </h6>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-4">
                <div class="border-end">
                    <h4 class="text-primary">@Model.TotalEnrollments</h4>
                    <small class="text-muted">Total</small>
                </div>
            </div>
            <div class="col-4">
                <div class="border-end">
                    <h4 class="text-success">@Model.ActiveEnrollments</h4>
                    <small class="text-muted">Active</small>
                </div>
            </div>
            <div class="col-4">
                <h4 class="text-warning">@Model.WaitlistedEnrollments</h4>
                <small class="text-muted">Waitlisted</small>
            </div>
        </div>
        <div class="mt-3">
            <a href="@Url.Action("Dashboard", "Enrollment")" class="btn btn-sm btn-outline-primary w-100">
                View Details
            </a>
        </div>
    </div>
</div>