@model StudentManagementSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h1 class="alert-heading">
            <i class="fas fa-exclamation-triangle"></i> Error @(Context.Response.StatusCode)
        </h1>
        <p>An error occurred while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }

        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <div class="mt-3">
                <a href="/debug" class="btn btn-outline-danger btn-sm">Debug Information</a>
            </div>
        }
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5>Troubleshooting Steps:</h5>
            <ol>
                <li>Refresh the page</li>
                <li>Clear your browser cache</li>
                <li>Check if you're logged in</li>
                <li>Contact system administrator if problem persists</li>
            </ol>

            <div class="mt-3">
                <a href="/" class="btn btn-primary">Go to Home Page</a>
                <a href="/Home/PortalAccess" class="btn btn-secondary">Portal Access</a>
            </div>
        </div>
    </div>
</div>