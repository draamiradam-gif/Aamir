    <script>
        // Emergency modal fix - always load first
        (function() {
            // Immediately unlock page
            document.body.style.cssText = 'overflow: auto !important; position: static !important;';

            // Remove any modal-open classes
            document.body.classList.remove('modal-open');

            // Remove backdrops immediately
            const removeBackdrops = function() {
                const elements = document.querySelectorAll('*');
                elements.forEach(el => {
                    const style = window.getComputedStyle(el);
                    if (style.position === 'fixed' &&
                        (style.width === '100%' || style.width === '100vw') &&
                        (style.height === '100%' || style.height === '100vh') &&
                        (style.backgroundColor !== 'transparent' || style.zIndex > 1000)) {
                        el.style.display = 'none';
                        el.remove();
                    }
                });
            };

            // Run immediately and periodically
            removeBackdrops();
            setInterval(removeBackdrops, 1000);

            // Also run on any click
            document.addEventListener('click', function() {
                setTimeout(removeBackdrops, 10);
            });
        })();


