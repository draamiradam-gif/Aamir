@model dynamic
@{
    var activities = Model as IEnumerable<dynamic> ?? new List<dynamic>();
}

@if (!activities.Any())
{
    <div class="text-center text-muted py-3">
        <i class="fas fa-inbox fa-2x mb-2"></i>
        <p class="mb-0">No recent activity</p>
    </div>
}
else
{
    <div class="list-group list-group-flush recent-activity-list">
        @foreach (var activity in activities)
        {
            <div class="list-group-item px-0 border-0">
                <div class="d-flex w-100 justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <h6 class="mb-1 fw-bold">@activity.StudentName</h6>
                        <p class="mb-1 small text-muted">
                            Enrolled in <strong>@activity.CourseCode</strong>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge
                                        @(activity.Status == "Active" ? "bg-success" :
                                                                    activity.Status == "Waitlisted" ? "bg-warning" :
                                                                    activity.Status == "Completed" ? "bg-info" : "bg-secondary")">
                        @activity.Status
                    </span>
                    <small class="text-muted">@activity.EnrollmentDate.ToString("MMM dd")</small>
                </div>
            </div>
        </div>
    </div>
        }
    </div>
}

<style>
    .recent-activity-list .list-group-item {
        border-bottom: 1px solid #eee;
        padding: 0.75rem 0;
    }

        .recent-activity-list .list-group-item:last-child {
            border-bottom: none;
        }
</style>