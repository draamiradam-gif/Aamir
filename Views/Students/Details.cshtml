@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-user-graduate"></i> Student Details
        </h2>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-info-circle"></i> Basic Information
            </h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Student ID</dt>
                <dd class="col-sm-9">@Model.StudentId</dd>

                <dt class="col-sm-3">Seat Number</dt>
                <dd class="col-sm-9">@Model.SeatNumber</dd>

                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">National ID</dt>
                <dd class="col-sm-9">@Model.NationalId</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Study Level</dt>
                <dd class="col-sm-9">@Model.StudyLevel</dd>

                <dt class="col-sm-3">Semester</dt>
                <dd class="col-sm-9">@Model.Semester</dd>

                <dt class="col-sm-3">Grade</dt>
                <dd class="col-sm-9">@Model.Grade</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd")</dd> <!-- FIXED: Changed CreatedAt to CreatedDate -->
            </dl>
        </div>
    </div>

    <!-- Academic Performance Card -->
    <div class="card mt-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="fas fa-chart-line"></i> Academic Performance
            </h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">GPA</dt>
                <dd class="col-sm-9">@Model.GPA.ToString("F2")</dd>

                <dt class="col-sm-3">Percentage</dt>
                <dd class="col-sm-9">@Model.Percentage.ToString("F1")%</dd>

                <dt class="col-sm-3">Passed Hours</dt>
                <dd class="col-sm-9">@Model.PassedHours</dd>

                <dt class="col-sm-3">Available Hours</dt>
                <dd class="col-sm-9">@Model.AvailableHours</dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit Student
        </a>
        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>