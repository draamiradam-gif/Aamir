@model PaginatedList<StudentManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Students Management";
    var currentFilter = ViewData["CurrentFilter"] as string;
    var currentSort = ViewData["CurrentSort"] as string;
    var currentOrder = ViewData["CurrentOrder"] as string;
    var importResult = TempData["ImportResult"] as string;
    var importedCount = TempData["ImportedCount"] as int? ?? 0;
    var errorCount = TempData["ErrorCount"] as int? ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-users"></i> Students Management
        </h2>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Student
            </a>
            <a href="@Url.Action("Import")" class="btn btn-success">
                <i class="fas fa-file-import"></i> Import Excel
            </a>
            <a href="@Url.Action("Export")" class="btn btn-info">
                <i class="fas fa-file-export"></i> Export Excel
            </a>
            <a class="nav-link" href="@Url.Action("Manage", "Grades")">
                <i class="fas fa-graduation-cap"></i> Grade Management
            </a>
        </div>
    </div>

    <!-- Import Results Announcement -->
    @if (!string.IsNullOrEmpty(importResult))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h5 class="alert-heading">
                <i class="fas fa-info-circle me-2"></i>Import Completed
            </h5>
            <p class="mb-1">@importResult</p>
            @if (importedCount > 0)
            {
                <p class="mb-1">
                    <i class="fas fa-check text-success me-1"></i>
                    <strong>@importedCount</strong> students imported successfully
                </p>
            }
            @if (errorCount > 0)
            {
                <p class="mb-0">
                    <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                    <strong>@errorCount</strong> errors encountered
                </p>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Students Summary Card -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-start border-primary border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-muted small">Total Students</div>
                            <div class="h4 mb-0 text-primary">@Model.TotalCount</div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-muted small">Current Page</div>
                            <div class="h4 mb-0 text-success">@Model.Count</div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-list fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-start border-warning border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-muted small">Selected</div>
                            <div class="h4 mb-0 text-warning" id="selectedCountBadge">0</div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-start border-info border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-muted small">Actions</div>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-info" id="selectAllBtn">
                                    <i class="fas fa-check-square me-1"></i>All
                                </button>
                                <button class="btn btn-outline-info" id="deselectAllBtn">
                                    <i class="fas fa-square me-1"></i>None
                                </button>
                            </div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-cogs fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions Toolbar -->
    <div class="card mb-4" id="bulkActionsToolbar" style="display: none;">
        <div class="card-header bg-warning">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-tools me-2"></i>Bulk Actions
                        <span class="badge bg-light text-dark ms-2" id="bulkSelectedCount">0</span>
                    </h5>
                </div>
                <div class="col-md-6 text-end">
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger btn-sm" id="deleteSelectedBtn">
                            <i class="fas fa-trash me-1"></i>Delete Selected
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-sm" id="deleteAllBtn">
                            <i class="fas fa-broom me-1"></i>Delete All
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="cancelBulkBtn">
                            <i class="fas fa-times me-1"></i>Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters Card -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-filter"></i> Filters & Search
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Search by name, student ID, seat number, or department..."
                               value="@currentFilter" />
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(currentFilter))
                    {
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Clear Filters
                        </a>
                    }
                    <span class="text-muted ms-2">
                        @Model.TotalCount students found
                    </span>
                </div>
            </form>
        </div>
    </div>

    <!-- Students Table -->
    <div class="card">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> Students List
                <span class="badge bg-primary ms-2">@Model.TotalCount Total</span>
            </h5>
            <div class="btn-group">
                <form id="exportForm" asp-action="ExportSelected" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-info btn-sm" id="exportSelectedBtn">
                        <i class="fas fa-download"></i> Export Selected
                    </button>
                </form>
                <button type="button" class="btn btn-outline-warning btn-sm" id="bulkEditBtn">
                    <i class="fas fa-edit"></i> Bulk Edit
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered mb-0" id="studentsTable">
                    <thead class="table-dark">
                        <tr>
                            <th width="50" class="text-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th width="70">
                                <a href="@Url.Action("Index", new { sortBy = "SerialNumber", sortOrder = currentSort == "SerialNumber" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    #
                                    @if (currentSort == "SerialNumber")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { sortBy = "StudentId", sortOrder = currentSort == "StudentId" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    Student ID
                                    @if (currentSort == "StudentId")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { sortBy = "Name", sortOrder = currentSort == "Name" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    Name
                                    @if (currentSort == "Name")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { sortBy = "SeatNumber", sortOrder = currentSort == "SeatNumber" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    Seat Number
                                    @if (currentSort == "SeatNumber")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { sortBy = "Department", sortOrder = currentSort == "Department" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    Department
                                    @if (currentSort == "Department")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th width="100">
                                <a href="@Url.Action("Index", new { sortBy = "GPA", sortOrder = currentSort == "GPA" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    GPA
                                    @if (currentSort == "GPA")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th width="120">
                                <a href="@Url.Action("Index", new { sortBy = "Percentage", sortOrder = currentSort == "Percentage" && currentOrder == "asc" ? "desc" : "asc", searchString = currentFilter })" class="text-white text-decoration-none">
                                    Percentage
                                    @if (currentSort == "Percentage")
                                    {
                                        <i class="fas @(currentOrder == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th width="150" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <div class="form-check">
                                        <input class="form-check-input student-checkbox" type="checkbox" name="selectedStudents" value="@student.Id" data-student-name="@student.Name">
                                    </div>
                                </td>
                                <td class="text-center">@student.SerialNumber</td>
                                <td>@student.StudentId</td>
                                <td class="text-nowrap">@student.Name</td>
                                <td>@student.SeatNumber</td>
                                <td>@student.Department</td>
                                <td class="text-center">@student.GPA.ToString("0.00")</td>
                                <td class="text-center">@student.Percentage.ToString("0.00")%</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", new { id = student.Id })" class="btn btn-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = student.Id })" class="btn btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = student.Id })" class="btn btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="card-footer bg-white">
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <nav aria-label="Student pagination">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @prevDisabled">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex - 1, searchString = currentFilter, sortBy = currentSort, sortOrder = currentOrder })">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, searchString = currentFilter, sortBy = currentSort, sortOrder = currentOrder })">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @nextDisabled">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageIndex + 1, searchString = currentFilter, sortBy = currentSort, sortOrder = currentOrder })">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="deleteSingleContent">
                    <p>Are you sure you want to delete student <strong id="deleteStudentName"></strong>?</p>
                    <p class="text-muted small">This action cannot be undone.</p>
                </div>
                <div id="deleteMultipleContent" style="display: none;">
                    <p>Are you sure you want to delete <strong id="deleteCount">0</strong> selected students?</p>
                    <div id="deleteStudentList" class="small text-muted mt-2" style="max-height: 100px; overflow-y: auto;"></div>
                    <p class="text-danger mt-2"><i class="fas fa-exclamation-circle me-1"></i>This action cannot be undone!</p>
                </div>
                <div id="deleteAllContent" style="display: none;">
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-radiation me-2"></i>Danger Zone</h6>
                        <p class="mb-0">You are about to delete <strong>ALL @Model.TotalCount students</strong> from the system!</p>
                    </div>
                    <p class="text-danger">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        <strong>Warning:</strong> This action is irreversible and will permanently remove all student records.
                    </p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="confirmDeleteAll">
                        <label class="form-check-label text-danger" for="confirmDeleteAll">
                            I understand this action cannot be undone
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger" id="confirmDeleteBtn" disabled>Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Add this modal after the existing delete modal -->
<!-- Bulk Enrollment Modal -->
<div class="modal fade" id="bulkEnrollModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>Bulk Semester Enrollment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="bulkEnrollContent">
                    <p>Enroll <strong id="selectedStudentsCount">0</strong> selected students in:</p>

                    <div class="mb-3">
                        <label for="semesterSelect" class="form-label">Select Semester:</label>
                        <select class="form-select" id="semesterSelect">
                            <option value="">Loading semesters...</option>
                        </select>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Students will be automatically enrolled in all active courses for the selected semester.
                        Prerequisites and capacity constraints will be validated.
                    </div>

                    <div id="semesterInfo" style="display: none;">
                        <h6>Semester Information:</h6>
                        <div id="semesterDetails" class="small text-muted"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmBulkEnroll" disabled>
                    <i class="fas fa-user-plus me-1"></i>Enroll Students
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            position: relative;
            cursor: pointer;
            white-space: nowrap;
            background-color: #343a40;
            color: white;
        }

            .table th a {
                text-decoration: none;
                color: inherit;
                display: block;
            }

            .table th:hover {
                background-color: #495057;
            }

        /* Auto-resize columns */
        #studentsTable {
            table-layout: auto;
            width: 100%;
        }

            #studentsTable td {
                word-wrap: break-word;
                vertical-align: middle;
            }

                /* Ensure name column can expand without wrapping */
                #studentsTable td.text-nowrap {
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    max-width: 250px;
                }

            /* Hover effects */
            #studentsTable tbody tr:hover {
                background-color: rgba(0, 123, 255, 0.1);
            }

        /* Checkbox styling */
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        /* Action buttons */
        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        /* Pagination active state */
        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        /* Bulk actions toolbar */
        #bulkActionsToolbar {
            transition: all 0.3s ease;
        }

        /* Card hover effects */
        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        /* Badge animations */
        .badge {
            transition: all 0.3s ease;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Selection functionality
            const selectAll = document.getElementById('selectAll');
            const studentCheckboxes = document.querySelectorAll('.student-checkbox');
            const selectedCountBadge = document.getElementById('selectedCountBadge');
            const bulkSelectedCount = document.getElementById('bulkSelectedCount');
            const bulkActionsToolbar = document.getElementById('bulkActionsToolbar');
            const selectAllBtn = document.getElementById('selectAllBtn');
            const deselectAllBtn = document.getElementById('deselectAllBtn');
            const deleteSelectedBtn = document.getElementById('deleteSelectedBtn');
            const deleteAllBtn = document.getElementById('deleteAllBtn');
            const cancelBulkBtn = document.getElementById('cancelBulkBtn');
            const exportSelectedBtn = document.getElementById('exportSelectedBtn');
            const bulkEditBtn = document.getElementById('bulkEditBtn');

            // Modal elements
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            const deleteStudentName = document.getElementById('deleteStudentName');
            const deleteCount = document.getElementById('deleteCount');
            const deleteStudentList = document.getElementById('deleteStudentList');
            const confirmDeleteAll = document.getElementById('confirmDeleteAll');
            const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
            const deleteForm = document.getElementById('deleteForm');
            const deleteSingleContent = document.getElementById('deleteSingleContent');
            const deleteMultipleContent = document.getElementById('deleteMultipleContent');
            const deleteAllContent = document.getElementById('deleteAllContent');


                    // Add to students index JavaScript

        // Bulk Enrollment Functionality
        const bulkEnrollBtn = document.getElementById('bulkEnrollBtn') || createBulkEnrollButton();
        const bulkEnrollModal = new bootstrap.Modal(document.getElementById('bulkEnrollModal'));
        const semesterSelect = document.getElementById('semesterSelect');
        const confirmBulkEnroll = document.getElementById('confirmBulkEnroll');
        const selectedStudentsCount = document.getElementById('selectedStudentsCount');
        const semesterInfo = document.getElementById('semesterInfo');
        const semesterDetails = document.getElementById('semesterDetails');

        // Create bulk enroll button if it doesn't exist
        function createBulkEnrollButton() {
            const button = document.createElement('button');
            button.className = 'btn btn-success btn-sm me-2';
            button.innerHTML = '<i class="fas fa-user-plus me-1"></i> Bulk Enroll';
            button.id = 'bulkEnrollBtn';
            button.style.display = 'none';

            document.querySelector('.btn-group').prepend(button);
            return button;
        }

        // Update bulk enroll button visibility
        function updateBulkEnrollButton() {
            const selected = document.querySelectorAll('.student-checkbox:checked').length;
            bulkEnrollBtn.style.display = selected > 0 ? 'inline-block' : 'none';
        }

        // Load available semesters
        async function loadSemesters() {
            try {
                const response = await fetch('@Url.Action("GetAvailableSemesters", "Enrollment")');
                const semesters = await response.json();

                semesterSelect.innerHTML = '<option value="">Select a semester...</option>';
                semesters.forEach(semester => {
                    const option = document.createElement('option');
                    option.value = semester.id;
                    option.textContent = `${semester.name} - ${semester.academicYear} (${semester.semesterType})`;
                    option.dataset.semester = JSON.stringify(semester);
                    semesterSelect.appendChild(option);
                });
            } catch (error) {
                console.error('Failed to load semesters:', error);
                semesterSelect.innerHTML = '<option value="">Error loading semesters</option>';
            }
        }

        // Show semester details when selected
        semesterSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            if (selectedOption.value) {
                const semester = JSON.parse(selectedOption.dataset.semester);
                showSemesterDetails(semester);
                confirmBulkEnroll.disabled = false;
            } else {
                semesterInfo.style.display = 'none';
                confirmBulkEnroll.disabled = true;
            }
        });

        function showSemesterDetails(semester) {
            const startDate = new Date(semester.startDate).toLocaleDateString();
            const endDate = new Date(semester.endDate).toLocaleDateString();
            const regEndDate = new Date(semester.registrationEndDate).toLocaleDateString();

            semesterDetails.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <strong>Period:</strong> ${startDate} to ${endDate}<br>
                        <strong>Registration Ends:</strong> ${regEndDate}
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <span class="badge ${semester.isRegistrationOpen ? 'bg-success' : 'bg-warning'}">
                            ${semester.isRegistrationOpen ? 'Open' : 'Closed'}
                        </span><br>
                        <strong>Active:</strong>
                        <span class="badge ${semester.isActive ? 'bg-success' : 'bg-secondary'}">
                            ${semester.isActive ? 'Yes' : 'No'}
                        </span>
                    </div>
                </div>
            `;
            semesterInfo.style.display = 'block';
        }

        // Bulk enroll button click
        bulkEnrollBtn.addEventListener('click', function() {
            const selected = getSelectedStudents();
            if (selected.length === 0) {
                alert('Please select at least one student.');
                return;
            }

            selectedStudentsCount.textContent = selected.length;
            loadSemesters();
            bulkEnrollModal.show();
        });

        // Confirm bulk enrollment
        confirmBulkEnroll.addEventListener('click', function() {
            const selectedStudents = getSelectedStudentIds();
            const semesterId = semesterSelect.value;

            if (!semesterId) {
                alert('Please select a semester.');
                return;
            }

            // Show loading state
            confirmBulkEnroll.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Processing...';
            confirmBulkEnroll.disabled = true;

            // Submit bulk enrollment
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("BulkEnrollSemester", "Enrollment")';

            // Add anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);

            // Add semester ID
            const semesterInput = document.createElement('input');
            semesterInput.type = 'hidden';
            semesterInput.name = 'semesterId';
            semesterInput.value = semesterId;
            form.appendChild(semesterInput);

            // Add selected students
            const studentsInput = document.createElement('input');
            studentsInput.type = 'hidden';
            studentsInput.name = 'selectedStudents';
            studentsInput.value = selectedStudents.join(',');
            form.appendChild(studentsInput);

            document.body.appendChild(form);
            form.submit();
        });

        // Helper function to get selected student IDs
        function getSelectedStudentIds() {
            const selectedIds = [];
            document.querySelectorAll('.student-checkbox:checked').forEach(checkbox => {
                selectedIds.push(checkbox.value);
            });
            return selectedIds;
        }

        // Update bulk enroll button when selection changes
        document.addEventListener('change', function() {
            updateBulkEnrollButton();
        });

        // Initialize
        updateBulkEnrollButton();


            let currentDeleteAction = '';

            function updateSelectedCount() {
                const selected = document.querySelectorAll('.student-checkbox:checked').length;
                selectedCountBadge.textContent = selected;
                bulkSelectedCount.textContent = selected;

                // Show/hide bulk actions toolbar
                if (selected > 0) {
                    bulkActionsToolbar.style.display = 'block';
                } else {
                    bulkActionsToolbar.style.display = 'none';
                }

                // Enable/disable export button
                exportSelectedBtn.disabled = selected === 0;
                bulkEditBtn.disabled = selected === 0;
            }

            function selectAllStudents(select) {
                studentCheckboxes.forEach(checkbox => {
                    checkbox.checked = select;
                });
                selectAll.checked = select;
                updateSelectedCount();
            }

            function getSelectedStudents() {
                const selected = [];
                studentCheckboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        selected.push({
                            id: checkbox.value,
                            name: checkbox.dataset.studentName
                        });
                    }
                });
                return selected;
            }

            function showDeleteConfirmation(action, studentId = null, studentName = null) {
                currentDeleteAction = action;

                // Reset modal state
                deleteSingleContent.style.display = 'none';
                deleteMultipleContent.style.display = 'none';
                deleteAllContent.style.display = 'none';
                confirmDeleteAll.checked = false;
                confirmDeleteBtn.disabled = true;

                if (action === 'single') {
                    deleteSingleContent.style.display = 'block';
                    deleteStudentName.textContent = studentName;
                    deleteForm.action = `@Url.Action("Delete")/${studentId}`;
                    confirmDeleteBtn.disabled = false;
                }
                else if (action === 'multiple') {
                    const selected = getSelectedStudents();
                    deleteMultipleContent.style.display = 'block';
                    deleteCount.textContent = selected.length;

                    // Show student names
                    deleteStudentList.innerHTML = '';
                    selected.forEach(student => {
                        const div = document.createElement('div');
                        div.className = 'border-bottom pb-1 mb-1';
                        div.textContent = student.name;
                        deleteStudentList.appendChild(div);
                    });

                    deleteForm.action = '@Url.Action("DeleteMultiple")';
                    confirmDeleteBtn.disabled = false;
                }
                else if (action === 'all') {
                    deleteAllContent.style.display = 'block';
                    deleteForm.action = '@Url.Action("DeleteAll")';
                    confirmDeleteBtn.disabled = true;
                }

                deleteModal.show();
            }

            // Event listeners
            selectAll.addEventListener('change', function () {
                selectAllStudents(this.checked);
            });

            studentCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function () {
                    // Update select all checkbox state
                    const allChecked = document.querySelectorAll('.student-checkbox:checked').length === studentCheckboxes.length;
                    selectAll.checked = allChecked;
                    updateSelectedCount();
                });
            });

            selectAllBtn.addEventListener('click', function () {
                selectAllStudents(true);
            });

            deselectAllBtn.addEventListener('click', function () {
                selectAllStudents(false);
            });

            deleteSelectedBtn.addEventListener('click', function () {
                const selected = getSelectedStudents();
                if (selected.length > 0) {
                    showDeleteConfirmation('multiple');
                }
            });

            deleteAllBtn.addEventListener('click', function () {
                showDeleteConfirmation('all');
            });

            cancelBulkBtn.addEventListener('click', function () {
                selectAllStudents(false);
            });

            // Individual delete buttons
            document.querySelectorAll('a[href*="Delete"]').forEach(link => {
                link.addEventListener('click', function (e) {
                    if (this.getAttribute('href').includes('Delete')) {
                        e.preventDefault();
                        const studentId = this.getAttribute('href').split('/').pop();
                        const studentName = this.closest('tr').querySelector('td:nth-child(4)').textContent;
                        showDeleteConfirmation('single', studentId, studentName);
                    }
                });
            });

            // Delete all confirmation checkbox
            confirmDeleteAll.addEventListener('change', function () {
                confirmDeleteBtn.disabled = !this.checked;
            });

            // Export form submission
            document.getElementById('exportForm').addEventListener('submit', function (e) {
                const selectedCount = document.querySelectorAll('.student-checkbox:checked').length;
                if (selectedCount === 0) {
                    e.preventDefault();
                    alert('Please select at least one student to export.');
                    return false;
                }
                return confirm(`Export ${selectedCount} selected students?`);
            });

            // Auto-resize columns
            function autoResizeColumns() {
                $('#studentsTable th').each(function () {
                    var header = $(this);
                    var maxWidth = 0;

                    $('#studentsTable td:nth-child(' + (header.index() + 1) + ')').each(function () {
                        var cell = $(this);
                        var content = cell.text().trim();
                        var width = content.length * 8 + 20;

                        if (header.index() === 0 || header.index() === 8) {
                            width = header.index() === 0 ? 50 : 150;
                        }

                        if (width > maxWidth) {
                            maxWidth = width;
                        }
                    });

                    if (header.index() === 1) {
                        maxWidth = Math.min(maxWidth, 70);
                    } else if (header.index() === 6) {
                        maxWidth = Math.min(maxWidth, 100);
                    } else if (header.index() === 7) {
                        maxWidth = Math.min(maxWidth, 120);
                    } else {
                        maxWidth = Math.min(maxWidth, 300);
                    }

                    header.css('min-width', maxWidth + 'px');
                });
            }

            // Initialize
            autoResizeColumns();
            updateSelectedCount();

            // Add tooltips
            $('[title]').tooltip({
                trigger: 'hover',
                placement: 'top'
            });

            // Auto-hide import alert after 10 seconds
            setTimeout(() => {
                $('.alert').fadeOut('slow');
            }, 10000);
        });
    </script>
