@model University
@{
    ViewData["Title"] = "University Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-university me-2"></i>@Model.Name
            </h1>
            <p class="text-muted mb-0">University details and associated colleges</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- University Information -->
        <div class="card-university card mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-info-circle me-2"></i>University Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">University Code</label>
                            <p class="fs-5">@Model.Code</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Establishment Year</label>
                            <p class="fs-5">@Model.EstablishmentYear</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Status</label>
                            <p>
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") fs-6">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Multiple Colleges</label>
                            <p>
                                <span class="badge @(Model.AllowMultipleColleges ? "bg-info" : "bg-warning") fs-6">
                                    @(Model.AllowMultipleColleges ? "Allowed" : "Single College")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Description</label>
                        <p>@Model.Description</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Address) || !string.IsNullOrEmpty(Model.Email) || !string.IsNullOrEmpty(Model.Phone))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Contact Information</label>
                        <div class="row">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                <div class="col-md-6">
                                    <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                    <span>@Model.Address</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <div class="col-md-6">
                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                    <span>@Model.Email</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <div class="col-md-6">
                                    <i class="fas fa-phone me-2 text-muted"></i>
                                    <span>@Model.Phone</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Website))
                            {
                                <div class="col-md-6">
                                    <i class="fas fa-globe me-2 text-muted"></i>
                                    <a href="@Model.Website" target="_blank">@Model.Website</a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Colleges Section -->
        <div class="card-university card">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-school me-2"></i>Colleges
                    <span class="badge bg-primary ms-2">@Model.Colleges.Count</span>
                </h5>
                <a asp-controller="Colleges" asp-action="Create" asp-route-universityId="@Model.Id"
                   class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-2"></i>Add College
                </a>
            </div>
            <div class="card-body">
                @if (!Model.Colleges.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-school fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Colleges Found</h4>
                        <p class="text-muted">This university doesn't have any colleges yet.</p>
                        <a asp-controller="Colleges" asp-action="Create" asp-route-universityId="@Model.Id"
                           class="btn btn-primary mt-2">
                            <i class="fas fa-plus me-2"></i>Create First College
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>College Name</th>
                                    <th>Code</th>
                                    <th class="text-center">Departments</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var college in Model.Colleges)
                                {
                                    <tr>
                                        <td>
                                            <h6 class="mb-1 fw-semibold">@college.Name</h6>
                                            @if (!string.IsNullOrEmpty(college.Description))
                                            {
                                                <small class="text-muted">@college.Description</small>
                                            }
                                        </td>
                                        <td>@college.CollegeCode</td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@college.Departments.Count</span>
                                        </td>
                                        <td>
                                            <span class="badge @(college.IsActive ? "bg-success" : "bg-secondary")">
                                                @(college.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Colleges" asp-action="Details" asp-route-id="@college.Id"
                                                   class="btn btn-outline-primary" title="View Details">
                                                    @college.Name
                                                </a>
                                                <a asp-controller="Departments" asp-action="Create" asp-route-collegeId="@college.Id"
                                                   class="btn btn-outline-success" title="Add Department">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card-university card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-cog me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Colleges" asp-action="Create" asp-route-universityId="@Model.Id"
                       class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>Add New College
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-2"></i>Edit University
                    </a>
                    <a asp-action="Dashboard" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-tachometer-alt me-2"></i>University Dashboard
                    </a>
                    <a asp-action="Duplicate" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-copy me-2"></i>Duplicate University
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-2"></i>Delete University
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="card-university card mt-4">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 text-dark">
                    <i class="fas fa-chart-bar me-2"></i>Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-4">
                        <div class="display-6 fw-bold text-primary">@Model.Colleges.Count</div>
                        <div class="text-muted">Colleges</div>
                    </div>
                    <div class="mb-4">
                        <div class="display-6 fw-bold text-info">
                            @Model.Colleges.Sum(c => c.Departments.Count)
                        </div>
                        <div class="text-muted">Total Departments</div>
                    </div>
                    <div class="mb-4">
                        <div class="display-6 fw-bold text-warning">
                            @Model.Colleges.Sum(c => c.Departments.Sum(d => d.Branches.Count))
                        </div>
                        <div class="text-muted">Total Branches</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>