@model StudentManagementSystem.Models.ViewModels.DuplicateViewModel

@*@model DuplicateViewModel*@

@{
    ViewData["Title"] = "Duplicate University";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Duplicate University</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Duplicate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EntityType" />
                        <input type="hidden" asp-for="SourceId" />

                        <div class="form-group">
                            <label asp-for="NewName" class="control-label">New University Name</label>
                            <input asp-for="NewName" class="form-control" />
                            <span asp-validation-for="NewName" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input asp-for="CopySubItems" class="form-check-input" />
                            <label asp-for="CopySubItems" class="form-check-label">
                                Copy Complete Structure (Colleges, Departments, Branches, Courses)
                            </label>
                        </div>

                        <div class="alert alert-info">
                            <strong>Note:</strong> This will create a complete copy of the university structure including all colleges, departments, branches, and courses.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Duplicate University</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>