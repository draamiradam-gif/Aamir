@model IEnumerable<University>
@{
    ViewData["Title"] = "Universities";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h2 fw-bold text-primary mb-2">
                <i class="fas fa-university me-2"></i>Universities
            </h1>
            <p class="text-muted mb-0">Manage universities and their academic structure</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add University
        </a>
    </div>
</div>

<div class="card-university card">
    <div class="card-header bg-white py-3">
        <h5 class="card-title mb-0 text-dark">
            <i class="fas fa-list me-2"></i>University Directory
        </h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-university fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Universities Found</h4>
                <p class="text-muted">Get started by creating your first university.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus me-2"></i>Create University
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="universitiesTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>University Information</th>
                            <th class="text-center">Colleges</th>
                            <th>Contact Information</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var university in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-university text-primary fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-semibold">@university.Name</h6>
                                            <small class="text-muted">Code: @university.Code</small>
                                            @if (!string.IsNullOrEmpty(university.Description))
                                            {
                                                <p class="mb-0 small text-muted">@university.Description</p>
                                            }
                                            <small class="text-muted">Est. @university.EstablishmentYear</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary fs-6">@university.Colleges.Count</span>
                                </td>
                                <td>
                                    <div class="small">
                                        @if (!string.IsNullOrEmpty(university.Email))
                                        {
                                            <div><i class="fas fa-envelope me-1"></i> @university.Email</div>
                                        }
                                        @if (!string.IsNullOrEmpty(university.Phone))
                                        {
                                            <div><i class="fas fa-phone me-1"></i> @university.Phone</div>
                                        }
                                        @if (!string.IsNullOrEmpty(university.Website))
                                        {
                                            <div><i class="fas fa-globe me-1"></i> @university.Website</div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(university.IsActive ? "bg-success" : "bg-secondary")">
                                        @(university.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex flex-column gap-1">
                                        <!-- University Name as clickable link -->
                                        <a asp-action="Details" asp-route-id="@university.Id"
                                           class="btn btn-sm btn-outline-primary text-start" title="View University Details">
                                            <i class="fas fa-eye me-1"></i>@university.Name
                                        </a>
                                        <div class="d-flex justify-content-center gap-1">
                                            <a asp-controller="Colleges" asp-action="Create" asp-route-universityId="@university.Id"
                                               class="btn btn-sm btn-outline-success" title="Add College">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@university.Id"
                                               class="btn btn-sm btn-outline-secondary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Dashboard" asp-route-id="@university.Id"
                                               class="btn btn-sm btn-outline-info" title="University Dashboard">
                                                <i class="fas fa-tachometer-alt"></i>
                                            </a>
                                            <a asp-action="Duplicate" asp-route-id="@university.Id"
                                               class="btn btn-sm btn-outline-warning" title="Duplicate">
                                                <i class="fas fa-copy"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@university.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#universitiesTable').DataTable({
                "pageLength": 25,
                "responsive": true,
                "order": [[0, 'asc']],
                "columnDefs": [
                    { "orderable": false, "targets": [4] } // Make actions column not sortable
                ]
            });
        });
    </script>
}