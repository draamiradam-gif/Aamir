@model AdminApplicationViewModel
@{
    ViewData["Title"] = "Review Application";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                <i class="fas fa-clipboard-check me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted">Review and process admin application</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card card-modern">
                <div class="card-header">
                    <h5 class="mb-0">Application Details</h5>
                </div>
                <div class="card-body">
                    <!-- Application details display -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Applicant Information</h6>
                            <p><strong>Name:</strong> @Model.ApplicantName</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Phone:</strong> @Model.Phone</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Application Details</h6>
                            <p><strong>Applied For:</strong> @Model.AppliedAdminTypeName</p>
                            <p><strong>Applied Date:</strong> @Model.AppliedDate.ToString("MMMM dd, yyyy")</p>
                            <p><strong>Status:</strong> <span class="@Model.StatusBadgeClass">@Model.Status</span></p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted">Scope Requested</h6>
                            <p>
                                @if (!string.IsNullOrEmpty(Model.UniversityName))
                                {
                                    <span class="badge bg-primary me-2">University: @Model.UniversityName</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.FacultyName))
                                {
                                    <span class="badge bg-info me-2">Faculty: @Model.FacultyName</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.DepartmentName))
                                {
                                    <span class="badge bg-success">Department: @Model.DepartmentName</span>
                                }
                                @if (string.IsNullOrEmpty(Model.UniversityName) && string.IsNullOrEmpty(Model.FacultyName) && string.IsNullOrEmpty(Model.DepartmentName))
                                {
                                    <span class="badge bg-secondary">Global Access Requested</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted">Justification</h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    @Model.Justification
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Experience))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted">Experience</h6>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        @Model.Experience
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Qualifications))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted">Qualifications</h6>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        @Model.Qualifications
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <!-- Approve and Setup button -->
                            <form method="post" asp-action="ApproveAndSetup" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="reviewNotes" id="approveSetupNotes" />
                                <button type="button" class="btn btn-warning me-2"
                                        onclick="submitWithNotes('approveSetupNotes', 'Approve and Setup')">
                                    <i class="fas fa-user-plus me-1"></i>Approve & Setup Now
                                </button>
                            </form>

                            <!-- Approve button -->
                            <form method="post" asp-action="ReviewApplication" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="status" value="@ApplicationStatus.Approved" />
                                <input type="hidden" name="reviewNotes" id="approveNotes" />
                                <button type="button" class="btn btn-success me-2"
                                        onclick="submitWithNotes('approveNotes', 'Approve')">
                                    <i class="fas fa-check me-1"></i>Approve
                                </button>
                            </form>

                            <!-- Reject button -->
                            <form method="post" asp-action="ReviewApplication" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="status" value="@ApplicationStatus.Rejected" />
                                <input type="hidden" name="reviewNotes" id="rejectNotes" />
                                <button type="button" class="btn btn-danger"
                                        onclick="submitWithNotes('rejectNotes', 'Reject')">
                                    <i class="fas fa-times me-1"></i>Reject
                                </button>
                            </form>
                        </div>
                        <a href="@Url.Action("Applications")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Applications
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function submitWithNotes(fieldId, action) {
            const notes = prompt(`Enter notes for ${action}:`);
            if (notes !== null) {
                document.getElementById(fieldId).value = notes;
                document.querySelector(`form input[name="${fieldId}"]`).closest('form').submit();
            }
        }
    </script>
}