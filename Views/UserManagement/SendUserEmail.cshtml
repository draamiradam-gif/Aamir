@model string
@{
    ViewData["Title"] = "Send Email to User";
    var user = ViewBag.User as IdentityUser;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                <i class="fas fa-envelope me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted">Send email to user</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card-modern">
                <div class="card-header">
                    <h5 class="mb-0">Email Details</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SendUserEmail" asp-route-id="@Model">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">To</label>
                            <input type="text" class="form-control" readonly
                                   value="@user?.UserName &lt;@user?.Email&gt;">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Subject *</label>
                            <input type="text" name="subject" class="form-control" required
                                   placeholder="Enter email subject" value="Important System Update">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Message *</label>
                            <textarea name="message" class="form-control" rows="10" required
                                      placeholder="Enter your message here...">Dear @user?.UserName,

This is an important update regarding your account.

Thank you,
System Administration</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" onclick="return confirm('Send email to @user?.UserName?');">
                                <i class="fas fa-paper-plane me-2"></i>Send Email
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-modern">
                <div class="card-header">
                    <h5 class="mb-0">User Details</h5>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt>Username:</dt>
                        <dd>@user?.UserName</dd>

                        <dt>Email:</dt>
                        <dd>@user?.Email</dd>

                        @if (!string.IsNullOrEmpty(user?.PhoneNumber))
                        {
                            <dt>Phone:</dt>
                            <dd>@user?.PhoneNumber</dd>
                        }

                        <dt>Email Confirmed:</dt>
                        <dd>
                            @if (user?.EmailConfirmed == true)
                            {
                                <span class="badge bg-success">Confirmed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Not Confirmed</span>
                            }
                        </dd>

                        <dt>Account Created:</dt>
                        <dd>
                            @if (user is Microsoft.AspNetCore.Identity.IdentityUser identityUser && identityUser.LockoutEnd.HasValue)
                            {
                                <span>Locked until @identityUser.LockoutEnd?.ToString("MMMM dd, yyyy")</span>
                            }
                            else
                            {
                                <span>Active</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card-modern mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Email Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Be clear and concise</li>
                        <li>Use a relevant subject line</li>
                        <li>Include important dates/deadlines</li>
                        <li>Provide clear instructions if needed</li>
                        <li>Include contact information for follow-up</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>